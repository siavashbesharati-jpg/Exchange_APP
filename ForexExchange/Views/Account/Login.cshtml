@model LoginViewModel
@{
    ViewData["Title"] = "ورود";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">ورود به سیستم</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <input asp-for="@ViewData["ReturnUrl"]" type="hidden" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">شماره تلفن</label>
                            <input asp-for="PhoneNumber" class="form-control" type="text" placeholder="هر فرمت شماره تلفن قابل قبول است" />
                            <small class="form-text text-muted">شماره ایرانی: 11 رقم با 0 (مثال: 09121234567) یا بین‌المللی با + (مثال: +919120674032)</small>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">رمز عبور</label>
                            <input asp-for="Password" class="form-control" type="password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label">
                                مرا به خاطر بسپار
                            </label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">ورود</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p>حساب کاربری ندارید؟ <a asp-action="Register">ثبت نام کنید</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
