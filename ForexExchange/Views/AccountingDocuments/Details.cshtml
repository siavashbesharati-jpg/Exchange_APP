@model ForexExchange.Models.AccountingDocument

@{
    ViewData["Title"] = $"جزئیات سند حسابداری #{Model.Id}";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">جزئیات سند حسابداری</h2>
            <div class="text-muted small">سند #@Model.Id</div>
        </div>
        <div>
            @if (!Model.IsVerified)
            {
                <form asp-action="Confirm" asp-route-id="@Model.Id" method="post" class="d-inline" 
                      onsubmit="return confirm('آیا از تأیید این سند اطمینان دارید؟ این عملیات ترازها را بروزرسانی خواهد کرد.')">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success me-2">
                        <i class="fas fa-check"></i> تأیید سند
                    </button>
                </form>
            }
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> ویرایش
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> بازگشت به لیست
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">اطلاعات سند حسابداری</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">نوع سند:</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Type)
                            {
                                case ForexExchange.Models.DocumentType.Cash:
                                    <span class="badge bg-success">نقدی</span>
                                    break;
                                case ForexExchange.Models.DocumentType.BankStatement:
                                    <span class="badge bg-primary">رسید بانکی</span>
                                    break;
                                case ForexExchange.Models.DocumentType.Havala:
                                    <span class="badge bg-info">حواله</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-4">عنوان سند:</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">مبلغ:</dt>
                        <dd class="col-sm-8">
                            <strong>@(Model.CurrencyCode == "IRR" ? Model.Amount.ToString("N0") : Model.Amount.ToString("N2")) @Model.CurrencyCode</strong>
                        </dd>

                        <dt class="col-sm-4">تاریخ سند:</dt>
                        <dd class="col-sm-8">@Model.DocumentDate.ToPersianDateTextify()</dd>

                        <dt class="col-sm-4">پرداخت‌کننده:</dt>
                        <dd class="col-sm-8">
                            @if (Model.PayerType == ForexExchange.Models.PayerType.Customer && Model.Customer != null)
                            {
                                <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.CustomerId">
                                    @Model.Customer.FullName
                                </a>
                            }
                            else
                            {
                                <span>سیستم</span>
                            }
                        </dd>

                        <dt class="col-sm-4">دریافت‌کننده:</dt>
                        <dd class="col-sm-8">
                            @if (Model.PayerType == ForexExchange.Models.PayerType.System && Model.Customer != null)
                            {
                                <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.CustomerId">
                                    @Model.Customer.FullName
                                </a>
                            }
                            else if (Model.BankAccount != null)
                            {
                                <span>@Model.BankAccount.BankName - @Model.BankAccount.AccountNumber</span>
                            }
                            else
                            {
                                <span>سیستم</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
                        {
                            <dt class="col-sm-4">شماره مرجع:</dt>
                            <dd class="col-sm-8">@Model.ReferenceNumber</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">توضیحات:</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                        }

                        <dt class="col-sm-4">وضعیت تأیید:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsVerified)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check"></i> تأیید شده
                                </span>
                                @if (Model.VerifiedAt.HasValue)
                                {
                                    <br><small class="text-muted">در تاریخ @Model.VerifiedAt.Value.ToPersianDateTextify()</small>
                                }
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-clock"></i> در انتظار تأیید
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">تاریخ ایجاد:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToPersianDateTextify()</dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.FileName))
                    {
                        <hr>
                        <div class="mb-3">
                            <h6>فایل پیوست:</h6>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-file me-2"></i>
                                <span>@Model.FileName</span>
                                <a href="#" class="btn btn-sm btn-outline-primary ms-3" onclick="downloadFile(@Model.Id)">
                                    <i class="fas fa-download"></i> دانلود
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function downloadFile(documentId) {
            // TODO: Implement file download functionality
            alert('قابلیت دانلود فایل هنوز پیاده‌سازی نشده است.');
        }
    </script>
}
