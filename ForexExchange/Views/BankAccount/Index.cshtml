@model IEnumerable<ForexExchange.Models.BankAccount>

@{
    ViewData["Title"] = "مدیریت حساب‌های بانکی";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-university text-primary me-2"></i>
                        مدیریت حساب‌های بانکی
                    </h1>
                    <p class="text-muted mt-1">مدیریت حساب‌های بانکی مشتریان سیستم</p>
                </div>
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        حساب جدید
                    </a>
                </div>
            </div>
        </div>
    </div>



    <!-- Bank Accounts List -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        لیست حساب‌های بانکی
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>بانک</th>
                                        <th>ارز</th>
                                        <th>موجودی </th>
                                        <th>وضعیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model)
                                    {
                                        <tr>

                                            <td>
                                                <strong>@account.BankName</strong>
                                                @if (!string.IsNullOrEmpty(account.Branch))
                                                {
                                                    <br>
                                        
                                                    <small class="text-muted">@account.Branch</small>
                                                }
                                            </td>

                                            <td>
                                                <span class="badge bg-info">@account.CurrencyCode</span>
                                                @if (account.IsDefault)
                                                {
                                                    <span class="badge bg-warning ms-1">پیش‌فرض</span>
                                                }
                                        </td>
                                        <td>
                                            <span dir="ltr">
                                                @(account.CurrencyCode == "IRR" ? account.AccountBalance.ToString("N0") :
                                                                                            account.AccountBalance.ToString("N2"))
                                                </span>
                                            </td>
                                            <td>
                                                @if (account.IsActive)
                                                {
                                                    <span class="badge bg-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">غیرفعال</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = account.Id })"
                                                        class="btn btn-sm btn-outline-info" title="جزئیات">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = account.Id })"
                                                        class="btn btn-sm btn-outline-warning" title="ویرایش">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = account.Id })"
                                                        class="btn btn-sm btn-outline-danger" title="حذف"
                                                        onclick="return confirm('آیا از حذف این حساب بانکی اطمینان دارید؟')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-university fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">هیچ حساب بانکی یافت نشد</h4>
                            <p class="text-muted">هنوز هیچ حساب بانکی برای مشتریان سیستم ایجاد نشده است.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                ایجاد اولین حساب
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh functionality (optional)
        $(document).ready(function () {
            // Add any client-side functionality here
        });
    </script>
}
