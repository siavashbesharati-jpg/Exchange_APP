@model IEnumerable<ForexExchange.Models.BankAccount>

@{
    ViewData["Title"] = "حساب‌های بانکی سیستم";
    var systemCustomer = ViewBag.SystemCustomer as ForexExchange.Models.Customer;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-cogs text-success me-2"></i>
                        حساب‌های بانکی سیستم
                    </h1>
                    <p class="text-muted mt-1">مدیریت حساب‌های بانکی مشتری سیستم</p>
                </div>
                <div>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i>
                        بازگشت
                    </a>
                    <a href="@Url.Action("Create", new { customerId = systemCustomer?.Id })" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>
                        حساب جدید
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- System Customer Info -->
    @if (systemCustomer != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0">
                            <i class="fas fa-crown me-2"></i>
                            مشتری سیستم
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>نام:</strong> @systemCustomer.FullName</p>
                                <p class="mb-1"><strong>ایمیل:</strong> @systemCustomer.Email</p>
                                <p class="mb-1"><strong>نوع مشتری:</strong> <span class="badge bg-success">سیستم</span></p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>تاریخ ایجاد:</strong> @systemCustomer.CreatedAt.ToString("yyyy/MM/dd")</p>
                                <p class="mb-1"><strong>وضعیت:</strong>
                                    @if (systemCustomer.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غیرفعال</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Bank Accounts List -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        حساب‌های بانکی سیستم
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>بانک</th>
                                        <th>شماره حساب</th>
                                        <th>ارز</th>
                                        <th>وضعیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@account.BankName</strong>
                                                @if (!string.IsNullOrEmpty(account.Branch))
                                                {
                                                    <br><small class="text-muted">@account.Branch</small>
                                                }
                                            </td>
                                            <td>
                                                <code>@account.AccountNumber</code>
                                                @if (!string.IsNullOrEmpty(account.CardNumberLast4))
                                                {
                                                    <br><small class="text-muted">کارت: ****-****-****-@account.CardNumberLast4</small>
                                                }
                                                @if (!string.IsNullOrEmpty(account.IBAN))
                                                {
                                                    <br><small class="text-muted">شبا: @account.IBAN</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@account.CurrencyCode</span>
                                                @if (account.IsDefault)
                                                {
                                                    <span class="badge bg-warning ms-1">پیش‌فرض</span>
                                                }
                                            </td>
                                            <td>
                                                @if (account.IsActive)
                                                {
                                                    <span class="badge bg-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">غیرفعال</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", new { id = account.Id })"
                                                       class="btn btn-sm btn-outline-warning"
                                                       title="ویرایش">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = account.Id })"
                                                       class="btn btn-sm btn-outline-danger"
                                                       title="حذف"
                                                       onclick="return confirm('آیا از حذف این حساب بانکی اطمینان دارید؟')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Summary Stats -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-chart-bar me-2"></i>
                                            آمار حساب‌های بانکی سیستم
                                        </h6>
                                        <div class="row text-center">
                                            <div class="col-md-3">
                                                <h4 class="text-primary">@Model.Count()</h4>
                                                <small class="text-muted">کل حساب‌ها</small>
                                            </div>
                                            <div class="col-md-3">
                                                <h4 class="text-success">@Model.Count(a => a.IsActive)</h4>
                                                <small class="text-muted">حساب‌های فعال</small>
                                            </div>
                                            <div class="col-md-3">
                                                <h4 class="text-warning">@Model.Count(a => a.IsDefault)</h4>
                                                <small class="text-muted">حساب‌های پیش‌فرض</small>
                                            </div>
                                            <div class="col-md-3">
                                                <h4 class="text-info">@Model.Select(a => a.CurrencyCode).Distinct().Count()</h4>
                                                <small class="text-muted">ارزهای مختلف</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-university fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">هیچ حساب بانکی سیستمی یافت نشد</h4>
                            <p class="text-muted">مشتری سیستم هنوز هیچ حساب بانکی ندارد.</p>
                            <a href="@Url.Action("Create", new { customerId = systemCustomer?.Id })" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>
                                ایجاد حساب بانکی سیستم
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
