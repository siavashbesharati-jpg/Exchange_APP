@model IEnumerable<ForexExchange.Models.Currency>
@{
    ViewData["Title"] = "مدیریت ارزها";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="h3">مدیریت ارزها</h1>
            <div>
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> افزودن ارز</a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>کد</th>
                            <th>نام</th>
                            <th>نام فارسی</th>
                            <th>نماد</th>
                            <th>پایه</th>
                            <th>ترتیب</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td><span class="badge @(c.Code == "IRR" ? "bg-secondary" : "bg-primary")">@c.Code</span></td>
                            <td>@c.Name</td>
                            <td>@c.PersianName</td>
                            <td>@c.Symbol</td>
                            <td>
                                @if (c.Code == "IRR")
                                {
                                    <span class="badge bg-dark">ارز پایه</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@c.DisplayOrder</td>
                            <td>
                                @if (c.IsActive)
                                {
                                    <span class="badge bg-success">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">غیرفعال</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">ویرایش</a>
                                    <form asp-action="ToggleActive" asp-route-id="@c.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm @(c.IsActive ? "btn-outline-danger" : "btn-outline-success")">
                                            @(c.IsActive ? "غیرفعال" : "فعال")
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}
