@model ForexExchange.Models.Customer

@{
    ViewData["Title"] = "جزئیات مشتری";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">جزئیات مشتری</h1>
                <div>
                    <div class="btn-group me-2" role="group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-share-alt"></i> ایجاد لینک اشتراک
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="#" onclick="generateShareableLink(@Model.Id, 0, 'صورت حساب جامع')">
                                    <i class="fas fa-file-alt"></i> صورت حساب جامع
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" onclick="generateShareableLink(@Model.Id, 1, 'صورت حساب معاملات')">
                                    <i class="fas fa-exchange-alt"></i> صورت حساب معاملات
                                </a>
                            </li>
                        </ul>
                    </div>
                    <a asp-action="ShareableLinks" asp-route-id="@Model.Id" class="btn btn-info me-2">
                        <i class="fas fa-link"></i> مدیریت لینک‌ها
                    </a>
                    <a asp-action="Index" class="btn btn-secondary me-2">بازگشت به لیست</a>
                    <a asp-action="Profile" asp-route-id="@Model.Id" class="btn btn-primary">پروفایل کامل</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">اطلاعات شخصی</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>نام کامل:</strong></div>
                        <div class="col-sm-8">@Model.FullName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>شماره تلفن:</strong></div>
                        <div class="col-sm-8">@Model.PhoneNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>ایمیل:</strong></div>
                        <div class="col-sm-8">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>کد ملی:</strong></div>
                        <div class="col-sm-8">@Model.NationalId</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>تاریخ عضویت:</strong></div>
                        <div class="col-sm-8">@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm:ss")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>وضعیت:</strong></div>
                        <div class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">فعال</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غیرفعال</span>
                            }
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>آدرس:</strong></div>
                            <div class="col-sm-8">@Model.Address</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">خلاصه فعالیت</h5>
                </div>
                <div class="card-body">
                    @{
                        // Try to show customer's current balances if available via navigation property
                        var customerBalances = Model.Balances?.ToList() ?? new List<ForexExchange.Models.CustomerBalance>();
                    }
                    @if (customerBalances.Any())
                    {
                        <div class="mb-3">
                            <h6 class="mb-2">موجودی اولیه مشتری</h6>
                            <div class="row g-2">
                                @foreach (var b in customerBalances)
                                {
                                    <div class="col-6">
                                        <div class="border rounded p-2 small d-flex justify-content-between">
                                            <span class="text-muted">@b.CurrencyCode</span>
                                            <strong dir="ltr">@(b.CurrencyCode == "IRR" ? b.Balance.ToString("N0") : b.Balance.ToString("N2"))</strong>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h4>@Model.Orders.Count</h4>
                                    <p class="mb-0">کل معامله‌ها</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h4>@ViewBag.CustomerStats.TotalTransactions</h4>
                                    <p class="mb-0">کل تراکنش‌ها</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h4>@ViewBag.CustomerStats.TotalAccountingDocuments</h4>
                                    <p class="mb-0">اسناد حسابداری</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h4>0</h4>
                                    <p class="mb-0">معامله‌های باز</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center mt-3">
                        <a asp-action="Profile" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-user-circle"></i> مشاهده پروفایل کامل
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    @if (Model.Orders.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">آخرین فعالیت‌ها</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Recent Orders -->
                            @if (Model.Orders.Any())
                            {
                                <div class="col-md-4">
                                    <h6>آخرین معامله‌ها</h6>
                                    @foreach (var order in Model.Orders.OrderByDescending(o => o.CreatedAt).Take(3))
                                    {
                                        <div class="border rounded p-2 mb-2">
                                            <small>
                                                <strong>#@order.Id</strong> - 
                                                <!-- Removed OrderType display, now just show currency pair or amount -->
                                                @(order.FromCurrency?.Code == "IRR" ? order.Amount.ToString("N0") : order.Amount.ToString("N2")) @order.FromCurrency?.PersianName <small class="text-muted">(@order.CurrencyPair)</small>
                                                <br>
                                                <span class="text-muted">@order.CreatedAt.ToString("MM/dd HH:mm")</span>
                                            </small>
                                        </div>
                                    }
                                    <a asp-controller="Orders" asp-action="Index" asp-route-customerId="@Model.Id" class="btn btn-sm btn-outline-primary">مشاهده همه</a>
                                </div>
                            }

                            <!-- Recent Transactions -->
                            @* TODO: Replace with AccountingDocument display when implementing new architecture *@
                            @*
                            @{
                                var recentTransactions = Model.BuyTransactions.Concat(Model.SellTransactions)
                                    .OrderByDescending(t => t.CreatedAt)
                                    .Take(3)
                                    .ToList();
                            }
                            @if (recentTransactions.Any())
                            {
                                <div class="col-md-4">
                                    <h6>آخرین تراکنش‌ها</h6>
                                    @foreach (var transaction in recentTransactions)
                                    {
                                        <div class="border rounded p-2 mb-2">
                                            <small>
                                                <strong>#@transaction.Id</strong> - 
                                                @(transaction.BuyerCustomerId == Model.Id ? "خرید" : "فروش")
                                                @(transaction.FromCurrency?.Code == "IRR" ? transaction.Amount.ToString("N0") : transaction.Amount.ToString("N2")) @transaction.FromCurrency?.PersianName <small class="text-muted">(@transaction.CurrencyPair)</small>
                                                <br>
                                                <span class="text-muted">@transaction.CreatedAt.ToString("MM/dd HH:mm")</span>
                                            </small>
                                        </div>
                                    }
                                    <a asp-controller="Settlements" asp-action="Index" class="btn btn-sm btn-outline-success">مشاهده همه</a>
                                </div>
                            }
                            *@

                            <!-- Recent Receipts -->
                            @* TODO: Replace with AccountingDocument display when implementing new architecture *@
                            @*
                            @if (Model.Receipts.Any())
                            {
                                <div class="col-md-4">
                                    <h6>آخرین رسیدها</h6>
                                    @foreach (var receipt in Model.Receipts.OrderByDescending(r => r.UploadedAt).Take(3))
                                    {
                                        <div class="border rounded p-2 mb-2">
                                            <small>
                                                <strong>#@receipt.Id</strong> - 
                                                @(receipt.Type == ForexExchange.Models.ReceiptType.RecivreRecipt ? "دریافت وجه" : "گردش حساب")
                                                @if (receipt.IsVerified)
                                                {
                                                    <span class="badge bg-success">✓</span>
                                                }
                                                <br>
                                                <span class="text-muted">@receipt.UploadedAt.ToString("MM/dd HH:mm")</span>
                                            </small>
                                        </div>
                                    }
                                    <a asp-controller="Receipts" asp-action="Index" class="btn btn-sm btn-outline-info">مشاهده همه</a>
                                </div>
                            }
                            *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Shareable Link Generation Modal -->
<div class="modal fade" id="shareableLinkModal" tabindex="-1" aria-labelledby="shareableLinkModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="shareableLinkModalLabel">ایجاد لینک اشتراک</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="shareableLinkForm" method="post" asp-action="GenerateShareableLink">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="customerId" id="customerId" value="@Model.Id" />
                    <input type="hidden" name="linkType" id="linkType" />
                    
                    <div class="mb-3">
                        <label class="form-label">نوع صورت حساب:</label>
                        <div id="linkTypeDisplay" class="form-control-plaintext fw-bold"></div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="expirationDays" class="form-label">مدت اعتبار (روز):</label>
                        <select class="form-select" name="expirationDays" id="expirationDays">
                            <option value="1">1 روز</option>
                            <option value="3">3 روز</option>
                            <option value="7" selected>7 روز (یک هفته)</option>
                            <option value="14">14 روز (دو هفته)</option>
                            <option value="30">30 روز (یک ماه)</option>
                        </select>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        این لینک بدون نیاز به ورود به سیستم قابل دسترسی خواهد بود و تا تاریخ انقضا معتبر است.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-share-alt"></i> ایجاد لینک
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Success Modal for displaying generated link -->
@if (TempData["ShareableUrl"] != null)
{
    <div class="modal fade show" id="successModal" tabindex="-1" style="display: block;" aria-modal="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-check-circle"></i> لینک با موفقیت ایجاد شد
                    </h5>
                    <button type="button" class="btn-close btn-close-white" onclick="closeSuccessModal()"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">لینک اشتراک:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="generatedUrl" value="@TempData["ShareableUrl"]" readonly>
                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">
                                <i class="fas fa-copy"></i> کپی
                            </button>
                        </div>
                    </div>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        لطفاً این لینک را در مکان امنی ذخیره کنید. پس از بستن این پنجره، امکان مشاهده مجدد لینک وجود نخواهد داشت.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="closeSuccessModal()">تأیید</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@section Scripts {
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <script>
        function generateShareableLink(customerId, linkType, linkTypeName) {
            document.getElementById('customerId').value = customerId;
            document.getElementById('linkType').value = linkType;
            document.getElementById('linkTypeDisplay').textContent = linkTypeName;
            
            var modal = new bootstrap.Modal(document.getElementById('shareableLinkModal'));
            modal.show();
        }
        
        function copyToClipboard() {
            var urlInput = document.getElementById('generatedUrl');
            urlInput.select();
            urlInput.setSelectionRange(0, 99999); // For mobile devices
            
            try {
                document.execCommand('copy');
                // Show success feedback
                var button = event.target.closest('button');
                var originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> کپی شد';
                button.classList.remove('btn-outline-secondary');
                button.classList.add('btn-success');
                
                setTimeout(function() {
                    button.innerHTML = originalText;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-secondary');
                }, 2000);
            } catch (err) {
                alert('خطا در کپی کردن لینک');
            }
        }
        
        function closeSuccessModal() {
            document.getElementById('successModal').style.display = 'none';
            document.querySelector('.modal-backdrop').remove();
        }
    </script>
}
