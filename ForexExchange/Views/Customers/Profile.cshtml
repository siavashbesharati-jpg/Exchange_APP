@model ForexExchange.Models.Customer

@{
    ViewData["Title"] = "پروفایل مشتری";
    var stats = ViewBag.CustomerStats as ForexExchange.Models.CustomerProfileStats;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">پروفایل مشتری: @Model.FullName</h1>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">ویرایش</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Overview Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                    <h5>@stats?.TotalOrders</h5>
                    <p class="mb-0">کل معامله‌ها</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x mb-2"></i>
                    <h5>@stats?.CompletedTransactions</h5>
                    <p class="mb-0">تراکنش‌های موفق</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <i class="fas fa-file-invoice fa-2x mb-2"></i>
                    <h5>@stats?.TotalAccountingDocuments</h5>
                    <p class="mb-0">اسناد حسابداری</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <i class="fas fa-coins fa-2x mb-2"></i>
                    <h5>@stats?.TotalVolumeInToman.ToString("N0")</h5>
                    <p class="mb-0">حجم کل (تومان)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Customer Information -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">اطلاعات شخصی</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-user fa-2x text-muted"></i>
                        </div>
                    </div>
                    
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>نام کامل:</strong></div>
                        <div class="col-sm-7">@Model.FullName</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>تلفن:</strong></div>
                        <div class="col-sm-7">@Model.PhoneNumber</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>ایمیل:</strong></div>
                        <div class="col-sm-7">@Model.Email</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>کد ملی:</strong></div>
                        <div class="col-sm-7">@Model.NationalId</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>تاریخ عضویت:</strong></div>
                        <div class="col-sm-7">@Model.CreatedAt.ToString("yyyy/MM/dd")</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>مدت عضویت:</strong></div>
                        <div class="col-sm-7">@stats?.RegistrationDays روز</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>وضعیت:</strong></div>
                        <div class="col-sm-7">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">فعال</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غیرفعال</span>
                            }
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="row mb-2">
                            <div class="col-sm-5"><strong>آدرس:</strong></div>
                            <div class="col-sm-7">@Model.Address</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Customer Statistics -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">آمار عملکرد</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">نرخ تکمیل معامله‌ها</label>
                        <div class="progress mb-1">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @stats?.CompletionRate.ToString("F1")%" aria-valuenow="@stats?.CompletionRate" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted">@stats?.CompletionRate.ToString("F1")% (@stats?.CompletedOrders از @stats?.TotalOrders)</small>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">نرخ تأیید اسناد حسابداری</label>
                        <div class="progress mb-1">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @stats?.VerificationRate.ToString("F1")%" aria-valuenow="@stats?.VerificationRate" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted">@stats?.VerificationRate.ToString("F1")% (@stats?.VerifiedAccountingDocuments از @stats?.TotalAccountingDocuments)</small>
                    </div>
                    
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">میانگین معامله:</small>
                            <div class="fw-bold">@stats?.AverageOrderValue.ToString("N0") تومان</div>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">معامله‌های باز:</small>
                            <div class="fw-bold text-warning">@stats?.PendingOrders</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Timeline -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="profileTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab">
                                معامله‌ها (@Model.Orders.Count)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="transactions-tab" data-bs-toggle="tab" data-bs-target="#transactions" type="button" role="tab">
                                تراکنش‌ها (@ViewBag.CustomerStats.TotalTransactions)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="receipts-tab" data-bs-toggle="tab" data-bs-target="#receipts" type="button" role="tab">
                                اسناد حسابداری (@ViewBag.CustomerStats.TotalAccountingDocuments)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="financial-tab" data-bs-toggle="tab" data-bs-target="#financial" type="button" role="tab">
                                <i class="fas fa-chart-line me-1"></i>
                                وضعیت مالی
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="activity-tab" data-bs-toggle="tab" data-bs-target="#activity" type="button" role="tab">
                                فعالیت‌ها
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="profileTabsContent">
                        <!-- Orders Tab -->
                        <div class="tab-pane fade show active" id="orders" role="tabpanel">
                            @if (Model.Orders.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>شماره</th>
                                                <th>از ارز</th>
                                                <th>به ارز</th>
                                                <th>مبلغ</th>
                                                <th>نرخ</th>
                                                <th>وضعیت</th>
                                                <th>تاریخ</th>
                                                <th>عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in Model.Orders.Take(10))
                                            {
                                                <tr>
                                                    <td>#@order.Id</td>
                                                    <td>@order.FromCurrency?.Code</td>
                                                    <td>@order.ToCurrency?.Code</td>
                                                    <td>@order.Amount.ToString("N0")</td>
                                                    <td>@order.Rate.ToString("N4")</td>
                                                    <td>@order.CreatedAt.ToString("MM/dd")</td>
                                                    <td>
                                                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">جزئیات</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.Orders.Count > 10)
                                {
                                    <div class="text-center">
                                        <a asp-controller="Orders" asp-action="Index" asp-route-customerId="@Model.Id" class="btn btn-outline-primary">
                                            مشاهده همه معامله‌ها (@Model.Orders.Count)
                                        </a>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">هیچ معاملهی ثبت نشده است.</p>
                                </div>
                            }
                        </div>

                        <!-- Transactions Tab -->
                        <div class="tab-pane fade" id="transactions" role="tabpanel">
                            @* TODO: Replace with AccountingDocument display when implementing new architecture *@
                            @*
                            @{
                                var allTransactions = Model.BuyTransactions.Concat(Model.SellTransactions)
                                    .OrderByDescending(t => t.CreatedAt)
                                    .ToList();
                            }
                            @if (allTransactions.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>شماره</th>
                                                <th>مبلغ</th>
                                                <th>وضعیت</th>
                                                <th>تاریخ</th>
                                                <th>عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var transaction in allTransactions.Take(10))
                                            {
                                                <tr>
                                                    <td>#@transaction.Id</td>
                                                   
                                                
                                                    <td>
                                                        @transaction.Amount.ToString("N0") @transaction.FromCurrency?.PersianName
                                                        <small class="text-muted">(@transaction.CurrencyPair)</small>
                                                    </td>
                                                    <td>
                                                        @if (transaction.Status == ForexExchange.Models.TransactionStatus.Completed)
                                                        {
                                                            <span class="badge bg-success">تکمیل</span>
                                                        }
                                                        else if (transaction.Status == ForexExchange.Models.TransactionStatus.Pending)
                                                        {
                                                            <span class="badge bg-secondary">در انتظار</span>
                                                        }
                                                        else if (transaction.Status == ForexExchange.Models.TransactionStatus.Failed)
                                                        {
                                                            <span class="badge bg-danger">ناموفق</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-info">در حال پردازش</span>
                                                        }
                                                    </td>
                                                    <td>@transaction.CreatedAt.ToString("MM/dd")</td>
                                                    <td>
                                                        <a asp-controller="Settlements" asp-action="Details" asp-route-id="@transaction.Id" class="btn btn-sm btn-outline-primary">جزئیات</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">هیچ تراکنشی انجام نشده است.</p>
                                </div>
                            }
                            *@
                            <div class="text-center py-4">
                                <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Transaction data will be available after implementing the new AccountingDocument architecture.</p>
                            </div>
                        </div>

                        <!-- Receipts Tab -->
                        <div class="tab-pane fade" id="receipts" role="tabpanel">
                            @* TODO: Replace with AccountingDocument display when implementing new architecture *@
                            @*
                            @if (Model.Receipts.Any())
                            {
                                <div class="row">
                                    @foreach (var receipt in Model.Receipts.Take(12))
                                    {
                                        <div class="col-md-4 mb-3">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">
                                                        رسید #@receipt.Id
                                                        @if (receipt.IsVerified)
                                                        {
                                                            <span class="badge bg-success">تأیید شده</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-warning">در انتظار</span>
                                                        }
                                                    </h6>
                                                    <p class="card-text">
                                                        <small class="text-muted">@receipt.UploadedAt.ToString("yyyy/MM/dd HH:mm")</small><br>
                                                        @if (!string.IsNullOrEmpty(receipt.ParsedAmount))
                                                        {
                                                            <strong>مبلغ:</strong> @receipt.ParsedAmount<br>
                                                        }
                                                        @if (!string.IsNullOrEmpty(receipt.ParsedReferenceId))
                                                        {
                                                            <strong>پیگیری:</strong> @receipt.ParsedReferenceId
                                                        }
                                                    </p>
                                                    <a asp-controller="Receipts" asp-action="Details" asp-route-id="@receipt.Id" class="btn btn-sm btn-primary">مشاهده</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">هیچ رسیدی آپلود نشده است.</p>
                                </div>
                            }
                            *@
                            <div class="text-center py-4">
                                <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Receipt data will be available after implementing the new AccountingDocument architecture.</p>
                            </div>
                        </div>

                        <!-- Financial Status Tab -->
                        <div class="tab-pane fade" id="financial" role="tabpanel">
                            @{
                                var customerDebtCredit = ViewBag.CustomerDebtCredit as ForexExchange.Models.CustomerDebtCredit;
                            }
                            @if (customerDebtCredit != null)
                            {
                                 var customerBalances = Model.Balances?.ToList() ?? new List<ForexExchange.Models.CustomerBalance>(); 
                                @if (customerBalances.Any())
                                {
                                    <div class="row mb-3">
                                        <div class="col-12">
                                            <div class="card border-0 shadow-sm">
                                                <div class="card-header bg-light">
                                                    <strong>موجودی‌های اولیه مشتری</strong>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row g-2">
                                                        @foreach (var b in customerBalances)
                                                        {
                                                            <div class="col-md-3 col-sm-4 col-6">
                                                                <div class="border rounded p-2 d-flex justify-content-between small">
                                                                    <span class="text-muted">@b.CurrencyCode</span>
                                                                    <strong dir="ltr">@b.Balance.ToString("N2")</strong>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="row mb-4">
                                    <!-- Net Balance Overview -->
                                    <div class="col-md-4">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-header bg-light text-center">
                                                <h5 class="mb-0">
                                                    <i class="bi bi-cash-stack me-2"></i>
                                                   ارزهای فعال
                                                </h5>
                                            </div>
                                            <div class="card-body text-center">
                                                <div class="balance-display mb-3">

                                                    <h3 class="text-success mb-2 fw-bold">
                                                         @customerDebtCredit.CurrencyBalances.Count
                                                    </h3>
                                                </div>
                                              
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Active Orders Summary -->
                                    <div class="col-md-4">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-header bg-light text-center">
                                                <h5 class="mb-0">
                                                    <i class="bi bi-clipboard-data me-2"></i>
                                                    معاملات فعال
                                                </h5>
                                            </div>
                                            <div class="card-body text-center">
                                                <h3 class="text-primary mb-2 fw-bold">@customerDebtCredit.ActiveOrderCount</h3>
                                                <small class="text-muted">معامله باز یا نیمه تکمیل</small>
                                                <div class="mt-3">
                                                    <a href="@Url.Action("Create", "Orders", new { customerId = Model.Id })" class="btn btn-success btn-sm">
                                                        <i class="bi bi-plus-circle me-1"></i>
                                                        معامله جدید
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Quick Actions -->
                                    <div class="col-md-4">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-header bg-light text-center">
                                                <h5 class="mb-0">
                                                    <i class="bi bi-gear me-2"></i>
                                                    عملیات سریع
                                                </h5>
                                            </div>
                                            <div class="card-body text-center">
                                                <div class="d-grid gap-2">
                                                    <a href="@Url.Action("Index", "Orders", new { customerId = Model.Id })" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-list me-1"></i>
                                                        همه معاملات
                                                    </a>
                                                    <a href="@Url.Action("Index", "CustomerTransactions", new { customerId = Model.Id })" class="btn btn-outline-info btn-sm">
                                                        <i class="bi bi-arrow-left-right me-1"></i>
                                                        تراکنش‌ها
                                                    </a>
                                                    <a href="@Url.Action("Index", "Receipts", new { customerId = Model.Id })" class="btn btn-outline-secondary btn-sm">
                                                        <i class="bi bi-receipt me-1"></i>
                                                        رسیدها
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Currency Breakdown -->
                                @if (customerDebtCredit.CurrencyBalances.Any())
                                {
                                    <div class="row mb-4">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h5 class="mb-0">
                                                        <i class="bi bi-currency-exchange me-2"></i>
                                                       تراز ارزی
                                                    </h5>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row g-3">
                                                        @foreach (var currencyBalance in customerDebtCredit.CurrencyBalances)
                                                        {
                                                            <div class="col-xl-3 col-lg-4 col-md-6">
                                                                <div class="card h-100 border-0 shadow-sm currency-card">
                                                                    <div class="card-body text-center">
                                                                        <div class="currency-header mb-2">
                                                                            <h6 class="mb-1 fw-bold">@currencyBalance.CurrencyName</h6>
                                                                            <small class="text-muted">@currencyBalance.CurrencyCode</small>
                                                                        </div>

                                                                        <div class="balance-info">
                                                                            <div class="balance-amount mb-2" dir=ltr>
                                                                                <span class="fw-bold @(currencyBalance.Balance >= 0 ? "text-success" : "text-danger")">
                                                                                    @currencyBalance.Balance.ToString("N0")
                                                                                </span>
                                                                            </div>

                                                                            <div class="balance-breakdown small">
                                                                                @if (currencyBalance.DebtAmount > 0)
                                                                                {
                                                                                    <div class="text-danger">
                                                                                        <i class="bi bi-dash-circle me-1"></i>
                                                                                        بدهی: @currencyBalance.DebtAmount.ToString("N0")
                                                                                    </div>
                                                                                }
                                                                                @if (currencyBalance.CreditAmount > 0)
                                                                                {
                                                                                    <div class="text-success">
                                                                                        <i class="bi bi-plus-circle me-1"></i>
                                                                                        بستانکاری: @currencyBalance.CreditAmount.ToString("N0")
                                                                                    </div>
                                                                                }
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                              
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="bi bi-cash-stack text-muted" style="font-size: 3rem;"></i>
                                        <h5 class="text-muted mt-3">اطلاعات مالی یافت نشد</h5>
                                        <p class="text-muted">این مشتری هنوز هیچ معامله فعالی ندارد</p>
                                        <a href="@Url.Action("Create", "Orders", new { customerId = Model.Id })" class="btn btn-primary">
                                            <i class="bi bi-plus-circle me-1"></i>
                                            ایجاد اولین معامله
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Activity Timeline Tab -->
                        <div class="tab-pane fade" id="activity" role="tabpanel">
                            <div class="timeline">
                                @{
                                    var activities = new List<object>();
                                    
                                    // Add orders
                                    foreach (var order in Model.Orders.Take(5))
                                    {
                                        activities.Add(new { 
                                            Date = order.CreatedAt,
                                            Type = "معامله",
                                            Description = $"معامله {order.Amount:N0} {order.FromCurrency?.PersianName} ({order.CurrencyPair})",
                                            Status = "N/A",
                                            Icon = "fas fa-shopping-cart",
                                            Color = "primary"
                                        });
                                    }
                                    
                                    // Add receipts
                                    @* TODO: Replace with AccountingDocument display when implementing new architecture *@
                                    /*
                                    foreach (var receipt in Model.Receipts.Take(5))
                                    {
                                        activities.Add(new { 
                                            Date = receipt.UploadedAt,
                                            Type = "رسید",
                                            Description = $"آپلود رسید {(receipt.Type == ForexExchange.Models.ReceiptType.RecivreRecipt ? "دریافت وجه" : "گردش حساب")}",
                                            Status = receipt.IsVerified ? "تأیید شده" : "در انتظار",
                                            Icon = "fas fa-receipt",
                                            Color = receipt.IsVerified ? "success" : "warning"
                                        });
                                    }
                                    */
                                    
                                    var sortedActivities = activities.OrderByDescending(a => ((DateTime)((dynamic)a).Date)).Take(10);
                                }
                                
                                @foreach (var activity in sortedActivities)
                                {
                                    var act = (dynamic)activity;
                                    <div class="timeline-item">
                                        <div class="timeline-marker">
                                            <i class="@act.Icon text-@act.Color"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <h6 class="timeline-title">@act.Type</h6>
                                            <p class="timeline-text">@act.Description</p>
                                            <small class="text-muted">@(((DateTime)act.Date).ToPersianDateTextify())</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

