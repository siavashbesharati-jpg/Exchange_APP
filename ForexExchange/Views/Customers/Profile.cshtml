@model ForexExchange.Models.Customer
@using ForexExchange.Extensions

@{
    ViewData["Title"] = "پروفایل مشتری";
    var stats = ViewBag.CustomerStats as ForexExchange.Models.CustomerProfileStats;
}

<div class="container-fluid" dir="rtl">
    <div class="col-12">
        <div class="text-center mb-4">
            <img src="~/favicon/android-chrome-512x512.png" alt="تابان"
                 style="width: 250px; height: 250px; margin: 32px;" class="mb-3" />
            <h1 class="display-5 fw-bold text-primary">
                سامانه معاملات تابان
            </h1>
        </div>
    </div>

    <!-- Two-column layout -->
    <div class="row g-4">
        <!-- Customer Information -->
        <div class="col-lg-6 col-md-12">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">اطلاعات شخصی</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-user fa-2x text-muted"></i>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>نام کامل:</strong></div>
                        <div class="col-sm-7">@Model.FullName</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>تلفن:</strong></div>
                        <div class="col-sm-7">@Model.PhoneNumber</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>ایمیل:</strong></div>
                        <div class="col-sm-7">@Model.Email</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>کد ملی:</strong></div>
                        <div class="col-sm-7">@Model.NationalId</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>تاریخ عضویت:</strong></div>
                        <div class="col-sm-7">@Model.CreatedAt.ToString("yyyy/MM/dd")</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>مدت عضویت:</strong></div>
                        <div class="col-sm-7">@stats?.RegistrationDays روز</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-5"><strong>وضعیت:</strong></div>
                        <div class="col-sm-7">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">فعال</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غیرفعال</span>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="row mb-2">
                            <div class="col-sm-5"><strong>آدرس:</strong></div>
                            <div class="col-sm-7">@Model.Address</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Orders & Balance Info -->
        <div class="col-lg-6 col-md-12">
            <div class="card h-100">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="profileTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab">
                                معامله‌ها (@Model.Orders.Count)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="debts-tab" data-bs-toggle="tab" data-bs-target="#debts" type="button" role="tab">
                                بدهکاری و بستانکاری
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="profileTabsContent">
                        <!-- Orders Tab -->
                        <div class="tab-pane fade show active" id="orders" role="tabpanel">
                            @if (Model.Orders.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>شماره</th>
                                                <th>از ارز</th>
                                                <th>به ارز</th>
                                                <th>مبلغ</th>
                                                <th>نرخ</th>
                                                <th>تاریخ</th>
                                                <th>عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in Model.Orders.Take(10))
                                            {
                                                <tr>
                                                    <td>#@order.Id</td>
                                                    <td>@order.FromCurrency?.Code</td>
                                                    <td>@order.ToCurrency?.Code</td>
                                                    <td>@(order.FromCurrency?.Code == "IRR" ? order.Amount.ToString("N0") : order.Amount.ToString("N2"))</td>
                                                    <td>@(order.ToCurrency?.Code == "IRR" ? order.Rate.ToString("N0") : order.Rate.ToString("N2"))</td>
                                                    <td>@order.CreatedAt.ToString("MM/dd")</td>
                                                    <td>
                                                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">جزئیات</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.Orders.Count > 10)
                                {
                                    <div class="text-center">
                                        <a asp-controller="Orders" asp-action="Index" asp-route-customerId="@Model.Id" class="btn btn-outline-primary">
                                            مشاهده همه معامله‌ها (@Model.Orders.Count)
                                        </a>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">هیچ معامله‌ای ثبت نشده است.</p>
                                </div>
                            }
                        </div>

                        <!-- Debts and Credits Tab -->
                        <div class="tab-pane fade" id="debts" role="tabpanel">
                            <h5>بدهکاری و بستانکاری</h5>
                            @{
                                var debtCreditInfo = ViewBag.CustomerDebtCredit as ForexExchange.Models.CustomerDebtCredit;
                            }
                            @if (debtCreditInfo != null && debtCreditInfo.CurrencyBalances.Any())
                            {
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <div class="card border-0 shadow-sm">
                                            <div class="card-header bg-light"></div>
                                            <div class="card-body">
                                                <div class="row g-3">
                                                    @foreach (var balance in debtCreditInfo.CurrencyBalances)
                                                    {
                                                        <div class="col-md-6 col-lg-4">
                                                            <div class="card h-100 @(balance.Balance >= 0 ? "border-success" : "border-danger")">
                                                                <div class="card-body text-center">
                                                                    <h6 class="card-title">@balance.CurrencyName (@balance.CurrencyCode)</h6>
                                                                    <div class="mb-2">
                                                                        <strong class="fs-5">@(balance.CurrencyCode == "IRR" ? balance.Balance.ToString("N0") : balance.Balance.ToString("N2"))</strong>
                                                                    </div>
                                                                    <div class="row text-center">
                                                                        <div class="col-6" dir="ltr">
                                                                            <small class="text-muted">بدهی</small>
                                                                            <div class="text-danger">@(balance.CurrencyCode == "IRR" ? balance.DebtAmount.ToString("N0") : balance.DebtAmount.ToString("N2"))</div>
                                                                        </div>
                                                                        <div class="col-6" dir="ltr">
                                                                            <small class="text-muted">بستانکاری</small>
                                                                            <div class="text-success">@(balance.CurrencyCode == "IRR" ? balance.CreditAmount.ToString("N0") : balance.CreditAmount.ToString("N2"))</div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Recent Accounting Documents -->
                                <div class="row">
                                    <div class="col-12">
                                        <h6>آخرین اسناد حسابداری</h6>
                                        @{
                                            var allDocs = ViewBag.AllAccountingDocuments as List<AccountingDocument> ?? new List<AccountingDocument>();
                                            var sortedRecentDocs = allDocs.Where(d => d.CreatedAt > DateTime.Now.AddDays(-30))
                                                                         .OrderByDescending(d => d.CreatedAt)
                                                                         .Take(5)
                                                                         .ToList();
                                        }
                                        @if (sortedRecentDocs.Any())
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-sm">
                                                    <thead>
                                                        <tr>
                                                            <th>تاریخ</th>
                                                            <th>نوع</th>
                                                            <th>مبلغ</th>
                                                            <th>وضعیت</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var doc in sortedRecentDocs)
                                                        {
                                                            <tr>
                                                                <td>@doc.CreatedAt.ToString("MM/dd")</td>
                                                                <td>@doc.Type.GetDisplayName()</td>
                                                                <td>@(doc.CurrencyCode == "IRR" ? doc.Amount.ToString("N0") : doc.Amount.ToString("N2"))</td>
                                                                <td>
                                                                    @if (doc.IsVerified)
                                                                    {
                                                                        <span class="badge bg-success">تأیید شده</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="badge bg-warning">در انتظار</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center py-3">
                                                <small class="text-muted">هیچ سند حسابداری در ۳۰ روز گذشته یافت نشد.</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-balance-scale fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted mt-3">اطلاعات بدهکاری و بستانکاری یافت نشد</h5>
                                    <p class="text-muted">این مشتری هنوز هیچ تراکنش مالی ندارد</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .timeline {
            position: relative;
            padding: 20px 0;
        }

        .timeline-item {
            position: relative;
            padding-left: 60px;
            margin-bottom: 30px;
        }

        .timeline-marker {
            position: absolute;
            left: 0;
            top: 0;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 3px solid #fff;
            box-shadow: 0 0 0 3px #dee2e6;
        }

        .timeline-content {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #007bff;
        }

        .timeline-title {
            margin-bottom: 5px;
            color: #495057;
        }

        .timeline-text {
            margin-bottom: 5px;
            color: #6c757d;
        }

        /* Financial Tab Styles */
        .balance-display h3 {
            font-size: 2rem;
            margin: 0;
            text-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }

        .currency-card {
            transition: all 0.3s ease;
            border-radius: 12px;
        }

        .currency-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

        .currency-header {
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 0.5rem;
        }

        .balance-info {
            padding: 1rem 0;
        }

        .balance-amount {
            font-size: 1.2rem;
        }

        .balance-breakdown {
            margin-top: 0.5rem;
        }

        .summary-item {
            padding: 1rem;
            border-radius: 8px;
            background: rgba(255,255,255,0.8);
            margin-bottom: 0.5rem;
        }

        .summary-value {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 0.25rem;
        }

        .summary-label {
            font-size: 0.875rem;
            color: #6c757d;
        }

        .empty-state {
            padding: 3rem 1rem;
        }

        .empty-state i {
            opacity: 0.5;
        }

        .status-indicator .badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .balance-display h3 {
                font-size: 1.5rem;
            }

            .summary-item {
                padding: 0.75rem;
            }

            .summary-value {
                font-size: 1.25rem;
            }
        }
    </style>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}
