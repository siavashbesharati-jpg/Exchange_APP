
@using ForexExchange.Models
@model DatabaseManagementViewModel
@{
    ViewData["Title"] = "مدیریت پایگاه داده";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-database me-2"></i>
                        مدیریت پایگاه داده
                    </h4>
                </div>
                <div class="card-body">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@Html.Raw(TempData["Success"]?.ToString() ?? "")</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    @if (TempData["Info"] != null)
                    {
                        <div class="alert alert-info">@TempData["Info"]</div>
                    }
                    @if (TempData["DiagnosticInfo"] != null)
                    {
                        <div class="alert alert-secondary">
                            <h6>نتایج تشخیص:</h6>
                            <pre style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;">@TempData["DiagnosticInfo"]</pre>
                        </div>
                    }
                    @if (TempData["CorrectionLog"] != null)
                    {
                        <div class="alert alert-warning">
                            <h6>لاگ اصلاحات:</h6>
                            <pre style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;">@TempData["CorrectionLog"]</pre>
                        </div>
                    }
                    @if (TempData["ResetLog"] != null)
                    {
                        <div class="alert alert-info">
                            <h6>لاگ بازنشانی:</h6>
                            <pre style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;">@TempData["ResetLog"]</pre>
                        </div>
                    }
                    @if (TempData["FixLog"] != null)
                    {
                        <div class="alert alert-warning">
                            <h6>لاگ اصلاح تاریخ‌ها:</h6>
                            <pre style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;">@TempData["FixLog"]</pre>
                        </div>
                    }
                    @if (TempData["RecalcLog"] != null)
                    {
                        <div class="alert alert-primary">
                            <h6>لاگ بازمحاسبه موجودی‌ها:</h6>
                            <pre style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;">@TempData["RecalcLog"]</pre>
                        </div>
                    }
                    @if (TempData["ConfirmationLog"] != null)
                    {
                        <div class="alert alert-success">
                            <h6>لاگ تایید اسناد:</h6>
                            <pre style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;">@TempData["ConfirmationLog"]</pre>
                        </div>
                    }

                    <!-- Database Statistics -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary">آمار پایگاه داده</h5>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <div class="card bg-info text-white text-center">
                                <div class="card-body">
                                    <h4>@Model.CustomersCount</h4>
                                    <small>مشتریان</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <div class="card bg-success text-white text-center">
                                <div class="card-body">
                                    <h4>@Model.OrdersCount</h4>
                                    <small>معاملات</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <div class="card bg-warning text-white text-center">
                                <div class="card-body">
                                    <h4>@Model.CurrencyPoolsCount</h4>
                                    <small>صندوق های ارز</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <div class="card bg-secondary text-white text-center">
                                <div class="card-body">
                                    <h4>@Model.TransactionsCount</h4>
                                    <small>تراکنش‌ها</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <div class="card bg-danger text-white text-center">
                                <div class="card-body">
                                    <h4>@Model.ExchangeRatesCount</h4>
                                    <small>نرخ‌های ارز</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <div class="card bg-dark text-white text-center">
                                <div class="card-body">
                                    <h4>@Model.AccountingDocumentsCount</h4>
                                    <small>اسناد حسابداری</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <!-- Backup & Restore Section -->
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-download me-2"></i>
                                        پشتیبان‌گیری و بازیابی
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <button type="button" class="btn btn-success w-100 mb-2" onclick="createBackup()">
                                            <i class="fas fa-download me-2"></i>
                                            ایجاد پشتیبان (قابل دانلود)
                                        </button>
                                    </div>
                                  
                                    
                                    <form asp-action="RestoreDatabase" method="post" enctype="multipart/form-data">
                                        @Html.AntiForgeryToken()
                                        <div class="mb-3">
                                            <label for="backupFile" class="form-label">فایل پشتیبان برای بازیابی:</label>
                                            <input type="file" class="form-control" id="backupFile" name="backupFile" accept=".db,.sql" required>
                                        </div>
                                        <button type="submit" class="btn btn-warning w-100" onclick="return confirmRestore()">
                                            <i class="fas fa-upload me-2"></i>
                                            بازیابی پایگاه داده
                                        </button>
                                    </form>

                                    <hr />
                                   
                                </div>
                            </div>
                        </div>

                        <!-- Cleaning Operations -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-danger text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-trash me-2"></i>
                                        عملیات پاکسازی
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        <strong>هشدار:</strong> این عملیات غیرقابل بازگشت است!
                                    </div>
                                    
                                        <form asp-action="CleanCustomers" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید تمام مشتریان عادی و حساب‌های کاربری آنها را پاک کنید؟ (مشتری سیستم حفظ خواهد شد)')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger w-100 mb-2">
                                                <i class="fas fa-users me-2"></i>
                                                پاکسازی مشتریان
                                            </button>
                                        </form>
                                    
                                        <form asp-action="CleanOrders" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید تمام معاملات  را پاک کنید؟')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger w-100 mb-2">
                                                <i class="fas fa-shopping-cart me-2"></i>
                                                پاکسازی معاملات 
                                            </button>
                                        </form>
                                    
                                        <form asp-action="CleanPools" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید تمام صندوق های ارز را پاک کنید؟')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger w-100 mb-2">
                                                <i class="fas fa-coins me-2"></i>
                                                پاکسازی صندوق های ارز
                                            </button>
                                        </form>

                                        <form asp-action="CleanCustomerBalances" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید تمام موجودی‌های مشتریان را به صفر تنظیم کنید؟')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-warning w-100 mb-2">
                                                <i class="fas fa-wallet me-2"></i>
                                                پاک‌سازی موجودی مشتریان
                                            </button>
                                        </form>

                                        <form asp-action="CleanBankAccountBalances" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید تمام موجودی‌های حساب‌های بانکی را به صفر تنظیم کنید؟')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-warning w-100">
                                                <i class="fas fa-university me-2"></i>
                                                پاک‌سازی موجودی حساب‌های بانکی
                                            </button>
                                        </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <!-- Maintenance Section -->
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-tools me-2"></i>
                                        تعمیر و نگهداری
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-2"></i>
                                        ابزارهای تعمیر و نگهداری برای رفع مشکلات خاص
                                    </div>
                                    
                                    <form asp-action="RecalculateIRRPool" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید موجودی صندوق IRR را بازمحاسبه کنید؟')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-info w-100 mb-2">
                                            <i class="fas fa-calculator me-2"></i>
                                            بازمحاسبه صندوق IRR
                                        </button>
                                    </form>

                                    <form asp-action="DiagnoseAccountingDocuments" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-secondary w-100 mb-2">
                                            <i class="fas fa-search me-2"></i>
                                            تشخیص اسناد حسابداری
                                        </button>
                                    </form>

                                    <form asp-action="ResetAccountingDocumentVerification" method="post" onsubmit="return confirm('آیا مطمئن هستید؟ این عمل:\n\n✅ تمام سوابق مالی (مشتری + بانک + صندوق ارز) را حذف می‌کند\n✅ موجودی‌ها را صفر می‌کند\n✅ اسناد را غیرتایید می‌کند\n✅ همه چیز را به ترتیب زمانی بازسازی می‌کند\n\n⚠️ رکوردهای دستی (Manual) حفظ می‌شوند\n⚠️ معاملات و اسناد حذف شده نادیده گرفته می‌شوند\n\nاین عمل کامل است و نیازی به تایید مجدد ندارید.')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-success w-100 mb-2">
                                            <i class="fas fa-sync-alt me-2"></i>
                                            بازسازی کامل سوابق مالی
                                        </button>
                                    </form>

                                    <form asp-action="FixAllTransactionDates" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید تاریخ همه تراکنش‌ها را اصلاح کنید؟\n\n📅 این عمل تاریخ تراکنش‌ها را به تاریخ واقعی معامله تغییر می‌دهد:\n• معاملات : از Order.CreatedAt\n• اسناد: از Document.DocumentDate\n\nفقط رکوردهایی که TransactionDate = CreatedAt دارند اصلاح می‌شوند.')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-warning w-100 mb-2">
                                            <i class="fas fa-calendar-check me-2"></i>
                                            اصلاح تاریخ همه تراکنش‌ها
                                        </button>
                                    </form>

                                    <form asp-action="RecalculateAllBalancesFromTransactionDates" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید همه موجودی‌ها را بر اساس تاریخ تراکنش بازمحاسبه کنید؟\n\n🔄 این عمل:\n• همه موجودی‌ها را صفر می‌کند\n• تاریخچه‌ها را بر اساس TransactionDate مرتب می‌کند\n• موجودی‌ها را به ترتیب زمانی واقعی بازمحاسبه می‌کند\n\nاین عمل بعد از اصلاح تاریخ تراکنش‌ها انجام شود.')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-primary w-100 mb-2">
                                            <i class="fas fa-calculator me-2"></i>
                                            بازمحاسبه بر اساس تاریخ تراکنش
                                        </button>
                                    </form>

                                    <button type="button" class="btn btn-outline-info w-100 mb-2" onclick="getTransactionNumberReport()">
                                        <i class="fas fa-chart-bar me-2"></i>
                                        گزارش پوشش شماره تراکنش
                                    </button>

                                    <form asp-action="UpdateTransactionNumbers" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید شماره تراکنش‌ها را بروزرسانی کنید؟\n\n📋 این عمل:\n• CustomerBalanceHistory با نوع AccountingDocument را بروزرسانی می‌کند\n• BankAccountBalanceHistory با نوع Document را بروزرسانی می‌کند\n• شماره تراکنش را از AccountingDocument.ReferenceNumber می‌گیرد\n\nاین عمل امن است و فقط فیلدهای خالی را پر می‌کند.')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-success w-100 mb-2">
                                            <i class="fas fa-hashtag me-2"></i>
                                            بروزرسانی شماره تراکنش‌ها
                                        </button>
                                    </form>


                                <form asp-action="FixAllCustomerBalances" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید برای همه مشتریان، موجودی ارزهای ناقص را ایجاد کنید؟\nاین عملیات فقط رکوردهای مفقود را اضافه می‌کند و خطری ندارد.')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-primary w-100 mb-2">
                                        <i class="fas fa-plus-circle me-1"></i>
                                        ایجاد موجودی ارز برای همه مشتریان (تکمیل رکوردهای ناقص)
                                    </button>
                                </form>

                                <form asp-action="FixIRROrdersEndingIn1000" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید معاملات IRR با رقم هزارگان برابر 1 را اصلاح کنید؟\n\n🔧 این عمل:\n• معاملاتی که رقم هزارگان (چهارمین رقم از راست) برابر 1 است پیدا می‌کند\n• مثال: 55,701,000 → 55,700,000\n• مثال: 100,001,000 → 100,000,000\n• رقم هزارگان را از 1 به 0 تغییر می‌دهد\n\nاین عمل غیرقابل بازگشت است!')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-warning w-100 mb-2">
                                        <i class="fas fa-calculator me-1"></i>
                                        اصلاح رقم هزارگان معاملات IRR (1→0)
                                    </button>
                                </form>

                                <form asp-action="FixIRROrdersWithReversedRates" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید معاملات IRR با نرخ معکوس را اصلاح کنید؟\n\n🔄 این عمل:\n• معاملاتی که FromCurrency=IRR و نرخ کمتر از 0.001 است پیدا می‌کند\n• مثال: 0.000037037037037037 → 27,000\n• مثال: 0.000024390243902439 → 41,000\n• نرخ جدید = 1 ÷ نرخ قدیمی\n\nاین عمل غیرقابل بازگشت است!')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-info w-100 mb-2">
                                        <i class="fas fa-exchange-alt me-1"></i>
                                        اصلاح نرخ‌های معکوس IRR (نرخ < 0.001)
                                    </button>
                                </form>

                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="fas fa-edit me-2"></i>
                                        ایجاد رکورد دستی تاریخچه
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        ایجاد رکورد دستی برای اصلاحات و واردات داده‌های تاریخی
                                    </div>
                                    
                                    <form asp-action="CreateManualCustomerBalanceHistory" method="post">
                                        @Html.AntiForgeryToken()
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">شناسه مشتری:</label>
                                                <input type="number" name="customerId" class="form-control" required min="1" placeholder="مثال: 1">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">کد ارز:</label>
                                                <select name="currencyCode" class="form-control" required>
                                                    <option value="">انتخاب ارز</option>
                                                    <option value="IRR">IRR (تومان)</option>
                                                    <option value="USD">USD (دلار)</option>
                                                    <option value="EUR">EUR (یورو)</option>
                                                    <option value="GBP">GBP (پوند)</option>
                                                    <option value="AED">AED (درهم)</option>
                                                </select>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">مبلغ:</label>
                                                <input type="number" name="amount" class="form-control" required step="0.01" placeholder="مثال: 1000000">
                                                <small class="text-muted">عدد مثبت = افزایش موجودی، عدد منفی = کاهش موجودی</small>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">تاریخ تراکنش:</label>
                                                <input type="date" name="transactionDate" class="form-control" required>
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="form-label">دلیل تراکنش:</label>
                                            <input type="text" name="reason" class="form-control" required placeholder="مثال: اصلاح موجودی ابتدایی، واردات داده تاریخی">
                                        </div>
                                        
                                        <button type="submit" class="btn btn-warning w-100" onclick="return confirm('آیا مطمئن هستید که می‌خواهید این رکورد دستی را ایجاد کنید؟\n\n⚠️ بعد از ایجاد رکورد دستی، حتماً بازمحاسبه موجودی‌ها را انجام دهید.')">
                                            <i class="fas fa-plus me-2"></i>
                                            ایجاد رکورد دستی
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Database Actions -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary">عملیات پایگاه داده</h5>
                        </div>

                        <!-- Apply Rounding Card -->
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title">
                                        <i class="fas fa-coins me-2 text-warning"></i>
                                        گرد کردن مقادیر پولی
                                    </h6>
                                    <p class="card-text small text-muted">
                                        این عملیات تمام مقادیر پولی در پایگاه داده را بر اساس منطق جدید گرد می‌کند.
                                        <strong class="text-danger">این عملیات غیرقابل بازگشت است.</strong>
                                    </p>
                                    <div class="mt-auto">
                                        <button id="applyRoundingBtn" class="btn btn-warning w-100">
                                            <i class="fas fa-play me-2"></i>
                                            اجرای گرد کردن
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Backup Card -->
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-download me-2"></i>
                                        پشتیبان‌گیری
                                    </h5>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <p class="card-text small text-muted flex-grow-1">
                                        از پایگاه داده خود پشتیبان‌گیری کنید تا در صورت نیاز به بازیابی، داده‌های خود را از دست ندهید.
                                    </p>
                                    <div>
                                        <button type="button" class="btn btn-success w-100" onclick="createBackup()">
                                            <i class="fas fa-download me-2"></i>
                                            ایجاد پشتیبان (قابل دانلود)
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Restore Card -->
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="fas fa-upload me-2"></i>
                                        بازیابی پایگاه داده
                                    </h5>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <p class="card-text small text-muted flex-grow-1">
                                        پایگاه داده خود را از یک فایل پشتیبان بازیابی کنید. اطمینان حاصل کنید که فایل پشتیبان صحیح است.
                                    </p>
                                    <form asp-action="RestoreDatabase" method="post" enctype="multipart/form-data" class="mt-auto">
                                        @Html.AntiForgeryToken()
                                        <div class="mb-3">
                                            <label for="backupFile" class="form-label">فایل پشتیبان:</label>
                                            <input type="file" class="form-control" id="backupFile" name="backupFile" accept=".db,.sql" required>
                                        </div>
                                        <button type="submit" class="btn btn-warning w-100" onclick="return confirmRestore()">
                                            <i class="fas fa-upload me-2"></i>
                                            بازیابی پایگاه داده
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Modal -->
<div class="modal fade" id="loadingModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">در حال پردازش...</span>
                </div>
                <div class="mt-3">در حال پردازش، لطفاً صبر کنید...</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function createBackup() {
            $('#loadingModal').modal('show');

            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("CreateBackup")';
            form.style.display = 'none';

            var token = $('input[name="__RequestVerificationToken"]').val();
            if (token) {
                var csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = '__RequestVerificationToken';
                csrfInput.value = token;
                form.appendChild(csrfInput);
            }

            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);

            setTimeout(function () {
                $('#loadingModal').modal('hide');
                Swal.fire('موفق!', 'پشتیبان با موفقیت ایجاد و دانلود شد!', 'success');
            }, 1000);
        }

        function confirmRestore() {
            return confirm('آیا مطمئن هستید که می‌خواهید پایگاه داده را بازیابی کنید؟ این عمل تمام اطلاعات فعلی را جایگزین خواهد کرد.');
        }

        function cleanCustomers() {
        }

        function cleanOrders() {
        }

        function cleanPools() {
        }
        // Clean actions are now regular POST forms to ensure TempData shows after redirect

        function getTransactionNumberReport() {
            $('#loadingModal').modal('show');

            $.get('@Url.Action("GetTransactionNumberReport")')
                .done(function (response) {
                    $('#loadingModal').modal('hide');
                    
                    if (response.success) {
                        var report = response.report;
                        var summary = response.summary;
                        
                        var reportHtml = `
                            <div style="text-align: right; direction: rtl;">
                                <h5>📊 گزارش پوشش شماره تراکنش</h5>
                                <hr>
                                
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6>👥 CustomerBalanceHistory (نوع سند حسابداری):</h6>
                                        <ul>
                                            <li>کل رکوردها: <strong>${report.customerBalanceHistoryTotal.toLocaleString()}</strong></li>
                                            <li>با شماره تراکنش: <strong>${report.customerBalanceHistoryWithTransactionNumber.toLocaleString()}</strong></li>
                                            <li>بدون شماره تراکنش: <strong>${report.customerBalanceHistoryWithoutTransactionNumber.toLocaleString()}</strong></li>
                                            <li>شماره تراکنش متفاوت: <strong style="color: orange;">${report.customerBalanceHistoryMismatched.toLocaleString()}</strong></li>
                                            <li>پوشش: <strong>${report.customerBalanceHistoryCoveragePercentage.toFixed(1)}%</strong></li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6>🏦 BankAccountBalanceHistory (نوع سند):</h6>
                                        <ul>
                                            <li>کل رکوردها: <strong>${report.bankAccountBalanceHistoryTotal.toLocaleString()}</strong></li>
                                            <li>با شماره تراکنش: <strong>${report.bankAccountBalanceHistoryWithTransactionNumber.toLocaleString()}</strong></li>
                                            <li>بدون شماره تراکنش: <strong>${report.bankAccountBalanceHistoryWithoutTransactionNumber.toLocaleString()}</strong></li>
                                            <li>شماره تراکنش متفاوت: <strong style="color: orange;">${report.bankAccountBalanceHistoryMismatched.toLocaleString()}</strong></li>
                                            <li>پوشش: <strong>${report.bankAccountBalanceHistoryCoveragePercentage.toFixed(1)}%</strong></li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6>📄 AccountingDocuments:</h6>
                                        <ul>
                                            <li>کل اسناد: <strong>${report.accountingDocumentsTotal.toLocaleString()}</strong></li>
                                            <li>با شماره تراکنش: <strong>${report.accountingDocumentsWithReferenceNumber.toLocaleString()}</strong></li>
                                            <li>بدون شماره تراکنش: <strong>${report.accountingDocumentsWithoutReferenceNumber.toLocaleString()}</strong></li>
                                            <li>پوشش: <strong>${report.accountingDocumentsCoveragePercentage.toFixed(1)}%</strong></li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>خلاصه:</strong><br>
                                    • مشتری: ${summary.customerCoverage}<br>
                                    • بانک: ${summary.bankCoverage}<br>
                                    • اسناد: ${summary.documentCoverage}
                                </div>
                            </div>
                        `;
                        
                        Swal.fire({
                            title: 'گزارش شماره تراکنش',
                            html: reportHtml,
                            width: '800px',
                            confirmButtonText: 'بستن',
                            confirmButtonColor: '#3085d6'
                        });
                    } else {
                        Swal.fire('خطا!', response.error || 'خطا در تولید گزارش', 'error');
                    }
                })
                .fail(function (xhr, status, error) {
                    $('#loadingModal').modal('hide');
                    Swal.fire('خطا!', 'خطا در ارتباط با سرور: ' + error, 'error');
                });
        }

        $(document).ready(function() {
            // Confirmation for dangerous actions
            $('#cleanCustomersBtn, #cleanOrdersBtn, #cleanPoolsBtn, #restoreForm button[type=submit], #resetAccountingBtn, #recalculateBalancesBtn').click(function(e) {
                var message = $(this).data('confirm');
                if (!confirm(message)) {
                    e.preventDefault();
                }
            });

            // AJAX call for Recalculate All Balances
            $('#recalculateBalancesBtn').click(function(e) {
                e.preventDefault();
                var form = $(this).closest('form');
                var url = form.attr('action');
                
                // Show loading indicator
                var originalButtonText = $(this).html();
                $(this).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> در حال محاسبه...').prop('disabled', true);

                $.ajax({
                    type: "POST",
                    url: url,
                    data: form.serialize(),
                    headers: {
                        "X-Requested-With": "XMLHttpRequest"
                    },
                    success: function(response) {
                        if (response.success) {
                            // Create a success alert
                            var alert = $('<div class="alert alert-success alert-dismissible fade show" role="alert"></div>');
                            alert.html(response.message.replace(/\\n/g, '<br/>') + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>');
                            $('.card-body').prepend(alert);
                            // Optionally show log
                            if(response.log) {
                                var logAlert = $('<div class="alert alert-primary"><h6>لاگ بازمحاسبه:</h6><pre style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;"></pre></div>');
                                logAlert.find('pre').text(response.log);
                                $('.card-body').prepend(logAlert);
                            }
                        } else {
                            var alert = $('<div class="alert alert-danger alert-dismissible fade show" role="alert"></div>');
                            alert.html(response.error + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>');
                            $('.card-body').prepend(alert);
                        }
                    },
                    error: function() {
                        var alert = $('<div class="alert alert-danger alert-dismissible fade show" role="alert"></div>');
                        alert.html('خطای ناشناخته در ارتباط با سرور رخ داد.<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>');
                        $('.card-body').prepend(alert);
                    },
                    complete: function() {
                        // Restore button
                        $('#recalculateBalancesBtn').html(originalButtonText).prop('disabled', false);
                    }
                });
            });

            // AJAX call for Apply Rounding
            $('#applyRoundingBtn').click(function(e) {
                e.preventDefault();
                if (!confirm('آیا از گرد کردن تمام مقادیر پولی در پایگاه داده مطمئن هستید؟ این عملیات غیرقابل بازگشت است.')) {
                    return;
                }

                var button = $(this);
                var originalButtonText = button.html();
                button.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> در حال اجرا...').prop('disabled', true);

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ApplyDatabaseRounding", "Database")',
                    headers: {
                        "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            var alert = $('<div class="alert alert-success alert-dismissible fade show" role="alert"></div>');
                            alert.html(response.message.replace(/\\n/g, '<br/>') + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>');
                            
                            var summaryAlert = $('<div class="alert alert-info"><h6>خلاصه عملیات:</h6><pre style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;"></pre></div>');
                            summaryAlert.find('pre').text(response.summary);

                            $('.card-body').prepend(summaryAlert).prepend(alert);
                        } else {
                            var alert = $('<div class="alert alert-danger alert-dismissible fade show" role="alert"></div>');
                            alert.html(response.error + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>');
                            $('.card-body').prepend(alert);
                        }
                    },
                    error: function() {
                        var alert = $('<div class="alert alert-danger alert-dismissible fade show" role="alert"></div>');
                        alert.html('خطای ناشناخته در ارتباط با سرور رخ داد.<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>');
                        $('.card-body').prepend(alert);
                    },
                    complete: function() {
                        button.html(originalButtonText).prop('disabled', false);
                    }
                });
            });
        });
    </script>
}

