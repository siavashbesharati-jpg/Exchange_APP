@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>500 - خطای سرور</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .error-container {
            text-align: center;
            padding: 2rem;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            max-width: 650px;
            width: 90%;
            position: relative;
            z-index: 2;
        }

        .error-code {
            font-size: 8rem;
            font-weight: 700;
            color: #fff;
            text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
            margin-bottom: 1rem;
            animation: flicker 3s ease-in-out infinite;
        }

        .error-title {
            font-size: 2.5rem;
            color: #fff;
            margin-bottom: 1rem;
            font-weight: 300;
        }

        .error-message {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .btn-home {
            display: inline-block;
            background: linear-gradient(45deg, #ff6b6b, #ee5a24);
            color: white;
            padding: 15px 40px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(238, 90, 36, 0.3);
            font-size: 1.1rem;
            margin: 0 10px;
        }

        .btn-refresh {
            display: inline-block;
            background: linear-gradient(45deg, #4facfe, #00f2fe);
            color: white;
            padding: 15px 40px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);
            font-size: 1.1rem;
            margin: 0 10px;
            cursor: pointer;
            border: none;
        }

        .btn-home:hover, .btn-refresh:hover {
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

        .btn-home:hover {
            box-shadow: 0 6px 20px rgba(238, 90, 36, 0.4);
        }

        .btn-refresh:hover {
            box-shadow: 0 6px 20px rgba(79, 172, 254, 0.4);
        }

        .floating-shapes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 6s ease-in-out infinite;
        }

        .shape:nth-child(1) {
            width: 120px;
            height: 120px;
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            width: 80px;
            height: 80px;
            top: 60%;
            right: 15%;
            animation-delay: 2s;
        }

        .shape:nth-child(3) {
            width: 100px;
            height: 100px;
            bottom: 15%;
            left: 70%;
            animation-delay: 4s;
        }

        .svg-container {
            margin-bottom: 2rem;
        }

        @@keyframes flicker {
            0%, 100% {
                opacity: 1;
                text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
            }
            50% {
                opacity: 0.8;
                text-shadow: 0 0 30px rgba(255, 255, 255, 0.8), 0 0 40px rgba(255, 100, 0, 0.3);
            }
            25%, 75% {
                opacity: 0.9;
                text-shadow: 0 0 25px rgba(255, 255, 255, 0.6);
            }
        }

       @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
                opacity: 0.7;
            }
            50% {
                transform: translateY(-25px) rotate(180deg);
                opacity: 1;
            }
        }

        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        @@keyframes smoke {
            0% {
                transform: translateY(0) scale(1);
                opacity: 0.7;
            }
            100% {
                transform: translateY(-20px) scale(1.1);
                opacity: 0;
            }
        }

        .gear {
            animation: spin 4s linear infinite;
            transform-origin: center;
        }

        .gear:nth-child(2) {
            animation-direction: reverse;
            animation-duration: 3s;
        }

        .smoke {
            animation: smoke 2s ease-out infinite;
        }

        .smoke:nth-child(2) {
            animation-delay: 0.5s;
        }

        .smoke:nth-child(3) {
            animation-delay: 1s;
        }

        .lightning {
            animation: flicker 1s ease-in-out infinite;
        }

        @@media (max-width: 768px) {
            .error-code {
                font-size: 6rem;
            }
            .error-title {
                font-size: 2rem;
            }
            .error-message {
                font-size: 1rem;
            }
            .btn-home, .btn-refresh {
                display: block;
                margin: 10px auto;
                width: 80%;
            }
        }
    </style>
</head>
<body>
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="error-container">
        <div class="svg-container">
            <svg width="240" height="220" viewBox="0 0 240 220" xmlns="http://www.w3.org/2000/svg">
                <!-- Server -->
                <rect x="60" y="80" width="120" height="80" rx="8" fill="rgba(255,255,255,0.2)" stroke="#fff" stroke-width="2"/>
                <rect x="60" y="120" width="120" height="40" rx="8" fill="rgba(255,255,255,0.1)" stroke="#fff" stroke-width="1"/>
                
                <!-- Server lights -->
                <circle cx="75" cy="95" r="4" fill="#ff6b6b" class="lightning"/>
                <circle cx="90" cy="95" r="4" fill="#ff6b6b" class="lightning"/>
                <circle cx="105" cy="95" r="4" fill="#ff6b6b" class="lightning"/>
                
                <!-- Gears -->
                <g class="gear" stroke="#fff" stroke-width="2" fill="none">
                    <circle cx="200" cy="60" r="15"/>
                    <path d="M200 45 L205 50 L200 55 L195 50 Z M215 60 L210 65 L205 60 L210 55 Z M200 75 L195 70 L200 65 L205 70 Z M185 60 L190 55 L195 60 L190 65 Z"/>
                </g>
                
                <g class="gear" stroke="#fff" stroke-width="2" fill="none">
                    <circle cx="40" cy="140" r="12"/>
                    <path d="M40 128 L44 132 L40 136 L36 132 Z M52 140 L48 144 L44 140 L48 136 Z M40 152 L36 148 L40 144 L44 148 Z M28 140 L32 136 L36 140 L32 144 Z"/>
                </g>
                
                <!-- Smoke/Steam -->
                <g fill="#fff" opacity="0.6">
                    <circle cx="140" cy="50" r="3" class="smoke"/>
                    <circle cx="150" cy="45" r="4" class="smoke"/>
                    <circle cx="160" cy="40" r="3" class="smoke"/>
                </g>
                
                <!-- Lightning bolt -->
                <path d="M120 30 L115 45 L125 40 L120 55 L135 35 L125 40 Z" fill="#ffff00" class="lightning" opacity="0.8"/>
                
                <!-- Error symbol -->
                <circle cx="120" cy="140" r="15" fill="#ff6b6b" opacity="0.8"/>
                <text x="120" y="148" text-anchor="middle" fill="#fff" font-size="16" font-weight="bold">!</text>
            </svg>
        </div>

        <div class="error-code">500</div>
        <h1 class="error-title">خطای داخلی سرور!</h1>
        <p class="error-message">
            متأسفانه مشکلی در سرور رخ داده است و نمی‌توانیم درخواست شما را پردازش کنیم.
            <br>
            لطفاً چند لحظه بعد دوباره تلاش کنید یا با پشتیبانی تماس بگیرید.
        </p>
        
        <div style="margin-top: 2rem;">
            <button onclick="location.reload()" class="btn-refresh">تلاش مجدد</button>
            <a href="/" class="btn-home">صفحه اصلی</a>
        </div>
    </div>
</body>
</html>