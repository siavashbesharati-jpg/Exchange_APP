@model IEnumerable<ForexExchange.Models.ExchangeRate>

@{
    ViewData["Title"] = User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")) ? "مدیریت نرخ‌های ارز" : "نرخ‌های ارز";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">@ViewData["Title"]</h1>
                @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")))
                {
                    <div>
                        <a asp-action="Manage" class="btn btn-success">مدیریت ارزها</a>
                        <button type="button" class="btn btn-info" onclick="updateFromWeb()" title="بروزرسانی خودکار از وب">
                            <i class="fas fa-globe"></i> بروزرسانی از وب
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }

    <!-- Current Rates Display -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">نرخ‌های فعلی</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ارز</th>
                                        <th>نرخ خرید</th>
                                        <th>نرخ فروش</th>
                                        <th>تفاوت</th>
                                        <th>آخرین بروزرسانی</th>
                                        @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")))
                                        {
                                            <th>عملیات</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @{
                                                    var currencySymbol = item.ToCurrency?.Symbol ?? "";
                                                    var currencyName = item.ToCurrency?.PersianName ?? "نامشخص";
                                                    var badgeClass = currencySymbol switch
                                                    {
                                                        "USD" => "bg-primary",
                                                        "EUR" => "bg-success", 
                                                        "AED" => "bg-info",
                                                        "OMR" => "bg-warning",
                                                        "TRY" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@currencyName</span>
                                            </td>
                                            <td class="text-success fw-bold">@item.BuyRate.ToString("N0") تومان</td>
                                            <td class="text-danger fw-bold">@item.SellRate.ToString("N0") تومان</td>
                                            <td>
                                                @{
                                                    var difference = item.SellRate - item.BuyRate;
                                                    var percentage = (difference / item.BuyRate) * 100;
                                                }
                                                <span class="badge bg-secondary">
                                                    @difference.ToString("N0") (@percentage.ToString("F1")%)
                                                </span>
                                            </td>
                                            <td>@item.UpdatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                            @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")))
                                            {
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">ویرایش</a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">هیچ نرخ ارزی موجود نیست.</p>
                            @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")))
                            {
                                <a asp-action="Create" class="btn btn-primary">ثبت اولین نرخ</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden form for web update -->
@if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")))
{
    <form id="webUpdateForm" asp-action="UpdateFromWeb" method="post" style="display: none;">
        @Html.AntiForgeryToken()
    </form>
}

@section Scripts {
    <script>
        // Function to update rates from web
        function updateFromWeb() {
            if (confirm('آیا می‌خواهید نرخ‌ها را از وب بروزرسانی کنید؟\nاین عمل ممکن است چند دقیقه طول بکشد.')) {
                // Show loading indicator
                var button = event.target;
                var originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال بروزرسانی...';
                button.disabled = true;

                // Submit the hidden form
                document.getElementById('webUpdateForm').submit();
            }
        }
    </script>
}
