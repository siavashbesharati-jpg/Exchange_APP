@model IEnumerable<ForexExchange.Models.ExchangeRate>
@inject ForexExchange.Services.ISettingsService SettingsService

@{
    // Get dynamic branding data
    var websiteName = await SettingsService.GetWebsiteNameAsync();
    var companyName = await SettingsService.GetCompanyNameAsync();
    var companyWebsite = await SettingsService.GetCompanyWebsiteAsync(); 
    var logoDataUrl = await SettingsService.GetLogoDataUrlAsync();
    
    ViewData["Title"] = User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")) ? "مدیریت نرخ‌های ارز" : websiteName;
    
    // Open Graph Tags for better WhatsApp sharing
    ViewData["OGTitle"] = $"{websiteName} - نرخ‌های روز ارز";
    ViewData["OGDescription"] = $"مشاهده آخرین نرخ‌های ارز، دلار، یورو، پوند، درهم و سایر ارزها در {websiteName}. نرخ‌های به‌روز و قابل اعتماد.";
    ViewData["OGImage"] = logoDataUrl;
    ViewData["OGImageAlt"] = $"لوگو {websiteName}";
    ViewData["OGType"] = "website";
}

<div class="container-fluid">
    <!-- Compact Header -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img src="@logoDataUrl" alt="@companyName" 
                         style="width: 60px; height: 60px;" class="me-3">
                    <div>
                        <h1 class="h3 mb-1 text-primary fw-bold">@websiteName</h1>
                        <p class="text-muted mb-0 small">نرخ‌های ارز به‌روز و تبدیل آنلاین</p>
                    </div>
                </div>
                <div class="btn-group">
                    @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")))
                    {
                        <a asp-action="Manage" class="btn btn-success btn-sm">مدیریت ارزها</a>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }

    <!-- OMR Exchange Rates Display -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark py-2">
                    <h6 class="card-title mb-0"><i class="fas fa-coins me-2"></i>نرخ‌های ریال عمان (OMR)</h6>
                </div>
                <div class="card-body p-3">
                    @if (Model.Any())
                    {
                        var omrRates = Model.Where(r => string.Equals(r.FromCurrency?.Code, "OMR", System.StringComparison.OrdinalIgnoreCase)).ToList();
                        
                        @if (omrRates.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="border-0">ارز مقصد</th>
                                            <th class="border-0 text-center">نرخ (1 OMR =)</th>
                                            <th class="border-0 text-center">آخرین بروزرسانی</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in omrRates.OrderBy(r => r.ToCurrency?.DisplayOrder))
                                        {
                                            var toCode = item.ToCurrency?.Code?.ToUpper() ?? "?";
                                            var toName = item.ToCurrency?.PersianName ?? item.ToCurrency?.Name ?? toCode;
                                            var toSymbol = item.ToCurrency?.Symbol ?? toCode;
                                            string badgeClass = toCode switch
                                            {
                                                "USD" => "bg-primary",
                                                "EUR" => "bg-success", 
                                                "AED" => "bg-info",
                                                "IRR" => "bg-secondary",
                                                "TRY" => "bg-danger",
                                                "CNY" => "bg-warning text-dark",
                                                _ => "bg-dark"
                                            };
                                            <tr>
                                                <td>
                                                    <span class="badge @badgeClass me-2">@toCode</span>
                                                    <span class="fw-medium">@toName</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="fw-bold text-primary">@item.Rate.ToString("N2")</span>
                                                    <small class="text-muted ms-1">@toSymbol</small>
                                                </td>
                                                <td class="text-center">
                                                    <small class="text-muted">@item.UpdatedAt.ToString("yyyy/MM/dd HH:mm")</small>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <p class="text-muted">نرخ‌های ریال عمان موجود نیست.</p>
                                @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")))
                                {
                                    <a asp-action="Create" class="btn btn-primary btn-sm">ثبت نرخ‌های OMR</a>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <p class="text-muted">هیچ نرخ ارزی موجود نیست.</p>
                            @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff")))
                            {
                                <a asp-action="Create" class="btn btn-primary btn-sm">ثبت اولین نرخ</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

   
</div>

<!-- Hidden form for web update -->
