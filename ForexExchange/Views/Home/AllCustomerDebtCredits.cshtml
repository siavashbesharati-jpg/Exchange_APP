@model List<ForexExchange.Models.CustomerDebtCredit>
@using ForexExchange.Extensions

@{
    ViewData["Title"] = "وضعیت بدهی و بستانکاری همه مشتریان";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-cash-stack me-2 text-primary"></i>
                        وضعیت بدهی و بستانکاری همه مشتریان
                    </h2>
                    <p class="text-muted mb-0">مشاهده کامل وضعیت مالی تمامی مشتریان</p>
                </div>
                <div>
                    <a href="@Url.Action("Dashboard", "Home")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>
                        بازگشت به داشبورد
                    </a>
                    <button type="button" class="btn btn-primary" onclick="refreshAllDebtCredit()" title="بروزرسانی">
                        <i class="bi bi-arrow-clockwise me-1"></i>
                        بروزرسانی
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Customers List -->
    <div class="row">
        <div class="col-12">
            @if (Model != null && Model.Any())
            {
                <div class="row g-3" id="all-customers-container">
                    @foreach (var customerDebtCredit in Model)
                    {
                        <div class="col-xl-4 col-lg-6 col-md-6 mb-3">
                            <div class="card h-100 border-0 shadow-sm customer-debt-card">
                                <!-- Customer Header -->
                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="customer-avatar me-2">
                                            <i class="bi bi-person-circle text-primary" style="font-size: 1.5em;"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold">@customerDebtCredit.CustomerName</h6>
                                            <small class="text-muted">@customerDebtCredit.CustomerPhone</small>
                                        </div>
                                    </div>
                                </div>

                                <!-- Net Balance Summary -->
                                <div class="card-body text-center">
                                    

                                    <!-- Currency Breakdown -->
                                    <div class="currency-breakdown">
                                        <div class="row g-2">
                                            @foreach (var currencyBalance in customerDebtCredit.CurrencyBalances.Where(c=>c.Balance != 0))
                                            {
                                                <div class="col-4" dir="ltr">
                                                    <div class="currency-item p-2 rounded @(currencyBalance.Balance >= 0 ? "bg-success bg-opacity-10" : "bg-danger bg-opacity-10")">
                                                        <div class="currency-code fw-bold small">@currencyBalance.CurrencyCode</div>
                                                        <div class="currency-amount @(currencyBalance.Balance >= 0 ? "text-success" : "text-danger") tiny">
                                                            @(currencyBalance.CurrencyCode == "IRR" ? currencyBalance.Balance.ToString("N0") : currencyBalance.Balance.ToString("N2"))
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <!-- Quick Actions -->
                                    <div class="quick-actions mt-3">
                                        <div class="btn-group btn-group-sm w-100" role="group">
                                            <a href="@Url.Action("Profile", "Customers", new { id = customerDebtCredit.CustomerId })" class="btn btn-outline-primary btn-sm" title="پروفایل">
                                                <i class="bi bi-person"></i>
                                            </a>
                                            <a href="@Url.Action("Index", "CustomerTransactions", new { customerId = customerDebtCredit.CustomerId })" class="btn btn-outline-info btn-sm" title="تراکنش‌ها">
                                                <i class="bi bi-file-earmark-text"></i>
                                            </a>
                                            <a href="@Url.Action("Create", "Orders", new { customerId = customerDebtCredit.CustomerId })" class="btn btn-outline-success btn-sm" title="معامله جدید">
                                                <i class="bi bi-plus-circle"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <!-- Footer with Additional Info -->
                                <div class="card-footer bg-light text-center">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination can be added here if needed -->
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <p class="text-muted">
                           
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-cash-stack text-muted" style="font-size: 4rem;"></i>
                        <h4 class="text-muted mt-3">هیچ اطلاعات مالی یافت نشد</h4>
                        <p class="text-muted">در حال حاضر هیچ مشتری با بدهی یا بستانکاری وجود ندارد.</p>
                        <a href="@Url.Action("Index", "Customers")" class="btn btn-primary">
                            <i class="bi bi-people me-1"></i>
                            مدیریت مشتریان
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshAllDebtCredit() {
            // Show loading state
            $('#all-customers-container').html(`
                <div class="col-12 text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">در حال بارگذاری...</span>
                    </div>
                    <p class="mt-2 text-muted">در حال بروزرسانی اطلاعات...</p>
                </div>
            `);
            
            // Reload the page after a short delay to show loading
            setTimeout(function() {
                window.location.reload();
            }, 1000);
        }
        
        // Auto-refresh every 5 minutes
        setInterval(function() {
            refreshAllDebtCredit();
        }, 300000); // 5 minutes
    </script>

    <style>
        .customer-debt-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        
        .customer-debt-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }
        
        .currency-item {
            border: 1px solid rgba(0,0,0,0.1);
            transition: all 0.2s ease;
        }
        
        .currency-item:hover {
            transform: scale(1.05);
        }
        
        .currency-code {
            font-size: 0.75rem;
        }
        
        .currency-amount {
            font-size: 0.65rem;
            font-weight: bold;
        }
        
        .tiny {
            font-size: 0.6rem !important;
        }
        
        .customer-avatar i {
            transition: color 0.2s ease;
        }
        
        .customer-debt-card:hover .customer-avatar i {
            color: var(--bs-primary) !important;
        }
    </style>
}
