@{
    ViewData["Title"] = "داشبورد";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5">
                <i class="fas fa-tachometer-alt me-3"></i>
                داشبورد سامانه صرافی
            </h1>
            <p class="text-muted">دسترسی سریع به تمامی بخش‌های سیستم</p>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated == true)
    {
        @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff"))
        {
            <!-- Admin/Staff Dashboard -->
            
            <!-- Currency Pool Widget -->
            <div class="row mb-4">
                <div class="col-12">
                    <div id="pool-widget-container">
                        @await Html.PartialAsync("_PoolWidget", ViewBag.CurrencyPools as List<ForexExchange.Models.CurrencyPool>)
                    </div>
                </div>
            </div>
            
            <!-- Customer Debt/Credit Widget -->
            <div class="row mb-4">
                <div class="col-12">
                    <div id="debt-credit-widget-container">
                        @await Html.PartialAsync("_DebtCreditWidget", ViewBag.CustomerDebtCredits as List<ForexExchange.Models.CustomerDebtCredit>)
                    </div>
                </div>
            </div>
            
            <!-- Management Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-cogs text-primary me-2"></i>
                        مدیریت سیستم
                    </h4>
                </div>
            </div>
            
            <div class="row mb-4">
                <!-- Orders Management -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-primary mb-3">
                                <i class="fas fa-clipboard-list fa-3x"></i>
                            </div>
                            <h5 class="card-title">مدیریت معاملات</h5>
                            <p class="card-text">مشاهده و مدیریت تمامی معاملات مشتریان</p>
                            <a href="@Url.Action("Index", "Orders")" class="btn btn-primary">مشاهده معاملات</a>
                        </div>
                    </div>
                </div>

                <!-- Create New Order -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-success mb-3">
                                <i class="fas fa-plus-circle fa-3x"></i>
                            </div>
                            <h5 class="card-title">ثبت معامله جدید</h5>
                            <p class="card-text">ایجاد معامله خرید یا فروش ارز</p>
                            <a href="@Url.Action("Create", "Orders")" class="btn btn-success">ثبت معامله</a>
                        </div>
                    </div>
                </div>

                <!-- Customer Management -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-info mb-3">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <h5 class="card-title">مدیریت مشتریان</h5>
                            <p class="card-text">مشاهده اطلاعات و مدیریت مشتریان</p>
                            <a href="@Url.Action("Index", "Customers")" class="btn btn-info">مدیریت مشتریان</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Financial Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <hr class="my-4">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-dollar-sign text-success me-2"></i>
                        امور مالی
                    </h4>
                </div>
            </div>

            <div class="row mb-4">
                <!-- Settlements -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-warning mb-3">
                                <i class="fas fa-handshake fa-3x"></i>
                            </div>
                            <h5 class="card-title">تسویه حساب</h5>
                            <p class="card-text">مدیریت تسویه‌های مالی و تراکنش‌ها</p>
                            <a href="@Url.Action("Index", "Settlements")" class="btn btn-warning">تسویه حساب</a>
                        </div>
                    </div>
                </div>

                <!-- Receipts -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-secondary mb-3">
                                <i class="fas fa-receipt fa-3x"></i>
                            </div>
                            <h5 class="card-title">مدیریت رسیدها</h5>
                            <p class="card-text">بررسی و تایید رسیدهای مالی</p>
                            <a href="@Url.Action("Index", "Receipts")" class="btn btn-secondary">مشاهده رسیدها</a>
                        </div>
                    </div>
                </div>

                <!-- Reports -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-dark mb-3">
                                <i class="fas fa-chart-bar fa-3x"></i>
                            </div>
                            <h5 class="card-title">گزارشات مالی</h5>
                            <p class="card-text">گزارشات جامع از عملکرد مالی</p>
                            <a href="@Url.Action("Index", "Reports")" class="btn btn-dark">مشاهده گزارشات</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Exchange Rates Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <hr class="my-4">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-exchange-alt text-info me-2"></i>
                        نرخ‌های ارز
                    </h4>
                </div>
            </div>

            <div class="row mb-4">
                <!-- Exchange Rates Management -->
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-primary mb-3">
                                <i class="fas fa-coins fa-3x"></i>
                            </div>
                            <h5 class="card-title">مدیریت نرخ‌ها</h5>
                            <p class="card-text">تنظیم و بروزرسانی نرخ‌های خرید و فروش</p>
                            <a href="@Url.Action("Index", "ExchangeRates")" class="btn btn-primary">مدیریت نرخ‌ها</a>
                        </div>
                    </div>
                </div>

                <!-- Currency Management -->
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-success mb-3">
                                <i class="fas fa-money-bill-wave fa-3x"></i>
                            </div>
                            <h5 class="card-title">مدیریت ارزها</h5>
                            <p class="card-text">ایجاد، مشاهده و ویرایش ارزها (بدون حذف؛ فقط فعال/غیرفعال)</p>
                            <a href="@Url.Action("Index", "Currencies")" class="btn btn-success">مدیریت ارزها</a>
                        </div>
                    </div>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <!-- System Settings (Admin Only) -->
                    <div class="col-lg-6 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <div class="text-danger mb-3">
                                    <i class="fas fa-cog fa-3x"></i>
                                </div>
                                <h5 class="card-title">تنظیمات سیستم</h5>
                                <p class="card-text">پیکربندی عمومی سیستم و کمیسیون‌ها</p>
                                <a href="@Url.Action("Index", "Settings")" class="btn btn-danger">تنظیمات</a>
                            </div>
                        </div>
                    </div>

                    <!-- Admin Management (SuperAdmin Only) -->
                    <div class="col-lg-6 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <div class="text-warning mb-3">
                                    <i class="fas fa-user-shield fa-3x"></i>
                                </div>
                                <h5 class="card-title">مدیریت ادمین‌ها</h5>
                                <p class="card-text">مدیریت کاربران ادمین و نقش‌های آنها</p>
                                <a href="@Url.Action("ManageAdmins", "AdminManagement")" class="btn btn-warning">مدیریت ادمین‌ها</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else if (User.IsInRole("Customer"))
        {
            <!-- Customer Dashboard -->
            
            <!-- Exchange Rates Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-chart-line text-success me-2"></i>
                        نرخ‌های ارز و حساب کاربری
                    </h4>
                </div>
            </div>

            <div class="row mb-4">
                <!-- My Transactions -->
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-info mb-3">
                                <i class="fas fa-exchange-alt fa-3x"></i>
                            </div>
                            <h5 class="card-title">تراکنش‌های من</h5>
                            <p class="card-text">تاریخچه کامل معاملات انجام شده</p>
                            <a href="@Url.Action("Index", "CustomerTransactions")" class="btn btn-info">مشاهده تراکنش‌ها</a>
                        </div>
                    </div>
                </div>

                <!-- My Profile -->
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-secondary mb-3">
                                <i class="fas fa-user fa-3x"></i>
                            </div>
                            <h5 class="card-title">پروفایل من</h5>
                            <p class="card-text">مشاهده و ویرایش اطلاعات شخصی</p>
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">پروفایل</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Exchange Rates Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <hr class="my-4">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-chart-line text-success me-2"></i>
                        نرخ‌های ارز
                    </h4>
                </div>
            </div>

            <div class="row mb-4">
                <!-- Exchange Rates -->
                <div class="col-lg-12 col-md-12 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-warning mb-3">
                                <i class="fas fa-coins fa-3x"></i>
                            </div>
                            <h5 class="card-title">نرخ‌های لحظه‌ای ارز</h5>
                            <p class="card-text">مشاهده آخرین نرخ‌های خرید و فروش ارز</p>
                            <a href="@Url.Action("Index", "ExchangeRates")" class="btn btn-warning">مشاهده نرخ‌ها</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Public Dashboard -->
        
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="jumbotron bg-primary text-white p-5 rounded text-center">
                    <h2 class="display-6">به سامانه صرافی تابان  خوش آمدید</h2>
                    <p class="lead">برای دسترسی به امکانات کامل سیستم، وارد حساب کاربری خود شوید</p>
                </div>
            </div>
        </div>

        <!-- Public Services -->
        <div class="row mb-4">
            <div class="col-12">
                <h4 class="border-bottom pb-2 mb-3">
                    <i class="fas fa-globe text-info me-2"></i>
                    خدمات عمومی
                </h4>
            </div>
        </div>

        <div class="row mb-4">
            <!-- Exchange Rates -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-primary mb-3">
                            <i class="fas fa-chart-line fa-3x"></i>
                        </div>
                        <h5 class="card-title">نرخ‌های ارز</h5>
                        <p class="card-text">مشاهده آخرین نرخ‌های خرید و فروش ارز</p>
                        <a href="@Url.Action("Index", "ExchangeRates")" class="btn btn-primary">مشاهده نرخ‌ها</a>
                    </div>
                </div>
            </div>

            <!-- Login -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-success mb-3">
                            <i class="fas fa-sign-in-alt fa-3x"></i>
                        </div>
                        <h5 class="card-title">ورود به سیستم</h5>
                        <p class="card-text">ورود به حساب کاربری برای انجام معاملات</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success">ورود</a>
                    </div>
                </div>
            </div>

            <!-- Register -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-info mb-3">
                            <i class="fas fa-user-plus fa-3x"></i>
                        </div>
                        <h5 class="card-title">ثبت نام</h5>
                        <p class="card-text">عضویت در سیستم برای شروع معاملات ارز</p>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-info">ثبت نام</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
