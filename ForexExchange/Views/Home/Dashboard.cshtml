@{
    ViewData["Title"] = "داشبورد";
}

<div class="container-fluid" style="padding-bottom: 100px;">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <div class="mb-3">
                <img src="~/favicon/android-chrome-512x512.png" alt="تابان" 
                     style="width: 250px; height: 250px; margin: 32px;" class="mb-3">
                <h1 class="display-5 fw-bold text-primary">
                    سامانه معاملات  تابان
                </h1>
            </div>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated == true)
    {
        @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff"))
        {
            <!-- Admin/Staff Dashboard -->
            
            <!-- Currency Pool Widget -->
            <div class="row mb-4">
                <div class="col-12">
                    <div id="pool-widget-container">
                        @await Html.PartialAsync("_PoolWidget", ViewBag.CurrencyPools as List<ForexExchange.Models.CurrencyPool>)
                    </div>
                </div>
            </div>
            
            <!-- Exchange Rates Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-chart-line text-success me-2"></i>
                        نرخ‌های لحظه‌ای ارز
                    </h4>
                </div>
            </div>

            <div class="row mb-4">
                <!-- Exchange Rates -->
                <div class="col-lg-12 col-md-12 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-warning mb-3">
                                <i class="fas fa-coins fa-3x"></i>
                            </div>
                            <h5 class="card-title">نرخ‌های لحظه‌ای ارز</h5>
                            <p class="card-text">مشاهده آخرین نرخ‌های خرید و فروش ارز</p>
                            <a href="@Url.Action("Index", "ExchangeRates")" class="btn btn-warning">مشاهده نرخ‌ها</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Footer -->
            <div class="fixed-bottom bg-white border-top shadow-lg p-3">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex justify-content-center flex-wrap gap-2">
                                <!-- Create AccountDocument -->
                                <a href="@Url.Action("Create", "AccountingDocuments")" class="btn btn-success flex-fill flex-sm-grow-0">
                                    <i class="fas fa-file-invoice me-2"></i>
                                    <span class="d-none d-sm-inline">ایجاد سند حسابداری</span>
                                    <span class="d-sm-none">سند</span>
                                </a>
                                
                                <!-- Create Order -->
                                <a href="@Url.Action("Create", "Orders")" class="btn btn-primary flex-fill flex-sm-grow-0">
                                    <i class="fas fa-plus-circle me-2"></i>
                                    <span class="d-none d-sm-inline">ثبت معامله جدید</span>
                                    <span class="d-sm-none">معامله</span>
                                </a>
                                
                                <!-- Create Customer -->
                                <a href="@Url.Action("Create", "Customers")" class="btn btn-info flex-fill flex-sm-grow-0">
                                    <i class="fas fa-user-plus me-2"></i>
                                    <span class="d-none d-sm-inline">ثبت مشتری جدید</span>
                                    <span class="d-sm-none">مشتری</span>
                                </a>
                                
                                <!-- Advanced Manage -->
                                <a href="@Url.Action("Management", "Home")" class="btn btn-dark flex-fill flex-sm-grow-0">
                                    <i class="fas fa-cogs me-2"></i>
                                    <span class="d-none d-sm-inline">مدیریت پیشرفته</span>
                                    <span class="d-sm-none">مدیریت</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (User.IsInRole("Customer"))
        {
            <!-- Customer Dashboard -->
            
            <!-- Exchange Rates Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-chart-line text-success me-2"></i>
                        نرخ‌های ارز و حساب کاربری
                    </h4>
                </div>
            </div>

            <div class="row mb-4">
                <!-- My Transactions -->
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-info mb-3">
                                <i class="fas fa-exchange-alt fa-3x"></i>
                            </div>
                            <h5 class="card-title">تراکنش‌های من</h5>
                            <p class="card-text">تاریخچه کامل معاملات انجام شده</p>
                            <a href="@Url.Action("Index", "CustomerTransactions")" class="btn btn-info">مشاهده تراکنش‌ها</a>
                        </div>
                    </div>
                </div>

                <!-- My Profile -->
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-secondary mb-3">
                                <i class="fas fa-user fa-3x"></i>
                            </div>
                            <h5 class="card-title">پروفایل من</h5>
                            <p class="card-text">مشاهده و ویرایش اطلاعات شخصی</p>
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">پروفایل</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Exchange Rates Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <hr class="my-4">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-chart-line text-success me-2"></i>
                        نرخ‌های ارز
                    </h4>
                </div>
            </div>

            <div class="row mb-4">
                <!-- Exchange Rates -->
                <div class="col-lg-12 col-md-12 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="text-warning mb-3">
                                <i class="fas fa-coins fa-3x"></i>
                            </div>
                            <h5 class="card-title">نرخ‌های لحظه‌ای ارز</h5>
                            <p class="card-text">مشاهده آخرین نرخ‌های خرید و فروش ارز</p>
                            <a href="@Url.Action("Index", "ExchangeRates")" class="btn btn-warning">مشاهده نرخ‌ها</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Public Dashboard -->
        
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="jumbotron bg-primary text-white p-5 rounded text-center">
                    <h2 class="display-6">به سامانه معاملات  تابان  خوش آمدید</h2>
                    <p class="lead">برای دسترسی به امکانات کامل سیستم، وارد حساب کاربری خود شوید</p>
                </div>
            </div>
        </div>

        <!-- Public Services -->
        <div class="row mb-4">
            <div class="col-12">
                <h4 class="border-bottom pb-2 mb-3">
                    <i class="fas fa-globe text-info me-2"></i>
                    خدمات عمومی
                </h4>
            </div>
        </div>

        <div class="row mb-4">
            <!-- Exchange Rates -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-primary mb-3">
                            <i class="fas fa-chart-line fa-3x"></i>
                        </div>
                        <h5 class="card-title">نرخ‌های ارز</h5>
                        <p class="card-text">مشاهده آخرین نرخ‌های خرید و فروش ارز</p>
                        <a href="@Url.Action("Index", "ExchangeRates")" class="btn btn-primary">مشاهده نرخ‌ها</a>
                    </div>
                </div>
            </div>

            <!-- Login -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-success mb-3">
                            <i class="fas fa-sign-in-alt fa-3x"></i>
                        </div>
                        <h5 class="card-title">ورود به سیستم</h5>
                        <p class="card-text">ورود به حساب کاربری برای انجام معاملات</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success">ورود</a>
                    </div>
                </div>
            </div>

            <!-- Register -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-info mb-3">
                            <i class="fas fa-user-plus fa-3x"></i>
                        </div>
                        <h5 class="card-title">ثبت نام</h5>
                        <p class="card-text">عضویت در سیستم برای شروع معاملات ارز</p>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-info">ثبت نام</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
