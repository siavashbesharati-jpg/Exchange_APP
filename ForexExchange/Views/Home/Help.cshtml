    <script>
        // Add smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Prevent number formatting for phone numbers
        document.addEventListener('DOMContentLoaded', function() {
            // Find all elements with no-format class and protect them from formatting
            const noFormatElements = document.querySelectorAll('.no-format');
            noFormatElements.forEach(element => {
                const originalText = element.textContent;
                element.setAttribute('data-original', originalText);
                
                // Override any global formatting that might affect this element
                const observer = new MutationObserver(function(mutations) {
                    mutations.forEach(function(mutation) {
                        if (mutation.type === 'childList' || mutation.type === 'characterData') {
                            const current = element.textContent;
                            const original = element.getAttribute('data-original');
                            if (current !== original && original) {
                                element.textContent = original;
                            }
                        }
                    });
                });
                
                observer.observe(element, {
                    childList: true,
                    characterData: true,
                    subtree: true
                });
            });
        });
    </script>
