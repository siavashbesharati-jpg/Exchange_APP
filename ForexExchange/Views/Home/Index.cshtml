@{
    ViewData["Title"] = "سامانه صرافی ایران اکسپدیا";
    var exchangeRates = ViewBag.ExchangeRates as List<ForexExchange.Models.ExchangeRate>;
    var availableOrders = ViewBag.AvailableOrders as List<ForexExchange.Models.Order>;
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white p-5 rounded">
                <div class="text-center">
                    <h1 class="display-4">
                        <i class="fas fa-exchange-alt me-3"></i>
                        سامانه صرافی ایران اکسپدیا
                    </h1>
                    <p class="lead mt-3">
                        خرید و فروش ارز با بهترین نرخ‌ها و بالاترین سطح امنیت
                    </p>
                    <hr class="my-4 bg-white">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="h4">@ViewBag.TotalActiveOrders</div>
                            <small>سفارش‌های فعال</small>
                        </div>
                        <div class="col-md-4">
                            <div class="h4">@ViewBag.CompletedTransactionsToday</div>
                            <small>تراکنش‌های امروز</small>
                        </div>
                        <div class="col-md-4">
                            <div class="h4">@(exchangeRates?.Count ?? 0)</div>
                            <small>ارزهای موجود</small>
                        </div>
                    </div>

                    @if (!User.Identity?.IsAuthenticated == true)
                    {
                        <div class="mt-4">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg me-3">
                                <i class="fas fa-user-plus me-2"></i>
                                ثبت نام
                            </a>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                ورود
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Exchange Rates Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        نرخ‌های ارز روز
                    </h5>
                </div>
                <div class="card-body">
                    @if (exchangeRates != null && exchangeRates.Any())
                    {
                        <div class="row">
                            @foreach (var rate in exchangeRates)
                            {
                                <div class="col-md-4 col-lg-2 mb-3">
                                    <div class="card border-primary h-100">
                                        <div class="card-body text-center">
                                            <div class="currency-icon mb-2">
                                                @switch (rate.Currency)
                                                {
                                                    case ForexExchange.Models.CurrencyType.USD:
                                                        <i class="fas fa-dollar-sign text-success fa-2x"></i>
                                                        <div class="fw-bold">دلار آمریکا</div>
                                                        break;
                                                    case ForexExchange.Models.CurrencyType.EUR:
                                                        <i class="fas fa-euro-sign text-primary fa-2x"></i>
                                                        <div class="fw-bold">یورو</div>
                                                        break;
                                                    case ForexExchange.Models.CurrencyType.AED:
                                                        <i class="fas fa-coins text-warning fa-2x"></i>
                                                        <div class="fw-bold">درهم امارات</div>
                                                        break;
                                                    case ForexExchange.Models.CurrencyType.OMR:
                                                        <i class="fas fa-coins text-info fa-2x"></i>
                                                        <div class="fw-bold">ریال عمان</div>
                                                        break;
                                                    case ForexExchange.Models.CurrencyType.TRY:
                                                        <i class="fas fa-lira-sign text-danger fa-2x"></i>
                                                        <div class="fw-bold">لیر ترکیه</div>
                                                        break;
                                                    default:
                                                        <i class="fas fa-money-bill text-secondary fa-2x"></i>
                                                        <div class="fw-bold">@rate.Currency</div>
                                                        break;
                                                }
                                            </div>

                                            <div class="rate-info">
                                                <div class="mb-2">
                                                    <small class="text-muted">نرخ خرید</small>
                                                    <div class="h6 text-success">@rate.BuyRate.ToString("N0")</div>
                                                </div>
                                                <div>
                                                    <small class="text-muted">نرخ فروش</small>
                                                    <div class="h6 text-danger">@rate.SellRate.ToString("N0")</div>
                                                </div>
                                            </div>

                                            <small class="text-muted">
                                                آخرین بروزرسانی: @rate.UpdatedAt.ToFriendlyPersianDateTextify()
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">نرخ‌های ارز در حال بارگذاری...</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Available Orders Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-shopping-cart me-2"></i>
                            سفارش‌های باز و قابل معامله
                        </h5>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Orders" asp-action="Create" class="btn btn-light btn-sm">
                                <i class="fas fa-plus me-1"></i>
                                ثبت سفارش جدید
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-sm">
                                <i class="fas fa-sign-in-alt me-1"></i>
                                ورود برای معامله
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (availableOrders != null && availableOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>نوع سفارش</th>
                                        <th>ارز</th>
                                        <th>مقدار</th>
                                        <th>نرخ پیشنهادی</th>
                                        <th>کل (تومان)</th>
                                        <th>وضعیت</th>
                                        <th>تاریخ ثبت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in availableOrders)
                                    {
                                        <tr>
                                            <td>
                                                @if (order.OrderType == ForexExchange.Models.OrderType.Buy)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-arrow-down me-1"></i>خرید
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-arrow-up me-1"></i>فروش
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@order.Currency</span>
                                            </td>
                                            <td class="fw-bold">@order.Amount.ToString("N2")</td>
                                            <td class="text-success fw-bold">@order.Rate.ToString("N0")</td>
                                            <td class="text-danger fw-bold">@order.TotalInToman.ToString("N0")</td>
                                            <td>
                                                @if (order.Status == ForexExchange.Models.OrderStatus.Open)
                                                {
                                                    <span class="badge bg-primary">باز</span>
                                                }
                                                else if (order.Status == ForexExchange.Models.OrderStatus.PartiallyFilled)
                                                {
                                                    <span class="badge bg-warning">نیمه تکمیل</span>
                                                }
                                            </td>
                                            <td>@order.CreatedAt.ToPersianDateTextify()</td>
                                            <td>
                                                @if (User.Identity?.IsAuthenticated == true)
                                                {
                                                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id"
                                                        class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i>
                                                        جزئیات
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a asp-controller="Account" asp-action="Login"
                                                        class="btn btn-sm btn-outline-secondary">
                                                        <i class="fas fa-sign-in-alt me-1"></i>
                                                        ورود
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="text-center mt-3">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">
                                    <i class="fas fa-list me-1"></i>
                                    مشاهده همه سفارش‌ها
                                </a>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    برای مشاهده کامل سفارش‌ها و شرکت در معاملات، لطفاً وارد حساب کاربری خود شوید.
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">در حال حاضر سفارش باز و قابل معامله‌ای وجود ندارد</h5>
                            <p class="text-muted">سفارش جدید ثبت کنید تا سایر کاربران بتوانند با شما معامله کنند.</p>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="Orders" asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>
                                    ثبت اولین سفارش
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                                    <i class="fas fa-user-plus me-1"></i>
                                    ثبت نام و شروع معامله
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section for Non-Authenticated Users -->
    @if (!User.Identity?.IsAuthenticated == true)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-star me-2"></i>
                            ویژگی‌های سامانه
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 text-center mb-3">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-shield-alt fa-3x text-success"></i>
                                </div>
                                <h6>امنیت بالا</h6>
                                <p class="text-muted small">تمامی معاملات با بالاترین سطح امنیت انجام می‌شود</p>
                            </div>
                            <div class="col-md-3 text-center mb-3">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-clock fa-3x text-primary"></i>
                                </div>
                                <h6>سرعت بالا</h6>
                                <p class="text-muted small">تسویه سریع و آنی تراکنش‌ها</p>
                            </div>
                            <div class="col-md-3 text-center mb-3">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-chart-line fa-3x text-warning"></i>
                                </div>
                                <h6>نرخ‌های رقابتی</h6>
                                <p class="text-muted small">بهترین نرخ‌های خرید و فروش در بازار</p>
                            </div>
                            <div class="col-md-3 text-center mb-3">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-headset fa-3x text-info"></i>
                                </div>
                                <h6>پشتیبانی ۲۴/۷</h6>
                                <p class="text-muted small">تیم پشتیبانی ما همیشه در خدمت شماست</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .jumbotron {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }

    .currency-icon {
        min-height: 80px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .rate-info {
        border-top: 1px solid #eee;
        padding-top: 10px;
    }

    .feature-icon {
        transition: transform 0.3s ease;
    }

    .feature-icon:hover {
        transform: translateY(-5px);
    }

    .jumbotron {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }

    .currency-icon {
        min-height: 80px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .rate-info {
        border-top: 1px solid #eee;
        padding-top: 10px;
    }

    .feature-icon {
        transition: transform 0.3s ease;
    }
</style>
