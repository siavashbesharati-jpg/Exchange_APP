@{
    ViewData["Title"] = "مدیریت سیستم";
}

<div class="container-fluid">
    <!-- Header Section -->


    <!-- First Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="border-bottom pb-2 mb-3">
                <i class="fas fa-wallet text-primary me-2"></i>
                مدیریت مالی و حساب‌ها
            </h4>
        </div>
    </div>

    <div class="row mb-4">

        <!-- Bank Account Management -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-3">
                        <i class="fas fa-university fa-3x"></i>
                    </div>
                    <h5 class="card-title">مدیریت حساب‌های بانکی</h5>
                    <p class="card-text">مدیریت حساب‌های بانکی مشتریان و سیستم</p>
                    <a href="@Url.Action("Index", "BankAccount")" class="btn btn-primary">مدیریت حساب‌ها</a>
                </div>
            </div>
        </div>

        <!-- Customer Management -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-info mb-3">
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                    <h5 class="card-title">مدیریت مشتریان</h5>
                    <p class="card-text">مشاهده اطلاعات و مدیریت مشتریان</p>
                    <a href="@Url.Action("Index", "Customers")" class="btn btn-info">مدیریت مشتریان</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="border-bottom pb-2 mb-3">
                <i class="fas fa-chart-line text-success me-2"></i>
                معاملات و گزارشات
            </h4>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Orders Management -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-3">
                        <i class="fas fa-clipboard-list fa-3x"></i>
                    </div>
                    <h5 class="card-title">مدیریت معاملات</h5>
                    <p class="card-text">مشاهده و مدیریت تمامی معاملات مشتریان</p>
                    <a href="@Url.Action("Index", "Orders")" class="btn btn-primary">مشاهده معاملات</a>
                </div>
            </div>
        </div>

        <!-- Accounting Documents -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-secondary mb-3">
                        <i class="fas fa-file-invoice fa-3x"></i>
                    </div>
                    <h5 class="card-title">مدیریت اسناد حسابداری</h5>
                    <p class="card-text">بررسی و تایید اسناد حسابداری</p>
                    <a href="@Url.Action("Index", "AccountingDocuments")" class="btn btn-secondary">مشاهده اسناد</a>
                </div>
            </div>
        </div>

        <!-- Reports -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-dark mb-3">
                        <i class="fas fa-chart-bar fa-3x"></i>
                    </div>
                    <h5 class="card-title">گزارشات مالی</h5>
                    <p class="card-text">گزارشات جامع از عملکرد مالی</p>
                    <a href="@Url.Action("Index", "Reports")" class="btn btn-dark">مشاهده گزارشات</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Exchange Rates Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="border-bottom pb-2 mb-3">
                <i class="fas fa-exchange-alt text-info me-2"></i>
                نرخ‌های ارز و مدیریت ارزها
            </h4>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Exchange Rates Management -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-3">
                        <i class="fas fa-coins fa-3x"></i>
                    </div>
                    <h5 class="card-title">مدیریت نرخ‌ها</h5>
                    <p class="card-text">تنظیم و بروزرسانی نرخ‌های خرید و فروش</p>
                    <a href="@Url.Action("Index", "ExchangeRates")" class="btn btn-primary">مدیریت نرخ‌ها</a>
                </div>
            </div>
        </div>

        <!-- Currency Management -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-success mb-3">
                        <i class="fas fa-money-bill-wave fa-3x"></i>
                    </div>
                    <h5 class="card-title">مدیریت ارزها</h5>
                    <p class="card-text">مدیریت انواع ارزها و تنظیمات مربوطه</p>
                    <a href="@Url.Action("Index", "Currencies")" class="btn btn-success">مدیریت ارزها</a>
                </div>
            </div>
        </div>
    </div>

    <!-- User Profile Section (For All Management Users) -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="border-bottom pb-2 mb-3">
                <i class="fas fa-user text-secondary me-2"></i>
                حساب کاربری
            </h4>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Edit Profile -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-3">
                        <i class="fas fa-user-edit fa-3x"></i>
                    </div>
                    <h5 class="card-title">ویرایش پروفایل</h5>
                    <p class="card-text">ویرایش اطلاعات شخصی و تنظیمات حساب</p>
                    <a href="@Url.Action("Profile", "Account")" class="btn btn-primary">
                        <i class="fas fa-user-edit me-2"></i>
                        ویرایش پروفایل
                    </a>
                </div>
            </div>
        </div>

        <!-- System Logout -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-danger mb-3">
                        <i class="fas fa-power-off fa-3x"></i>
                    </div>
                    <h5 class="card-title">خروج از سیستم</h5>
                    <p class="card-text">خروج امن از حساب کاربری</p>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-power-off me-2"></i>
                            خروج از سیستم
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!-- Admin Management -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-warning mb-3">
                        <i class="fas fa-user-shield fa-3x"></i>
                    </div>
                    <h5 class="card-title">مدیریت ادمین‌ها</h5>
                    <p class="card-text">مدیریت کاربران ادمین و نقش‌های آنها</p>
                    <a href="@Url.Action("ManageAdmins", "AdminManagement")" class="btn btn-warning">مدیریت ادمین‌ها</a>
                </div>
            </div>
        </div>
    </div>


    <div class="row mb-4">
        <div class="col-12">
            <h4 class="border-bottom pb-2 mb-3">
                <i class="fas fa-shield-alt text-danger me-2"></i>
                دییتابیس
            </h4>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Database Management (Admin Only) -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="text-dark mb-3">
                        <i class="fas fa-database fa-3x"></i>
                    </div>
                    <h5 class="card-title">مدیریت پایگاه داده</h5>
                    <p class="card-text">پشتیبان‌گیری، بازیابی و پاکسازی پایگاه داده</p>
                    <a href="@Url.Action("Index", "Database")" class="btn btn-dark">مدیریت پایگاه داده</a>
                </div>
            </div>
        </div>
    </div>
    @if (User.IsInRole("Programmer"))
    {
        <!-- Admin Only Section -->
        <div class="row mb-4">
            <div class="col-12">
                <h4 class="border-bottom pb-2 mb-3">
                    <i class="fas fa-shield-alt text-danger me-2"></i>
                    مدیریت پیشرفته
                </h4>
            </div>
        </div>


        <div class="row mb-4">

            <!-- System Settings (Admin Only) -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-danger mb-3">
                            <i class="fas fa-cog fa-3x"></i>
                        </div>
                        <h5 class="card-title">تنظیمات سیستم</h5>
                        <p class="card-text">پیکربندی عمومی سیستم و کمیسیون‌ها</p>
                        <a href="@Url.Action("Index", "Settings")" class="btn btn-danger">تنظیمات</a>
                    </div>
                </div>
            </div>


            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-purple mb-3" style="color: #6f42c1;">
                            <i class="fas fa-palette fa-3x"></i>
                        </div>
                        <h5 class="card-title">برندینگ وب‌سایت</h5>
                        <p class="card-text">مدیریت نام وب‌سایت، لوگو و اطلاعات شرکت</p>
                        <a href="@Url.Action("Branding", "Settings")" class="btn btn-outline-purple"
                            style="border-color: #6f42c1; color: #6f42c1;">
                            <i class="fas fa-paint-brush me-1"></i>مدیریت برندینگ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<style>
    /* Purple button styling for branding card */
    .btn-outline-purple {
        transition: all 0.3s ease;
    }

    .btn-outline-purple:hover {
        background-color: #6f42c1 !important;
        border-color: #6f42c1 !important;
        color: white !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(111, 66, 193, 0.3);
    }

    .text-purple:hover {
        color: #5a32a3 !important;
    }

    /* Card hover effects */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    }

    /* Icon pulse animation for branding */
    .fa-palette {
        animation: pulse-purple 2s infinite;
    }

    @@keyframes pulse-purple {
        0% {
            color: #6f42c1;
        }

        50% {
            color: #8b5fbf;
        }

        100% {
            color: #6f42c1;
        }
    }
</style>