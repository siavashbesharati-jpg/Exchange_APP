            const url = `/Orders/GetExchangeRate?fromCurrencyId=${fromCurrencyId}&toCurrencyId=${toCurrencyId}&orderType=Buy`;

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.rate > 0) {
                        // Get currency codes for rate formatting
                        const fromCode = calcFromCurrencyCode;
                        const toCode = calcToCurrencyCode;


                        let displayRate = data.rate;
                        let isRateInverted = false;

                        // Smart rate display: always show the larger, more intuitive number
                        // Exception: If IRR is involved, follow existing logic for IRR
                        if (fromCode.toUpperCase() === 'IRR') {
                            // FROM is IRR, invert to show foreign currency per IRR (e.g., 0.024 USD per IRR)
                            displayRate = 1 / data.rate;
                            isRateInverted = true;
                        } else if (toCode.toUpperCase() === 'IRR') {
                            // TO is IRR, keep direct rate (e.g., 42000 IRR per USD) 
                            displayRate = data.rate;
                            isRateInverted = false;
                        } else {
                            // Both currencies are non-IRR, choose direction that gives larger number
                            const directRate = data.rate;
                            const inverseRate = 1 / data.rate;
                            
                            if (inverseRate > directRate) {
                                // Inverse rate is larger, so display it (swap the direction conceptually)
                                displayRate = inverseRate;
                                isRateInverted = true;
                            } else {
                                // Direct rate is larger or equal, use it
