@model ForexExchange.Models.Order
@using ForexExchange.Extensions

@{
    ViewData["Title"] = "جزئیات معامله";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>جزئیات معامله #@Model.Id</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
            @* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">ویرایش</a> *@
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }

    <div class="row g-3">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">اطلاعات مشتری</h5>
                </div>
                <div class="card-body">
                    @if (Model.Customer != null)
                    {
                        <div class="mb-2"><strong>نام:</strong> @Model.Customer.FullName</div>
                        <div class="text-muted"><i class="fas fa-phone"></i> @Model.Customer.PhoneNumber</div>
                    }
                    else
                    {
                        <div class="text-muted">مشتری: @Model.CustomerId</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"> اطلاعات زمانی </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6"><strong>تاریخ ایجاد:</strong> @Model.CreatedAt.ToPersianDateTextify()
                        </div>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="col-md-6"><strong>آخرین بروزرسانی:</strong>
                                @Model.UpdatedAt.Value.ToPersianDateTextify()</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5 class="mb-0">جزئیات تبادل ارز</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6"><strong>جفت ارز:</strong> @Model.FromCurrency?.Code / @Model.ToCurrency?.Code
                </div>

                <div class="col-md-6"><strong>نرخ تبدیل:</strong>
                    @* Rate calculated in backend for consistency *@
                    @Model.Rate
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6"><strong> دریافت می کنیم :</strong>
                    @Model.FromAmount.FormatCurrency(Model.FromCurrency?.Code) @(Model.FromCurrency?.Code == "IRR" ?
                    "Toman" : Model.FromCurrency?.Code)
                    <div class="col-md-6"><strong> پرداخت می کنیم :</strong>
                        @Model.ToAmount.FormatCurrency(Model.ToCurrency?.Code) @(Model.ToCurrency?.Code == "IRR" ?
                        "Toman" : Model.ToCurrency?.Code)</div>
                </div>
            </div>
        </div>
    </div>






