@model ForexExchange.Models.Order

@{
    ViewData["Title"] = "جزئیات معامله";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>جزئیات معامله #@Model.Id</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">ویرایش</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }

    <div class="row g-3">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">اطلاعات مشتری</h5>
                </div>
                <div class="card-body">
                    @if (Model.Customer != null)
                    {
                        <div class="mb-2"><strong>نام:</strong> @Model.Customer.FullName</div>
                        <div class="text-muted"><i class="fas fa-phone"></i> @Model.Customer.PhoneNumber</div>
                    }
                    else
                    {
                        <div class="text-muted">مشتری: @Model.CustomerId</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"> اطلاعات زمانی </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6"><strong>تاریخ ایجاد:</strong> @Model.CreatedAt.ToPersianDateTextify()
                        </div>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="col-md-6"><strong>آخرین بروزرسانی:</strong>
                                @Model.UpdatedAt.Value.ToPersianDateTextify()</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5 class="mb-0">جزئیات تبادل ارز</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6"><strong>جفت ارز:</strong> @Model.FromCurrency?.Code / @Model.ToCurrency?.Code
                </div>
              
                <div class="col-md-6"><strong>نرخ تبادل:</strong> @(Model.ToCurrency?.Code == "IRR" ? Model.Rate.ToString("N0") : Model.Rate.ToString("N2"))</div>
                
            </div>
            <div class="row mt-2">
                        <div class="col-md-6"><strong> دریافت می کنیم  :</strong> @(Model.FromCurrency?.Code == "IRR" ? Model.Amount.ToString("N0") : Model.Amount.ToString("N2")) @Model.FromCurrency?.Code
                        <div class="col-md-6"><strong> پرداخت می کنیم    :</strong> @(Model.ToCurrency?.Code == "IRR" ? Model.TotalAmount.ToString("N0") : Model.TotalAmount.ToString("N2")) @Model.ToCurrency?.Code</div>
                </div>
            </div>
        </div>
    </div>



  


    <!-- Available Orders for Matching (Display Only - No Action Buttons) -->
    @if (ViewBag.AvailableOrders != null && ((List<ForexExchange.Models.Order>)ViewBag.AvailableOrders).Any())
    {
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-exchange-alt me-2"></i>
                    معاملات قابل مچ
                </h5>
                <small class="text-muted">معاملاتی که با این معامله قابل تطبیق هستند (فقط نمایش)</small>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>شناسه</th>
                                <th>مشتری</th>
                                <th>جفت ارز</th>
                                <th>مبلغ</th>
                                <th>نرخ</th>
                                <th>مقدار باقیمانده</th>
                                <th>وضعیت</th>
                                <th>تاریخ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var availableOrder in (List<ForexExchange.Models.Order>)ViewBag.AvailableOrders)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@availableOrder.Id" class="text-decoration-none">
                                            #@availableOrder.Id
                                        </a>
                                    </td>
                                    <td>@availableOrder.Customer?.FullName</td>
                                    <td>
                                        <strong>@availableOrder.FromCurrency?.Code</strong>
                                        <i class="fas fa-arrow-right mx-1"></i>
                                        <strong>@availableOrder.ToCurrency?.Code</strong>
                                    </td>
                                    <td>@(availableOrder.FromCurrency?.Code == "IRR" ? availableOrder.Amount.ToString("N0") : availableOrder.Amount.ToString("N2")) @availableOrder.FromCurrency?.Code</td>
                                    <td>@(availableOrder.ToCurrency?.Code == "IRR" ? availableOrder.Rate.ToString("N0") : availableOrder.Rate.ToString("N2"))</td>
                                    <td>
                                        @{
                                            var remaining = availableOrder.Amount - availableOrder.FilledAmount;
                                        }
                                        <strong>@(availableOrder.FromCurrency?.Code == "IRR" ? remaining.ToString("N0") : remaining.ToString("N2"))</strong> @availableOrder.FromCurrency?.Code
                                        <br>
                                        <small class="text-muted">از @(availableOrder.FromCurrency?.Code == "IRR" ? availableOrder.Amount.ToString("N0") : availableOrder.Amount.ToString("N2"))</small>
                                    </td>
                                    <td>
                                        <small>@availableOrder.CreatedAt.ToString("yyyy/MM/dd")</small>
                                        <br>
                                        <small class="text-muted">@availableOrder.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="alert alert-info mt-3 mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>توضیح:</strong> این لیست معاملاتی را نشان می‌دهد که با معامله فعلی قابل تطبیق هستند. 
                    برای مشاهده جزئیات هر معامله، روی شناسه آن کلیک کنید.
                </div>
            </div>
        </div>
    }

    <div class="card mt-3">
        <div class="card-body d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                onsubmit="return confirm('آیا از لغو این معامله اطمینان دارید؟')">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">لغو معامله</button>
            </form>
        </div>
    </div>
</div>
