@model IList<ForexExchange.Models.Order>

@{
    ViewData["Title"] = "مدیریت معامله‌ها";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">مدیریت معامله‌ها</h2>
            <div class="text-muted small">فهرست معاملات ثبت‌شده در سیستم</div>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> ثبت معامله جدید
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }

    <div class="card mb-3">
        <div class="card-header">
            <h6 class="mb-0"><i class="fas fa-filter"></i> فیلترهای جستجو</h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <!-- Customer Dropdown -->
                    <div class="col-md-4">
                        <label class="form-label">مشتری</label>
                        <select name="customerIdFilter" id="customerSelect" class="form-select select2" style="width: 100%;">
                            <option value="">همه مشتریان</option>
                            @if (ViewBag.Customers != null)
                            {
                                @foreach (var customer in ViewBag.Customers)
                                {
                                    <option value="@customer.Id" selected="@(ViewData["CustomerIdFilter"]?.ToString() == customer.Id.ToString())">
                                        @customer.FullName
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Order ID -->
                    <div class="col-md-4">
                        <label class="form-label">شماره معامله</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                            <input type="text" name="orderIdFilter" value="@ViewData["OrderIdFilter"]" class="form-control"
                                placeholder="شماره معامله...">
                        </div>
                    </div>

                    <!-- From Currency -->
                    <div class="col-md-4">
                        <label class="form-label">ارز مبدأ</label>
                        <select name="fromCurrencyFilter" class="form-select">
                            <option value="">همه ارزها</option>
                            @if (ViewBag.Currencies != null)
                            {
                                @foreach (var currency in ViewBag.Currencies)
                                {
                                    <option value="@currency.Code" selected="@(ViewData["FromCurrencyFilter"]?.ToString() == currency.Code)">
                                        @currency.Code - @currency.PersianName
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <!-- To Currency -->
                    <div class="col-md-4">
                        <label class="form-label">ارز مقصد</label>
                        <select name="toCurrencyFilter" class="form-select">
                            <option value="">همه ارزها</option>
                            @if (ViewBag.Currencies != null)
                            {
                                @foreach (var currency in ViewBag.Currencies)
                                {
                                    <option value="@currency.Code" selected="@(ViewData["ToCurrencyFilter"]?.ToString() == currency.Code)">
                                        @currency.Code - @currency.PersianName
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Price Range From -->
                    <div class="col-md-4">
                        <label class="form-label">مبلغ از</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                            <input type="number" name="minAmountFilter" value="@ViewData["MinAmountFilter"]" class="form-control"
                                placeholder="حداقل مبلغ..." step="0.01">
                        </div>
                    </div>

                    <!-- Price Range To -->
                    <div class="col-md-4">
                        <label class="form-label">مبلغ تا</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                            <input type="number" name="maxAmountFilter" value="@ViewData["MaxAmountFilter"]" class="form-control"
                                placeholder="حداکثر مبلغ..." step="0.01">
                        </div>
                    </div>

                    <!-- Date From -->
                    <div class="col-md-4">
                        <label class="form-label">از تاریخ</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                            <input type="date" name="fromDateFilter" value="@(ViewData["FromDateFilter"] ?? "")" class="form-control">
                        </div>
                    </div>

                    <!-- Date To -->
                    <div class="col-md-4">
                        <label class="form-label">تا تاریخ</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                            <input type="date" name="toDateFilter" value="@(ViewData["ToDateFilter"] ?? "")" class="form-control">
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-12">
                        <div class="d-flex gap-2 flex-wrap">
                            <input type="hidden" name="currentFilter" value="@ViewData["CurrentFilter"]" />
                            <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
                            <input type="hidden" name="currencyFilter" value="@ViewData["CurrencyFilter"]" />
                            <input type="hidden" name="statusFilter" value="@ViewData["StatusFilter"]" />
                            <input type="hidden" name="customerFilter" value="@ViewData["CustomerFilter"]" />
                            <input type="hidden" name="customerIdFilter" value="@ViewData["CustomerIdFilter"]" />
                            <input type="hidden" name="orderIdFilter" value="@ViewData["OrderIdFilter"]" />
                            <input type="hidden" name="fromCurrencyFilter" value="@ViewData["FromCurrencyFilter"]" />
                            <input type="hidden" name="toCurrencyFilter" value="@ViewData["ToCurrencyFilter"]" />
                            <input type="hidden" name="minAmountFilter" value="@ViewData["MinAmountFilter"]" />
                            <input type="hidden" name="maxAmountFilter" value="@ViewData["MaxAmountFilter"]" />
                            <input type="hidden" name="fromDateFilter" value="@(ViewData["FromDateFilter"] ?? "")" />
                            <input type="hidden" name="toDateFilter" value="@(ViewData["ToDateFilter"] ?? "")" />
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> اعمال فیلترها
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> حذف فیلترها
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title mb-0">لیست معاملات</h5>
                    <small class="text-muted">
                        @ViewBag.TotalItems معامله یافت شد
                        @if (ViewBag.TotalPages > 1)
                        {
                            <span> - صفحه @ViewBag.CurrentPage از @ViewBag.TotalPages</span>
                        }
                    </small>
                </div>
                @if (ViewBag.TotalPages > 1)
                {
                    <small class="text-muted">
                        @ViewBag.PageSize مورد در هر صفحه
                    </small>
                }
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>
                                    <a class="text-white text-decoration-none" asp-action="Index"
                                        asp-route-sortOrder="@ViewData["IdSortParm"]"
                                        asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                        asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                        asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                        asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                        asp-route-statusFilter="@ViewData["StatusFilter"]"
                                        asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                        asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                        asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                        asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                        asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                        asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                        asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                        asp-route-page="1">#</a>
                                </th>
                                <th>
                                    <a class="text-white text-decoration-none" asp-action="Index"
                                        asp-route-sortOrder="@ViewData["CustomerSortParm"]"
                                        asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                        asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                        asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                        asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                        asp-route-statusFilter="@ViewData["StatusFilter"]"
                                        asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                        asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                        asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                        asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                        asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                        asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                        asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                        asp-route-page="1">مشتری</a>
                                </th>
                                <th>
                                    <a class="text-white text-decoration-none" asp-action="Index"
                                        asp-route-sortOrder="@ViewData["CurrencySortParm"]"
                                        asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                        asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                        asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                        asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                        asp-route-statusFilter="@ViewData["StatusFilter"]"
                                        asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                        asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                        asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                        asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                        asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                        asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                        asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                        asp-route-page="1">جفت ارز</a>
                                </th>
                                <th>
                                    <a class="text-white text-decoration-none" asp-action="Index"
                                        asp-route-sortOrder="@ViewData["AmountSortParm"]"
                                        asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                        asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                        asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                        asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                        asp-route-statusFilter="@ViewData["StatusFilter"]"
                                        asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                        asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                        asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                        asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                        asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                        asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                        asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                        asp-route-page="1">مبلغ</a>
                                </th>
                                <th>
                                    <a class="text-white text-decoration-none" asp-action="Index"
                                        asp-route-sortOrder="@ViewData["RateSortParm"]"
                                        asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                        asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                        asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                        asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                        asp-route-statusFilter="@ViewData["StatusFilter"]"
                                        asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                        asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                        asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                        asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                        asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                        asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                        asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                        asp-route-page="1">نرخ</a>
                                </th>
                                <th>
                                    <a class="text-white text-decoration-none" asp-action="Index"
                                        asp-route-sortOrder="@ViewData["DateSortParm"]"
                                        asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                        asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                        asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                        asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                        asp-route-statusFilter="@ViewData["StatusFilter"]"
                                        asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                        asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                        asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                        asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                        asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                        asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                        asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                        asp-route-page="1">تاریخ تراکشن</a>
                                </th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>#@item.Id</td>
                                    <td>
                                        @if (item.Customer != null)
                                        {
                                            <a asp-controller="Customers" asp-action="Profile" asp-route-id="@item.CustomerId"
                                                class="text-decoration-none">
                                                @item.Customer.FullName
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@item.CustomerId</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-monospace">@item.FromCurrency?.Code / @item.ToCurrency?.Code</span>
                                    </td>
                                    <td>@(item.FromCurrency?.Code == "IRR" ? item.FromAmount.ToString("N0") :
                                                                        item.FromAmount.ToString("N2")) @item.FromCurrency?.Code</td>
                                    <td>
                                        @if (item.ToCurrency?.Code == "IRR")
                                        {
                                            @item.Rate.ToString("N0")
                                        }
                                        else
                                        {
                                            @item.Rate.ToString("N2")
                                        }
                                    </td>
                                    <td>@item.CreatedAt.ToString("yyyy/MM/dd HH:mm:ss")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                                class="btn btn-sm btn-outline-primary" title="جزئیات">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            @if (User.IsInRole("Admin"))
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                    title="حذف معامله (ادمین)"
                                                    onclick="confirmOrderDelete(@item.Id, '@item.FromCurrency?.Code', '@item.ToCurrency?.Code')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            @if (ViewBag.TotalPages > 1)
            {
                <div class="card-footer">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <small class="text-muted">
                                نمایش @(((ViewBag.CurrentPage - 1) * ViewBag.PageSize) + 1) تا 
                                @(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalItems)) از 
                                @ViewBag.TotalItems مورد
                            </small>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="صفحه‌بندی معاملات">
                                <ul class="pagination pagination-sm justify-content-end mb-0">
                                    @if (ViewBag.HasPreviousPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                               asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                               asp-route-statusFilter="@ViewData["StatusFilter"]"
                                               asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                               asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                               asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                               asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                               asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                               asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                               asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                               asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                               asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                               asp-route-page="@(ViewBag.CurrentPage - 1)">
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    }
                                    
                                    @{
                                        int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                        int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);
                                    }
                                    
                                    @if (startPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                               asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                               asp-route-statusFilter="@ViewData["StatusFilter"]"
                                               asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                               asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                               asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                               asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                               asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                               asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                               asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                               asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                               asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                               asp-route-page="1">1</a>
                                        </li>
                                        @if (startPage > 2)
                                        {
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        }
                                    }
                                    
                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                               asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                               asp-route-statusFilter="@ViewData["StatusFilter"]"
                                               asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                               asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                               asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                               asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                               asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                               asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                               asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                               asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                               asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                               asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    
                                    @if (endPage < ViewBag.TotalPages)
                                    {
                                        @if (endPage < ViewBag.TotalPages - 1)
                                        {
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                               asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                               asp-route-statusFilter="@ViewData["StatusFilter"]"
                                               asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                               asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                               asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                               asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                               asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                               asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                               asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                               asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                               asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                               asp-route-page="@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                                        </li>
                                    }
                                    
                                    @if (ViewBag.HasNextPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                               asp-route-currencyFilter="@ViewData["CurrencyFilter"]"
                                               asp-route-statusFilter="@ViewData["StatusFilter"]"
                                               asp-route-customerFilter="@ViewData["CustomerFilter"]"
                                               asp-route-customerIdFilter="@ViewData["CustomerIdFilter"]"
                                               asp-route-orderIdFilter="@ViewData["OrderIdFilter"]"
                                               asp-route-fromCurrencyFilter="@ViewData["FromCurrencyFilter"]"
                                               asp-route-toCurrencyFilter="@ViewData["ToCurrencyFilter"]"
                                               asp-route-minAmountFilter="@ViewData["MinAmountFilter"]"
                                               asp-route-maxAmountFilter="@ViewData["MaxAmountFilter"]"
                                               asp-route-fromDateFilter="@ViewData["FromDateFilter"]"
                                               asp-route-toDateFilter="@ViewData["ToDateFilter"]"
                                               asp-route-page="@(ViewBag.CurrentPage + 1)">
                                                <i class="fas fa-chevron-left"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <div class="mb-3"><i class="fas fa-inbox fa-3x text-muted"></i></div>
                <h5 class="text-muted">هیچ معامله‌ای یافت نشد</h5>
                <p class="text-muted">برای شروع، اولین معامله خود را ثبت کنید.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> ثبت اولین معامله
                </a>
            </div>
        </div>
    }
</div>

@* Hidden form for anti-forgery token *@
<form id="hiddenTokenForm" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        // Initialize Select2 for customer dropdown
        $(document).ready(function() {
            $('#customerSelect').select2({
                placeholder: 'انتخاب مشتری...',
                allowClear: true,
                language: {
                    noResults: function() {
                        return "هیچ مشتری‌ای یافت نشد";
                    },
                    searching: function() {
                        return "در حال جستجو...";
                    }
                }
            });
        });

        function confirmOrderDelete(orderId, fromCurrency, toCurrency) {
            if (confirm(`آیا از حذف معامله #${orderId} (${fromCurrency} به ${toCurrency}) اطمینان دارید؟\n\nاین عملیات تمام تأثیرات مالی معامله را برمی‌گرداند و غیرقابل بازگشت است.`)) {
                // Create and submit delete form
                var form = document.createElement('form');
                form.method = 'post';
                form.action = '@Url.Action("Delete", "Orders")/' + orderId;

                // Get anti-forgery token from hidden form
                var hiddenToken = document.querySelector('#hiddenTokenForm input[name="__RequestVerificationToken"]');
                if (hiddenToken) {
                    var tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = hiddenToken.value;
                    form.appendChild(tokenInput);
                }

                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
