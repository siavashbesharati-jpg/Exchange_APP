                'TRY': 'ğŸ‡¹ğŸ‡·',
                'CNY': 'ğŸ‡¨ğŸ‡³'
            };
            return flags[currencyCode] || 'ğŸ’±';
        }

        function formatNumber(num, currencyCode = '') {
            // Use the universal currency formatter
            return formatCurrency(num, currencyCode);
