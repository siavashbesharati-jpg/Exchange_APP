@model object

@{
    ViewData["Title"] = "آپلود رسید";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">آپلود رسید دریافت وجه</h4>
                </div>
                <div class="card-body">
                    
                    @if (ViewBag.IsTransactionSpecific == true)
                    {
                        <div class="alert alert-info mb-4" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-link fa-2x me-3"></i>
                                <div>
                                    <h6 class="alert-heading mb-1">آپلود رسید برای تراکنش خاص</h6>
                                    <p class="mb-0">
                                        شما در حال آپلود رسید برای تراکنش شماره <strong>@ViewBag.SelectedTransactionId</strong> هستید.
                                        اطلاعات مشتری و تراکنش به صورت خودکار از تراکنش انتخاب شده‌اند.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Transaction Details Card -->
                        @if (ViewBag.SelectedTransaction != null)
                        {
                            var transaction = ViewBag.SelectedTransaction as ForexExchange.Models.Transaction;
                            <div class="card mb-4 border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-exchange-alt me-2"></i>
                                        جزئیات تراکنش #@transaction.Id
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <!-- Transaction Basic Info -->
                                        <div class="col-md-6">
                                            <h6 class="text-primary mb-3">اطلاعات کلی تراکنش</h6>
                                            <table class="table table-sm table-borderless">
                                                <tr>
                                                    <td class="fw-bold text-muted">شماره تراکنش:</td>
                                                    <td>#@transaction.Id</td>
                                                </tr>
                                                <tr>
                                                    <td class="fw-bold text-muted">ارز:</td>
                                                    <td>
                                                        <span class="badge bg-info">@transaction.CurrencyPair</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="fw-bold text-muted">مقدار:</td>
                                                    <td class="fw-bold">@transaction.Amount.ToString("N2")</td>
                                                </tr>
                                                <tr>
                                                    <td class="fw-bold text-muted">نرخ:</td>
                                                    <td class="fw-bold text-success">@(transaction.Rate?.ToString("N0") ?? "0") ریال</td>
                                                </tr>
                                                
                                                <tr>
                                                    <td class="fw-bold text-muted">وضعیت:</td>
                                                    <td>
                                                        @switch(transaction.Status)
                                                        {
                                                            case ForexExchange.Models.TransactionStatus.Pending:
                                                                <span class="badge bg-warning">در انتظار</span>
                                                                break;
                                                            case ForexExchange.Models.TransactionStatus.PaymentUploaded:
                                                                <span class="badge bg-info">رسید آپلود شده</span>
                                                                break;
                                                            case ForexExchange.Models.TransactionStatus.ReceiptConfirmed:
                                                                <span class="badge bg-primary">رسید تأیید شده</span>
                                                                break;
                                                            case ForexExchange.Models.TransactionStatus.Completed:
                                                                <span class="badge bg-success">تکمیل شده</span>
                                                                break;
                                                            case ForexExchange.Models.TransactionStatus.Failed:
                                                                <span class="badge bg-danger">ناموفق</span>
                                                                break;
                                                        }
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="fw-bold text-muted">تاریخ ایجاد:</td>
                                                    <td>@transaction.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                                </tr>
                                            </table>
                                        </div>

                                        <!-- Customer & Order Info -->
                                        <div class="col-md-6">
                                            <h6 class="text-primary mb-3">اطلاعات مشتریان و معاملات</h6>
                                            
                                            <!-- Buyer Information -->
                                            <div class="mb-3">
                                                <h6 class="text-success mb-2">
                                                    <i class="fas fa-user-plus me-1"></i>
                                                    خریدار (مشتری انتخاب شده)
                                                </h6>
                                                <div class="bg-light p-2 rounded">
                                                    <strong>@(transaction?.BuyerCustomer?.FullName ?? "")</strong><br>
                                                    <small class="text-muted">
                                                        <i class="fas fa-phone me-1"></i>@(transaction?.BuyerCustomer?.PhoneNumber ?? "")
                                                    </small>
                                                    @if (!string.IsNullOrEmpty(transaction?.BuyerCustomer?.NationalId))
                                                    {
                                                        <br><small class="text-muted">
                                                            <i class="fas fa-id-card me-1"></i>@(transaction?.BuyerCustomer?.NationalId ?? "")
                                                        </small>
                                                    }
                                                </div>
                                            </div>

                                            <!-- Seller Information -->
                                            <div class="mb-3">
                                                <h6 class="text-warning mb-2">
                                                    <i class="fas fa-user-minus me-1"></i>
                                                    فروشنده
                                                </h6>
                                                <div class="bg-light p-2 rounded">
                                                    <strong>@(transaction?.SellerCustomer?.FullName ?? "")</strong><br>
                                                    <small class="text-muted">
                                                        <i class="fas fa-phone me-1"></i>@(transaction?.SellerCustomer?.PhoneNumber ?? "")
                                                    </small>
                                                </div>
                                            </div>

                                            <!-- Order Information -->
                                            <div class="mb-3">
                                                <h6 class="text-info mb-2">
                                                    <i class="fas fa-shopping-cart me-1"></i>
                                                    معامله خرید (انتخاب شده)
                                                </h6>
                                                <div class="bg-light p-2 rounded">
                                                    <strong>معامله #@transaction?.BuyOrderId</strong><br>
                                                    <small class="text-muted">
                                                        مقدار: @(transaction?.BuyOrder?.Amount.ToString("N2") ?? "") @(transaction?.BuyOrder?.FromCurrency?.PersianName ?? transaction?.BuyOrder?.FromCurrency?.Code ?? "")
                                                    </small><br>
                                                    <small class="text-muted">
                                                        وضعیت: 
                                                        @switch(transaction?.BuyOrder?.Status)
                                                        {
                                                            case ForexExchange.Models.OrderStatus.Open:
                                                                <span class="badge bg-primary">باز</span>
                                                                break;
                                                            case ForexExchange.Models.OrderStatus.Matched:
                                                                <span class="badge bg-info">مچ شده</span>
                                                                break;
                                                            case ForexExchange.Models.OrderStatus.Completed:
                                                                <span class="badge bg-success">تکمیل شده</span>
                                                                break;
                                                            case ForexExchange.Models.OrderStatus.Cancelled:
                                                                <span class="badge bg-danger">لغو شده</span>
                                                                break;
                                                        }
                                                    </small>
                                                </div>
                                            </div>

                                            @if (!string.IsNullOrEmpty(transaction.Notes))
                                            {
                                                <div class="mb-3">
                                                    <h6 class="text-secondary mb-2">
                                                        <i class="fas fa-sticky-note me-1"></i>
                                                        یادداشت‌ها
                                                    </h6>
                                                    <div class="bg-light p-2 rounded">
                                                        <small>@transaction.Notes</small>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(transaction.BuyerBankAccount) || !string.IsNullOrEmpty(transaction.SellerBankAccount))
                                    {
                                        <hr>
                                        <div class="row">
                                            <div class="col-12">
                                                <h6 class="text-primary mb-3">اطلاعات حساب‌های بانکی</h6>
                                                <div class="row">
                                                    @if (!string.IsNullOrEmpty(transaction.BuyerBankAccount))
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="bg-light p-2 rounded">
                                                                <strong class="text-success">حساب خریدار:</strong><br>
                                                                <code>@transaction.BuyerBankAccount</code>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (!string.IsNullOrEmpty(transaction.SellerBankAccount))
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="bg-light p-2 rounded">
                                                                <strong class="text-warning">حساب فروشنده:</strong><br>
                                                                <code>@transaction.SellerBankAccount</code>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
                        </div>
                    }

                    <form asp-action="Upload" method="post" enctype="multipart/form-data" id="uploadForm">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <!-- File Upload Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">انتخاب فایل تصویر</h6>
                                        <div class="mb-3">
                                            <label for="receiptFile" class="form-label">فایل رسید *</label>
                          <input type="file" class="form-control" id="receiptFile" name="receiptFile" 
                              accept="image/*" required onchange="previewImage(this)">
                          <span class="text-danger" data-valmsg-for="receiptFile" data-valmsg-replace="true"></span>
                                            <div class="form-text">فرمت‌های مجاز: JPG, PNG, GIF (حداکثر ۵ مگابایت)</div>
                                        </div>
                                        
                                        <!-- Image Preview -->
                                        <div id="imagePreview" style="display: none;">
                                            <label class="form-label">پیش‌نمایش تصویر:</label>
                                            <div class="text-center">
                                                <img id="previewImg" src="" alt="پیش‌نمایش" style="max-width: 100%; max-height: 300px; border: 1px solid #ddd; border-radius: 4px;">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- OCR Preview (No Save) -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card border-primary">
                                    <div class="card-header bg-primary text-white">
                                        <h6 class="card-title mb-0">پیش‌نمایش OCR (بدون ذخیره)</h6>
                                    </div>
                                    <div class="card-body">
                                        <button type="button" id="btnOcrPreview" class="btn btn-outline-primary" disabled onclick="ocrPreview()">
                                            <i class="fas fa-magic"></i> استخراج متن از تصویر
                                        </button>
                                        <span id="ocrLoading" class="ms-2 text-muted" style="display:none;">
                                            <i class="fas fa-spinner fa-spin"></i> در حال پردازش...
                                        </span>

                                        <div id="ocrPreview" class="mt-3" style="display:none;">
                                            <div class="mb-2">
                                                <label class="form-label">متن استخراج‌شده:</label>
                                                <textarea class="form-control" id="ocrRawText" rows="6" readonly></textarea>
                                            </div>
                                            <div class="row g-2">
                                                <div class="col-md-3"><strong>مبلغ:</strong> <span id="ocrAmount"></span></div>
                                                <div class="col-md-3"><strong>مرجع:</strong> <span id="ocrReference"></span></div>
                                                <div class="col-md-3"><strong>تاریخ:</strong> <span id="ocrDate"></span></div>
                                                <div class="col-md-3"><strong>حساب:</strong> <span id="ocrAccount"></span></div>
                                            </div>
                                            <div class="mt-3">
                                                <button type="button" class="btn btn-sm btn-secondary" onclick="applyOcrToManual()">
                                                    قرار دادن در فیلدهای دستی
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Receipt Information -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="customerId" class="form-label">مشتری *</label>
                                @{
                                    var systemCustomer = ViewBag.SystemCustomer as ForexExchange.Models.Customer;
                                    var selectedCustomerId = ViewBag.SelectedCustomerId as int?;
                                    var selectedCustomer = ViewBag.SelectedCustomer as ForexExchange.Models.Customer;
                                }
                                @if (ViewBag.SelectedOrder != null)
                                {
                                    <!-- Limit to order's customer + system customer; disable selection -->
                                    <select id="customerId" name="customerId" class="form-select" required disabled>
                                        @if (selectedCustomer != null)
                                        {
                                            <option value="@selectedCustomer.Id" selected>@selectedCustomer.FullName - @selectedCustomer.PhoneNumber</option>
                                        }
                                        @if (systemCustomer != null && (selectedCustomer == null || systemCustomer.Id != selectedCustomer.Id))
                                        {
                                            <option value="@systemCustomer.Id">@systemCustomer.FullName - @systemCustomer.PhoneNumber</option>
                                        }
                                    </select>
                                    <!-- Hidden actual value defaults to order's customer -->
                                    <input type="hidden" name="customerId" value="@selectedCustomerId" />
                                    <div class="form-text text-info">
                                        <i class="fas fa-info-circle"></i> مشتری مرتبط با معامله از پیش تعیین شده است.
                                    </div>
                                }
                                else
                                {
                                    <!-- When no order is selected, keep normal list -->
                                    <select id="customerId" name="customerId" class="form-select" required>
                                        <option value="">انتخاب مشتری</option>
                                        @if (ViewBag.Customers != null)
                                        {
                                            @foreach (var customer in ViewBag.Customers)
                                            {
                                                var selected = ViewBag.SelectedCustomerId != null && (int)ViewBag.SelectedCustomerId == customer.Id;
                                                <option value="@customer.Id" selected="@selected">@customer.FullName - @customer.PhoneNumber</option>
                                            }
                                        }
                                    </select>
                                }
                            </div>
                            
                            <div class="col-md-6">
                                <label for="receiptType" class="form-label">نوع رسید *</label>
                                <select id="receiptType" name="receiptType" class="form-select" required>
                                    <option value="">انتخاب نوع</option>
                                    <option value="0">رسید دریافت وجه</option>
                                    <option value="1">گردش حساب بانکی</option>
                                </select>
                            </div>
                        </div>

                        <!-- Related Order/System Bank Account -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="orderId" class="form-label">معامله مرتبط (اختیاری)</label>
                                @if (ViewBag.SelectedOrder != null)
                                {
                                    <!-- Disabled order dropdown when coming from transaction -->
                                    <select id="orderId" name="orderId" class="form-select" disabled>
                                        @if (ViewBag.SelectedOrder != null)
                                        {
                                            <option value="@ViewBag.SelectedOrderId" selected>
                                                معامله #@ViewBag.SelectedOrderId - @ViewBag.SelectedOrder.Customer.FullName - @ViewBag.SelectedOrder.Amount.ToString("N0") @ViewBag.SelectedOrder.CurrencyPair
                                            </option>
                                        }
                                    </select>
                                    <!-- Hidden field to ensure the value is posted -->
                                    <input type="hidden" name="orderId" value="@ViewBag.SelectedOrderId" />
                                    <div class="form-text text-info">
                                        <i class="fas fa-info-circle"></i> معامله از تراکنش انتخاب شده تعیین شده است
                                    </div>
                                }
                                else
                                {
                                    <!-- Normal order dropdown -->
                                    <select id="orderId" name="orderId" class="form-select">
                                        <option value="">انتخاب معامله</option>
                                        @if (ViewBag.OpenOrders != null)
                                        {
                                            @foreach (var order in ViewBag.OpenOrders)
                                            {
                                                var isSelected = ViewBag.SelectedOrderId != null && ViewBag.SelectedOrderId == order.Id;
                                                <option value="@order.Id" selected="@isSelected">
                                                    معامله #@order.Id - @order.Customer.FullName - @order.Amount.ToString("N0") @order.CurrencyPair
                                                </option>
                                            }
                                        }
                                    </select>
                                }
                            </div>
                            
                            <div class="col-md-6">
                                <label for="systemBankAccountId" class="form-label">حساب بانکی مشتری سیستم</label>
                                <select id="systemBankAccountId" name="SystemBankAccountId" class="form-select">
                                    <option value="">انتخاب حساب بانکی سیستم</option>
                                    @{
                                        var sysAccounts = ViewBag.SystemBankAccounts as List<ForexExchange.Models.BankAccount>;
                                    }
                                    @if (sysAccounts != null && sysAccounts.Any())
                                    {
                                        foreach (var acc in sysAccounts)
                                        {
                                            var label = $"{acc.BankName} - {acc.AccountNumber} {(string.IsNullOrEmpty(acc.IBAN) ? "" : "| شبا: " + acc.IBAN)}";
                                            <option value="@acc.Id">@label</option>
                                        }
                                    }
                                </select>
                                <div class="form-text">در صورت نیاز، حساب بانکی سیستم برای دریافت وجه را انتخاب کنید.</div>
                            </div>
                        </div>

                        <!-- OCR Options -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card border-info">
                                    <div class="card-header bg-info text-white">
                                        <h6 class="card-title mb-0">تنظیمات پردازش خودکار (OCR)</h6>
                                    </div>
                                    <div class="card-body">
                                        <div id="manualFields">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label for="manualAmount" class="form-label">مبلغ (ارز مبدأ)</label>
                                                    <input type="text" id="manualAmount" name="manualAmount" class="form-control" 
                                                           placeholder="مثال: 1000000">
                                                </div>
                                                <div class="col-md-6">
                                                    <label for="manualReference" class="form-label">شماره پیگیری</label>
                                                    <input type="text" id="manualReference" name="manualReference" class="form-control" 
                                                           placeholder="شماره مرجع یا پیگیری">
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div id="ocrInfo" class="alert alert-info mt-3">
                                            <i class="fas fa-info-circle"></i>
                                            <strong>OCR:</strong> می‌توانید متن را از تصویر استخراج کرده و سپس در فیلدهای دستی ویرایش/ذخیره کنید.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-controller="ExchangeRates" asp-action="Index" class="btn btn-secondary">بازگشت به داشبورد</a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="fas fa-upload"></i> آپلود رسید
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Instructions Card -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">راهنمای آپلود رسید</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>نکات مهم:</h6>
                            <ul class="small">
                                <li>تصویر باید واضح و خوانا باشد</li>
                                <li>از نور مناسب هنگام عکس‌گیری استفاده کنید</li>
                                <li>تمام اطلاعات رسید در تصویر مشخص باشد</li>
                                <li>فرمت‌های مجاز: JPG, PNG, GIF</li>
                                <li>حداکثر حجم فایل: ۵ مگابایت</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>OCR (تشخیص خودکار متن):</h6>
                            <ul class="small">
                                <li>سیستم به طور خودکار مبلغ را تشخیص می‌دهد</li>
                                <li>شماره پیگیری و مرجع رسید  می‌شود</li>
                                <li>تاریخ تراکنش شناسایی می‌شود</li>
                                <li>در صورت خطا، می‌توانید اطلاعات را دستی وارد کنید</li>
                                <li>تمام اطلاعات قابل ویرایش هستند</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImg').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
                // Enable OCR preview button and reset previous preview
                var btn = document.getElementById('btnOcrPreview');
                if (btn) btn.disabled = false;
                var oPrev = document.getElementById('ocrPreview');
                if (oPrev) oPrev.style.display = 'none';
                var raw = document.getElementById('ocrRawText');
                if (raw) raw.value = '';
                ['ocrAmount','ocrReference','ocrDate','ocrAccount'].forEach(function(id){
                    var el = document.getElementById(id); if (el) el.textContent = '';
                });
            }
        }
        
    // Manual fields are always visible; no toggle needed

        async function ocrPreview() {
            var fileInput = document.getElementById('receiptFile');
            if (!fileInput.files || fileInput.files.length === 0) {
                alert('لطفاً یک فایل تصویر انتخاب کنید.');
                return;
            }

            var fd = new FormData();
            fd.append('receiptFile', fileInput.files[0]);
            var tokenEl = document.querySelector('input[name="__RequestVerificationToken"]');
            var headers = {};
            if (tokenEl) headers['RequestVerificationToken'] = tokenEl.value;

            var btn = document.getElementById('btnOcrPreview');
            var loading = document.getElementById('ocrLoading');
            if (btn) btn.disabled = true;
            if (loading) loading.style.display = 'inline';

            try {
                var res = await fetch('/Receipts/OcrPreview', {
                    method: 'POST',
                    headers: headers,
                    body: fd
                });
                var data = await res.json();
                if (!data.success) {
                    throw new Error(data.message || 'خطا در پردازش OCR');
                }
                document.getElementById('ocrRawText').value = data.rawText || '';
                document.getElementById('ocrAmount').textContent = data.amount || '';
                document.getElementById('ocrReference').textContent = data.referenceId || '';
                document.getElementById('ocrDate').textContent = data.date || '';
                document.getElementById('ocrAccount').textContent = data.accountNumber || '';
                document.getElementById('ocrPreview').style.display = 'block';
            } catch (err) {
                alert(err.message || 'خطایی رخ داد. دوباره تلاش کنید.');
            } finally {
                if (btn) btn.disabled = false;
                if (loading) loading.style.display = 'none';
            }
        }

        function applyOcrToManual() {
            var amt = (document.getElementById('ocrAmount').textContent || '').trim();
            var ref = (document.getElementById('ocrReference').textContent || '').trim();
            if (amt) document.getElementById('manualAmount').value = amt;
            if (ref) document.getElementById('manualReference').value = ref;
        }
        
        // Form validation
        document.getElementById('uploadForm').addEventListener('submit', function(e) {
            var fileInput = document.getElementById('receiptFile');
            var file = fileInput.files[0];
            
            if (file) {
                // Check file size (5MB limit)
                if (file.size > 5 * 1024 * 1024) {
                    e.preventDefault();
                    alert('حجم فایل نباید بیشتر از ۵ مگابایت باشد.');
                    return false;
                }
                
                // Check file type
                var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(file.type.toLowerCase())) {
                    e.preventDefault();
                    alert('فقط فایل‌های تصویری (JPG, PNG, GIF) مجاز هستند.');
                    return false;
                }
            }
            
            // Show loading state
            var submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال آپلود...';
        });

        // Auto-select customer if order is pre-selected
        @if (ViewBag.SelectedOrder != null)
        {
            <text>
            document.getElementById('customerId').value = '@ViewBag.SelectedOrder.CustomerId';
            </text>
        }
    </script>
    
