@{
    ViewData["Title"] = "گزارشات مالی";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h2><i class="fas fa-chart-bar text-primary me-2"></i>گزارشات مالی جامع</h2>
                    <p class="text-muted">مشاهده و تحلیل کامل اطلاعات مالی، معاملات، تراز مشتریان و حساب‌های بانکی</p>
                </div>
                <a href="@Url.Action("Index", "Reports")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-right me-1"></i>بازگشت به فهرست گزارشات
                </a>
            </div>
        </div>
    </div>

    <!-- Under Development Notice -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-tools text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="text-dark mb-3">در حال توسعه</h3>
                    <p class="text-muted mb-4 lead">
                        این بخش در حال توسعه و بهبود است. به زودی امکانات جامع گزارش‌گیری مالی در دسترس خواهد بود.
                    </p>
                    
                    <!-- Features Coming Soon -->
                    <div class="row text-start mb-4">
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-check-circle me-2"></i>امکانات در حال توسعه:
                            </h6>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    گزارشات جامع معاملات
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    تحلیل تراز مشتریان
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    موجودی حساب‌های بانکی
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-success mb-3">
                                <i class="fas fa-chart-line me-2"></i>نمودارها و تحلیل‌ها:
                            </h6>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    نمودار حجم معاملات
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    روند معاملات روزانه
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    تحلیل توزیع ارزها
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Alternative Options -->
                    <div class="alert alert-info mb-4">
                        <h6 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>در حال حاضر می‌توانید از گزارشات زیر استفاده کنید:
                        </h6>
                        <div class="row mt-3">
                            <div class="col-md-4 mb-2">
                                <a href="@Url.Action("OrderReports", "Reports")" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="fas fa-exchange-alt me-1"></i>گزارشات معاملات
                                </a>
                            </div>
                            <div class="col-md-4 mb-2">
                                <a href="@Url.Action("CustomerReports", "Reports")" class="btn btn-outline-success btn-sm w-100">
                                    <i class="fas fa-users me-1"></i>گزارشات مشتریان
                                </a>
                            </div>
                            <div class="col-md-4 mb-2">
                                <a href="@Url.Action("DocumentReports", "Reports")" class="btn btn-outline-warning btn-sm w-100">
                                    <i class="fas fa-file-invoice me-1"></i>گزارشات اسناد
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="text-muted">
                        <small>
                            <i class="fas fa-envelope me-1"></i>
                            
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
            border-radius: 15px;
        }
        
        .alert {
            border-radius: 10px;
        }
        
        .btn {
            border-radius: 8px;
        }
        
        .list-unstyled li {
            transition: all 0.2s ease;
        }
        
        .list-unstyled li:hover {
            padding-left: 10px;
        }
        
        .fa-tools {
            animation: bounce 2s infinite;
        }
        
        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-10px);
            }
            60% {
                transform: translateY(-5px);
            }
        }
    </style>
}
