@model IEnumerable<ForexExchange.Controllers.CustomerActivityReport>

@{
    ViewData["Title"] = "گزارش فعالیت مشتریان";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">گزارش فعالیت مشتریان</h1>
                <a asp-action="Index" class="btn btn-secondary">بازگشت به گزارشات</a>
            </div>
        </div>
    </div>

    <!-- Date Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CustomerActivity" method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">از تاریخ:</label>
                            <input type="date" name="fromDate" value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">تا تاریخ:</label>
                            <input type="date" name="toDate" value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")" class="form-control" />
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary">نمایش گزارش</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">تعداد کل مشتریان</h5>
                    <h2 class="mb-0">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">مشتریان فعال</h5>
                    <h2 class="mb-0">@Model.Count(c => c.TotalOrders > 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">کل معاملات</h5>
                    <h2 class="mb-0">@Model.Sum(c => c.TotalOrders)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">کل حجم معاملات (تومان)</h5>
                    <h2 class="mb-0">@Model.Sum(c => c.TotalVolumeInToman).ToString("N0")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Activity Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">جزئیات فعالیت مشتریان</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>مشتری</th>
                                        <th>تلفن</th>
                                        <th>کل معاملات</th>
                                        <th>معاملات تکمیل شده</th>
                                        <th>نرخ تکمیل</th>
                                        <th>کل تراکنش‌ها</th>
                                        <th>تراکنش‌های تکمیل شده</th>
                                        <th>حجم معاملات (تومان)</th>
                                        <th>آخرین فعالیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var completionRate = item.TotalOrders > 0 ? (decimal)item.CompletedOrders / item.TotalOrders * 100 : 0;
                                        
                                        <tr>
                                            <td>
                                                <strong>@item.Customer.FullName</strong>
                                                <br><small class="text-muted">@item.Customer.NationalId</small>
                                            </td>
                                            <td>@item.Customer.PhoneNumber</td>
                                            <td>
                                                <span class="badge bg-primary">@item.TotalOrders</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@item.CompletedOrders</span>
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar @(completionRate >= 80 ? "bg-success" : completionRate >= 50 ? "bg-warning" : "bg-danger")" 
                                                         style="width: @completionRate.ToString("F1")%">
                                                        @completionRate.ToString("F1")%
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.TotalTransactions</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@item.CompletedTransactions</span>
                                            </td>
                                            <td>
                                                <strong>@item.TotalVolumeInToman.ToString("N0")</strong>
                                            </td>
                                            <td>
                                                @item.LastActivityDate.ToString("yyyy/MM/dd")
                                                <br><small class="text-muted">@item.LastActivityDate.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                <a asp-controller="Customers" asp-action="Profile" asp-route-id="@item.Customer.Id" 
                                                   class="btn btn-sm btn-outline-primary">مشاهده پروفایل</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            هیچ فعالیت مشتری در بازه زمانی انتخاب شده یافت نشد.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .progress {
        min-width: 80px;
    }
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    .table th {
        white-space: nowrap;
    }
</style>
