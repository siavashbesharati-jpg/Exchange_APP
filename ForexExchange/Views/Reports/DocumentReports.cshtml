    <!-- Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-filter me-2"></i>فیلترهای جستجو</h5>
                    <div class="row g-3">
                        <div class="col-2">
                            <label class="form-label">از تاریخ</label>
                            <div class="input-group">
