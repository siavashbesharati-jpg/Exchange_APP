@{
    ViewData["Title"] = "گزارشات";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-chart-line text-primary me-2"></i>گزارشات</h2>
        </div>
    </div>

    <!-- Reports Cards Grid -->
    <div class="row g-4 justify-content-center">
        
        <!-- Customer Reports -->
        <div class="col-md-6 col-lg-4">
            <div class="card report-card h-100 shadow-sm border-0" onclick="navigateToReport('customer')">
                <div class="card-body text-center p-4">
                    <div class="report-icon mb-3">
                        <i class="fas fa-users text-primary"></i>
                    </div>
                    <h5 class="card-title fw-bold">گزارشات مشتریان</h5>
                    <p class="text-muted small">تاریخچه مالی و تراکنش‌های مشتریان</p>
                </div>
            </div>
        </div>

        <!-- All Customers Balances -->
        <div class="col-md-6 col-lg-4">
            <div class="card report-card h-100 shadow-sm border-0" onclick="navigateToReport('allbalances')">
                <div class="card-body text-center p-4">
                    <div class="report-icon mb-3">
                        <i class="fas fa-wallet text-purple"></i>
                    </div>
                    <h5 class="card-title fw-bold">موجودی همه مشتریان</h5>
                    <p class="text-muted small">مشاهده موجودی همه مشتریان به تفکیک ارز</p>
                </div>
            </div>
        </div>

        <!-- Bank Account Reports -->
        <div class="col-md-6 col-lg-4">
            <div class="card report-card h-100 shadow-sm border-0" onclick="navigateToReport('bankaccount')">
                <div class="card-body text-center p-4">
                    <div class="report-icon mb-3">
                        <i class="fas fa-university text-success"></i>
                    </div>
                    <h5 class="card-title fw-bold">گزارشات حساب‌های بانکی</h5>
                    <p class="text-muted small">تاریخچه و موجودی حساب‌های بانکی</p>
                </div>
            </div>
        </div>

        <!-- Pool Reports -->
        <div class="col-md-6 col-lg-4">
            <div class="card report-card h-100 shadow-sm border-0" onclick="navigateToReport('pool')">
                <div class="card-body text-center p-4">
                    <div class="report-icon mb-3">
                        <i class="fas fa-coins text-info"></i>
                    </div>
                    <h5 class="card-title fw-bold">گزارشات صندوق ها</h5>
                    <p class="text-muted small">تاریخچه و موجودی صندوق ها</p>
                </div>
            </div>
        </div>

  

        <!-- Pool Summary Report -->
        <div class="col-md-6 col-lg-4">
            <div class="card report-card h-100 shadow-sm border-0" onclick="navigateToReport('poolsummary')">
                <div class="card-body text-center p-4">
                    <div class="report-icon mb-3">
                        <i class="fas fa-chart-pie text-info"></i>
                    </div>
                    <h5 class="card-title fw-bold"> تراز روزانه  </h5>
                    <p class="text-muted small">   تراز روزانه داشبورد ، بانک ها و مشتریان   </p>
                </div>
            </div>
        </div>

        <!-- Order Reports -->
        <div class="col-md-6 col-lg-4">
            <div class="card report-card h-100 shadow-sm border-0" onclick="navigateToReport('order')">
                <div class="card-body text-center p-4">
                    <div class="report-icon mb-3">
                        <i class="fas fa-exchange-alt text-warning"></i>
                    </div>
                    <h5 class="card-title fw-bold">گزارشات معاملات</h5>
                    <p class="text-muted small">تاریخچه و آمار معاملات  </p>
                </div>
            </div>
        </div>

        <!-- Accounting Documents Reports -->
        <div class="col-md-6 col-lg-4">
            <div class="card report-card h-100 shadow-sm border-0" onclick="navigateToReport('document')">
                <div class="card-body text-center p-4">
                    <div class="report-icon mb-3">
                        <i class="fas fa-file-invoice text-danger"></i>
                    </div>
                    <h5 class="card-title fw-bold">گزارشات اسناد حسابداری</h5>
                    <p class="text-muted small">تاریخچه و آمار اسناد مالی</p>
                </div>
            </div>
        </div>

        <!-- Comprehensive Reports -->
        <div class="col-md-6 col-lg-4">
            <div class="card report-card comprehensive-card h-100 shadow-sm border-0" onclick="navigateToReport('comprehensive')">
                <div class="card-body text-center p-4">
                    <div class="report-icon mb-3">
                        <i class="fas fa-chart-pie text-white"></i>
                    </div>
                    <h5 class="card-title fw-bold">گزارش جامع</h5>
                    <p class="text-white-50 small">نمای کلی از تمامی فعالیت‌های سیستم</p>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
.report-card {
    transition: all 0.3s ease;
    cursor: pointer;
    border-radius: 15px;
    overflow: hidden;
    min-height: 120px;
    border: 3px solid #e9ecef;
}

.report-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
    border-color: #007bff;
}

.report-icon i {
    font-size: 2.5rem;
}

.text-purple {
    color: #6f42c1 !important;
}

.comprehensive-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: 3px solid #764ba2;
}

.comprehensive-card:hover {
    border-color: #5a2d91;
}

.comprehensive-card .card-title {
    color: white;
}

@@media (max-width: 768px) {
    .report-card {
        margin-bottom: 1rem;
        min-height: 100px;
    }
    
    .report-icon i {
        font-size: 2rem;
    }
    
    .card-title {
        font-size: 1rem;
    }
}
</style>

<script>
function navigateToReport(type) {
    let url = '';
    
    switch(type) {
        case 'customer':
            url = '@Url.Action("CustomerReports", "Reports")';
            break;
        case 'allbalances':
            url = '@Url.Action("AllCustomersBalances", "Reports")';
            break;
        case 'bankaccount':
            url = '@Url.Action("BankAccountReports", "Reports")';
            break;
        case 'pool':
            url = '@Url.Action("PoolReports", "Reports")';
            break;
      
        case 'poolsummary':
            url = '@Url.Action("PoolSummaryReport", "Reports")';
            break;
        case 'order':
            url = '@Url.Action("OrderReports", "Reports")';
            break;
        case 'document':
            url = '@Url.Action("DocumentReports", "Reports")';
            break;
        case 'comprehensive':
            url = '@Url.Action("Comprehensive", "Reports")';
            break;
        default:
            url = '@Url.Action("CustomerReports", "Reports")';
    }
    
    window.location.href = url;
}

// Add some entrance animation
document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.report-card');
    cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        
        setTimeout(() => {
            card.style.transition = 'all 0.6s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, index * 100);
    });
});
</script>
