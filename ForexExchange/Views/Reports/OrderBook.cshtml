@model IEnumerable<ForexExchange.Controllers.OrderBookReport>
@using ForexExchange.Extensions

@{
    ViewData["Title"] = "دفتر معاملات";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">دفتر معاملات</h1>
                <a asp-action="Index" class="btn btn-secondary">بازگشت به گزارشات</a>
            </div>
        </div>
    </div>

    <!-- Currency Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="OrderBook" method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">ارز:</label>
                            <select name="currency" class="form-select">
                                <option value="">همه ارزها</option>
                                @if (ViewBag.Currencies != null)
                                {
                                    @foreach (var curr in ViewBag.Currencies)
                                    {
                                        <option value="@curr.Code" selected="@(ViewBag.SelectedCurrency == curr.Code)">
                                            @curr.PersianName (@curr.Code)
                                        </option>
                                    }
                                }
                                else
                                {
                                    <option value="USD" selected="@(ViewContext.HttpContext.Request.Query["currency"] == "USD")">دلار آمریکا (USD)</option>
                                    <option value="EUR" selected="@(ViewContext.HttpContext.Request.Query["currency"] == "EUR")">یورو (EUR)</option>
                                    <option value="AED" selected="@(ViewContext.HttpContext.Request.Query["currency"] == "AED")">درهم امارات (AED)</option>
                                    <option value="OMR" selected="@(ViewContext.HttpContext.Request.Query["currency"] == "OMR")">ریال عمان (OMR)</option>
                                    <option value="TRY" selected="@(ViewContext.HttpContext.Request.Query["currency"] == "TRY")">لیر ترکیه (TRY)</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary">نمایش دفتر معاملات</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    @if (Model.Any())
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">کل معاملات فعال</h5>
                        <h2 class="mb-0">@Model.Sum(r => r.OrderCount)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">معاملات خرید</h5>
                        <!-- Removed OrderType Buy count, now showing total order count -->
                        <h2 class="mb-0">@Model.Sum(r => r.OrderCount)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h5 class="card-title">معاملات فروش</h5>
                        <!-- Removed OrderType Sell count, now showing total order count -->
                        <h2 class="mb-0">@Model.Sum(r => r.OrderCount)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">کل حجم</h5>
                        <h2 class="mb-0">@Model.Sum(r => r.TotalVolume).ToString("N0")</h2>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Order Book by Currency -->
    @if (Model.Any())
    {
        var currencyGroups = Model.GroupBy(r => r.FromCurrencyCode);
        
        @foreach (var currencyGroup in currencyGroups)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                @{
                                    var currencyDisplay = currencyGroup.Key switch
                                    {
                                        "USD" => "دلار آمریکا (USD)",
                                        "EUR" => "یورو (EUR)", 
                                        "AED" => "درهم امارات (AED)",
                                        "OMR" => "ریال عمان (OMR)",
                                        "TRY" => "لیر ترکیه (TRY)",
                                        "IRR" or "TMN" => "تومان (IRR)",
                                        _ => $"{currencyGroup.Key}"
                                    };
                                }
                                @currencyDisplay
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var orderBookReport in currencyGroup)
                                {
                                    <div class="col-md-6">
                                        <div class="card border-primary">
                                            <div class="card-header bg-primary text-white">
                                                <h6 class="mb-0">
                                                    معاملات
                                                    <span class="badge bg-light text-primary">
                                                        @orderBookReport.OrderCount معامله
                                                    </span>
                                                </h6>
                                            </div>
                                            <div class="card-body">
                                                <div class="row mb-3">
                                                    <div class="col-6">
                                                        <small class="text-muted">کل حجم:</small>
                                                        <div><strong>@orderBookReport.TotalVolume.ToString("N2")</strong></div>
                                                    </div>
                                                    <div class="col-6">
                                                        <small class="text-muted">میانگین نرخ:</small>
                                                        <div><strong>@orderBookReport.AverageRate.ToString("N0")</strong> تومان</div>
                                                    </div>
                                                </div>
                                                
                                                @if (orderBookReport.Orders.Any())
                                                {
                                                    <div class="table-responsive">
                                                        <table class="table table-sm">
                                                            <thead>
                                                                <tr>
                                                                    <th>مشتری</th>
                                                                    <th>مقدار</th>
                                                                    <th>باقیمانده</th>
                                                                    <th>نرخ</th>
                                                                    <th>تاریخ</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var order in orderBookReport.Orders.Take(10))
                                                                {
                                                                    var remainingAmount = order.Amount - order.FilledAmount;
                                                                    
                                                                    <tr>
                                                                        <td>
                                                                            <small>@order.Customer?.FullName</small>
                                                                        </td>
                                                                        <td>@(order.FromCurrency?.Code == "IRR" ? order.Amount.ToString("N0") : order.Amount.ToString("N2"))</td>
                                                                        <td class="fw-bold">@(order.FromCurrency?.Code == "IRR" ? remainingAmount.ToString("N0") : remainingAmount.ToString("N2"))</td>
                                                                        <td>@(order.ToCurrency?.Code == "IRR" ? order.Rate.ToString("N0") : order.Rate.ToString("N2"))</td>
                                                                        <td>
                                                                            <small>@order.CreatedAt.ToString("MM/dd HH:mm")</small>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    
                                                    @if (orderBookReport.Orders.Count > 10)
                                                    {
                                                        <div class="text-muted small text-center">
                                                            ... و @(orderBookReport.Orders.Count - 10) معامله دیگر
                                                        </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <div class="text-center text-muted">
                                                        <i class="fas fa-inbox"></i>
                                                        <div>معاملهی موجود نیست</div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i>
                    هیچ معامله فعالی یافت نشد.
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    .table-sm th, .table-sm td {
        padding: 0.3rem;
    }
</style>
