@{
    ViewData["Title"] = "گزارش روزانه صندوق";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">گزارش روزانه صندوق ارزی</h4>
                    <p class="card-subtitle">انتخاب تاریخ و مشاهده موجودی و تراکنش‌های روزانه هر ارز</p>
                </div>
                <div class="card-body">
                    <!-- Date Selection -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label for="reportDate" class="form-label">انتخاب تاریخ</label>
                            <input type="date" class="form-control" id="reportDate"
                                   value="@DateTime.Today.ToString("yyyy-MM-dd")"
                                   max="@DateTime.Today.ToString("yyyy-MM-dd")">
                            <small class="text-muted mt-1 d-block">
                                <i class="fas fa-keyboard"></i> از Alt+↑↓ برای تغییر سریع تاریخ استفاده کنید
                            </small>
                        </div>
                    </div>

                    <!-- Loading Indicator -->
                    <div id="loadingIndicator" class="text-center d-none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">در حال بارگذاری...</span>
                        </div>
                        <p class="mt-2">در حال بارگذاری گزارش...</p>
                    </div>

                    <!-- Report Content -->
                    <div id="reportContent" class="d-none">
                        <div class="row" id="currencyCards">
                            <!-- Currency cards will be populated here -->
                        </div>
                    </div>

                    <!-- No Data Message -->
                    <div id="noDataMessage" class="text-center d-none">
                        <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                        <h5>داده‌ای برای نمایش وجود ندارد</h5>
                        <p>برای تاریخ انتخاب شده، هیچ تراکنش یا موجودی یافت نشد.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
$(document).ready(function() {
    // Load report on page load with today's date
    loadDailyReport();

    // Load report when date changes
    $('#reportDate').on('change', function() {
        loadDailyReport();
    });

    // Load report when Enter is pressed in date input
    $('#reportDate').on('keypress', function(e) {
        if (e.which === 13) { // Enter key
            loadDailyReport();
        }
    });

    // Handle Alt+Up/Down for date navigation
    $('#reportDate').on('keydown', function(e) {
        if (e.altKey && (e.keyCode === 38 || e.keyCode === 40)) { // Alt + Up/Down
            e.preventDefault();
            const currentDate = new Date($(this).val());
            
            if (e.keyCode === 38) { // Alt + Up: next day
                currentDate.setDate(currentDate.getDate() + 1);
            } else if (e.keyCode === 40) { // Alt + Down: previous day
                currentDate.setDate(currentDate.getDate() - 1);
            }
            
            // Check if new date is not in the future
            const today = new Date();
            today.setHours(23, 59, 59, 999); // End of today
            
            if (currentDate <= today) {
                const newDateStr = currentDate.toISOString().split('T')[0];
                $(this).val(newDateStr);
                $(this).trigger('change');
            }
        }
    });

    function loadDailyReport() {
        const selectedDate = $('#reportDate').val();
        if (!selectedDate) {
            alert('لطفاً تاریخ را انتخاب کنید');
            return;
        }

        $('#loadingIndicator').removeClass('d-none');
        $('#reportContent').addClass('d-none');
        $('#noDataMessage').addClass('d-none');

        $.ajax({
            url: '/Reports/GetPoolDailyReport',
            type: 'GET',
            data: { date: selectedDate },
            success: function(response) {
                $('#loadingIndicator').addClass('d-none');

                if (response.success && response.currencies && response.currencies.length > 0) {
                    displayReport(response.currencies, response.date);
                    $('#reportContent').removeClass('d-none');
                } else {
                    $('#noDataMessage').removeClass('d-none');
                }
            },
            error: function() {
                $('#loadingIndicator').addClass('d-none');
                alert('خطا در بارگذاری گزارش');
            }
        });
    }

    function loadDailyReport() {
        const selectedDate = $('#reportDate').val();
        if (!selectedDate) {
            alert('لطفاً تاریخ را انتخاب کنید');
            return;
        }

        $('#loadingIndicator').removeClass('d-none');
        $('#reportContent').addClass('d-none');
        $('#noDataMessage').addClass('d-none');

        $.ajax({
            url: '/Reports/GetPoolDailyReport',
            type: 'GET',
            data: { date: selectedDate },
            success: function(response) {
                $('#loadingIndicator').addClass('d-none');

                if (response.success && response.currencies && response.currencies.length > 0) {
                    displayReport(response.currencies, response.date);
                    $('#reportContent').removeClass('d-none');
                } else {
                    $('#noDataMessage').removeClass('d-none');
                }
            },
            error: function() {
                $('#loadingIndicator').addClass('d-none');
                alert('خطا در بارگذاری گزارش');
            }
        });
    }

    function displayReport(currencies, reportDate) {
        const container = $('#currencyCards');
        container.empty();

        currencies.forEach(function(currency) {
            const cardHtml = `
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header  text-black text-center">
                            <h5 class="card-title mb-0">${currency.currencyName} (${currency.currencyCode})</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <h3 class="text-success mb-3 text-center" dir="ltr">
                                        ${formatCurrency(currency.dailyTransactionSum, currency.currencyCode)} 
                                    </h3>
                                </div>
                            </div>

                            <hr>

                            <h6>تراکنش‌های روز (${currency.transactionCount})</h6>
                            <div class="transaction-list" style="max-height: 300px; overflow-y: auto;">
                                ${currency.transactions.length > 0 ?
                                    currency.transactions.map(t => `
                                        <div class="transaction-item border-bottom py-2">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <small class="text-muted">${t.time}</small>
                                                    <div class="fw-bold">${t.description}</div>
                                                    <small class="text-primary">${t.amount >= 0 ? 'خرید' : 'فروش'}</small>
                                                </div>
                                                <div class="text-end" dir="ltr" >
                                                    <div class="fw-bold ${t.amount >= 0 ? 'text-success' : 'text-danger'}">
                                                        ${formatCurrency(t.amount, currency.currencyCode)}
                                                    </div>
                                                    <small class="text-muted" >موجودی: <span dir="ltr"> ${formatCurrency(t.balanceAfter, currency.currencyCode)}</span></small>
                                                </div>
                                            </div>
                                        </div>
                                    `).join('') :
                                    '<p class="text-muted small">هیچ تراکنشی در این روز ثبت نشده</p>'
                                }
                            </div>
                        </div>
                    </div>
                </div>
            `;
            container.append(cardHtml);
        });
    }

});
</script>
}