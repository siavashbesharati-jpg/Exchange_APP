@{
    ViewData["Title"] = "گزارش روزانه صندوق";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="card-title mb-1">
                                <i class="fas fa-chart-line me-2"></i>
                                گزارش روزانه صندوق ارزی
                            </h4>
                            <p class="card-subtitle mb-0 opacity-75">تحلیل موجودی، تراکنش‌ها و سودآوری هر ارز</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="date-info">
                                <small class="opacity-75">تاریخ گزارش:</small>
                                <div class="fw-bold" id="reportDateDisplay">@DateTime.Today.ToString("yyyy/MM/dd")</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Date Selection Section -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="date-selection-wrapper">
                                <label for="reportDate" class="form-label fw-bold">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    انتخاب تاریخ گزارش
                                </label>
                                <input type="date" class="form-control form-control-lg" id="reportDate"
                                       value="@DateTime.Today.ToString("yyyy-MM-dd")"
                                       max="@DateTime.Today.ToString("yyyy-MM-dd")">
                                <div class="form-text mt-2">
                                    <i class="fas fa-keyboard me-1"></i>
                                    <strong>راهنما:</strong> از کلیدهای Alt+↑↓ برای تغییر سریع تاریخ استفاده کنید
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="quick-actions mt-4">
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-outline-primary" id="btnPreviousDay">
                                        <i class="fas fa-arrow-right me-1"></i>روز قبل
                                    </button>
                                    <button type="button" class="btn btn-outline-primary" id="btnToday">
                                        <i class="fas fa-calendar-day me-1"></i>امروز
                                    </button>
                                    <button type="button" class="btn btn-outline-primary" id="btnNextDay">
                                        <i class="fas fa-arrow-left me-1"></i>روز بعد
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Loading Indicator -->
                    <div id="loadingIndicator" class="text-center d-none py-5">
                        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">در حال بارگذاری...</span>
                        </div>
                        <h5 class="mt-3 text-primary">در حال بارگذاری گزارش...</h5>
                        <p class="text-muted">لطفاً صبر کنید</p>
                    </div>

                    <!-- Report Content -->
                    <div id="reportContent" class="d-none">
                        <div class="row" id="currencyCards">
                            <!-- Currency cards will be populated here -->
                        </div>
                    </div>

                    <!-- No Data Message -->
                    <div id="noDataMessage" class="text-center d-none py-5">
                        <div class="mb-4">
                            <i class="fas fa-chart-line fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">داده‌ای برای نمایش وجود ندارد</h4>
                            <p class="text-muted mb-4">برای تاریخ انتخاب شده، هیچ تراکنش یا موجودی یافت نشد.</p>
                            <button type="button" class="btn btn-outline-primary" onclick="loadDailyReport()">
                                <i class="fas fa-refresh me-2"></i>
                                تلاش مجدد
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
$(document).ready(function() {
    // Load report on page load with today's date
    loadDailyReport();
    
    // Initialize navigation buttons
    updateNavigationButtons();

    // Load report when date changes
    $('#reportDate').on('change', function() {
        loadDailyReport();
        updateReportDateDisplay();
        updateNavigationButtons();
    });

    // Load report when Enter is pressed in date input
    $('#reportDate').on('keypress', function(e) {
        if (e.which === 13) { // Enter key
            loadDailyReport();
        }
    });

    // Quick action buttons
    $('#btnPreviousDay').on('click', function() {
        const currentDate = new Date($('#reportDate').val());
        currentDate.setDate(currentDate.getDate() - 1);
        const previousDayStr = currentDate.toISOString().split('T')[0];
        $('#reportDate').val(previousDayStr).trigger('change');
    });

    $('#btnToday').on('click', function() {
        const today = new Date().toISOString().split('T')[0];
        $('#reportDate').val(today).trigger('change');
    });

    $('#btnNextDay').on('click', function() {
        const currentDate = new Date($('#reportDate').val());
        const nextDay = new Date(currentDate);
        nextDay.setDate(currentDate.getDate() + 1);
        
        // Check if next day is not in the future
        const today = new Date();
        today.setHours(23, 59, 59, 999); // End of today
        
        if (nextDay <= today) {
            const nextDayStr = nextDay.toISOString().split('T')[0];
            $('#reportDate').val(nextDayStr).trigger('change');
        } else {
            showAlert('نمی‌توان تاریخ آینده را انتخاب کرد', 'warning');
        }
    });

    // Update report date display
    function updateReportDateDisplay() {
        const selectedDate = $('#reportDate').val();
        if (selectedDate) {
            const date = new Date(selectedDate);
            const options = { year: 'numeric', month: '2-digit', day: '2-digit' };
            const formattedDate = date.toLocaleDateString('fa-IR', options);
            $('#reportDateDisplay').text(formattedDate);
        }
    }

    // Handle Alt+Up/Down for date navigation
    $('#reportDate').on('keydown', function(e) {
        if (e.altKey && (e.keyCode === 38 || e.keyCode === 40)) { // Alt + Up/Down
            e.preventDefault();
            const currentDate = new Date($(this).val());
            
            if (e.keyCode === 38) { // Alt + Up: next day
                currentDate.setDate(currentDate.getDate() + 1);
            } else if (e.keyCode === 40) { // Alt + Down: previous day
                currentDate.setDate(currentDate.getDate() - 1);
            }
            
            // Check if new date is not in the future
            const today = new Date();
            today.setHours(23, 59, 59, 999); // End of today
            
            if (currentDate <= today) {
                const newDateStr = currentDate.toISOString().split('T')[0];
                $(this).val(newDateStr);
                $(this).trigger('change');
            }
        }
    });

    function loadDailyReport() {
        const selectedDate = $('#reportDate').val();
        if (!selectedDate) {
            showAlert('لطفاً تاریخ را انتخاب کنید', 'warning');
            return;
        }

        $('#loadingIndicator').removeClass('d-none');
        $('#reportContent').addClass('d-none');
        $('#noDataMessage').addClass('d-none');

        // Update button states
        $('.btn-outline-primary').prop('disabled', true);

        $.ajax({
            url: '/Reports/GetPoolDailyReport',
            type: 'GET',
            data: { date: selectedDate },
            success: function(response) {
                $('#loadingIndicator').addClass('d-none');
                $('.btn-outline-primary').prop('disabled', false);
                
                // Update next day button state based on selected date
                updateNavigationButtons();

                if (response.success && response.currencies && response.currencies.length > 0) {
                    displayReport(response.currencies, response.date);
                    $('#reportContent').removeClass('d-none');
                    showAlert(`گزارش روز ${selectedDate} با موفقیت بارگذاری شد`, 'success', 3000);
                } else {
                    $('#noDataMessage').removeClass('d-none');
                    showAlert('داده‌ای برای نمایش یافت نشد', 'info');
                }
            },
            error: function(xhr, status, error) {
                $('#loadingIndicator').addClass('d-none');
                $('.btn-outline-primary').prop('disabled', false);
                updateNavigationButtons();
                showAlert('خطا در بارگذاری گزارش. لطفاً دوباره تلاش کنید.', 'danger');
                console.error('Report loading error:', error);
            }
        });
    }

    // Update navigation button states
    function updateNavigationButtons() {
        const selectedDate = new Date($('#reportDate').val());
        const today = new Date();
        today.setHours(23, 59, 59, 999); // End of today
        
        // Disable next day button if selected date is today
        const nextDay = new Date(selectedDate);
        nextDay.setDate(selectedDate.getDate() + 1);
        $('#btnNextDay').prop('disabled', nextDay > today);
    }

    // Helper function to show alerts
    function showAlert(message, type, duration = 5000) {
        const alertId = 'alert-' + Date.now();
        const alertHtml = `
            <div id="${alertId}" class="alert alert-${type} alert-dismissible fade show position-fixed" 
                 style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        $('body').append(alertHtml);
        
        if (duration > 0) {
            setTimeout(() => {
                $(`#${alertId}`).alert('close');
            }, duration);
        }
    }

    function displayReport(currencies, reportDate) {
        const container = $('#currencyCards');
        container.empty();

        // Ensure formatCurrency is available with fallback
        const safeFormatCurrency = window.formatCurrency ? window.formatCurrency : function(val, code) {
            if (val === null || val === undefined || isNaN(val)) return '0';
            return Number(val).toLocaleString('en-US');
        };

        currencies.forEach(function(currency) {
            // Calculate summary statistics for better display
            const profitableTransactions = currency.transactions.filter(t => t.profit > 0).length;
            const lossTransactions = currency.transactions.filter(t => t.profit < 0).length;
            const neutralTransactions = currency.transactions.filter(t => t.profit == 0).length;

            const cardHtml = `
                <div class="col-12 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light text-dark text-center border-bottom">
                            <h5 class="card-title mb-1 fw-bold">${currency.currencyName}</h5>
                            <small class="text-muted">(${currency.currencyCode})</small>
                        </div>
                        <div class="card-body p-3">
                            <!-- Balance Section -->
                            <div class="balance-section mb-3">
                                <div class="text-center">
                                    <h4 class="text-primary mb-2">
                                        <i class="fas fa-wallet me-2"></i>
                                        <span dir="ltr">${safeFormatCurrency(currency.latestBalance, currency.currencyCode)}</span>
                                    </h4>
                                    <small class="text-muted">موجودی پایان روز</small>
                                </div>
                            </div>

                            <!-- Profit Summary -->
                            <div class="profit-summary text-center mb-3">
                                <div class="d-flex justify-content-center align-items-center mb-2">
                                    <span class="badge ${currency.totalDailyProfit >= 0 ? 'bg-success' : 'bg-danger'} px-3 py-2" style="font-size: 0.9em;" dir="ltr">
                                        <i class="fas ${currency.totalDailyProfit >= 0 ? 'fa-arrow-up' : 'fa-arrow-down'} me-1"></i>
                                        ${safeFormatCurrency(currency.totalDailyProfit, currency.currencyCode)}
                                    </span>
                                </div>
                                <small class="text-muted">مجموع سود/زیان روز</small>
                            </div>

                            <!-- Transaction Summary Stats -->
                            <div class="transaction-stats mb-3">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <div class="fw-bold text-success">${profitableTransactions}</div>
                                            <small class="text-muted">سودآور</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <div class="fw-bold text-danger">${lossTransactions}</div>
                                            <small class="text-muted">زیان‌ده</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <div class="fw-bold text-info">${currency.transactionCount}</div>
                                            <small class="text-muted">کل</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-3">

                            <!-- Transactions List -->
                            <div class="transactions-section">
                                <h6 class="mb-3">
                                    <i class="fas fa-exchange-alt me-2"></i>
                                    تراکنش‌های روز (${currency.transactionCount})
                                </h6>
                                <div class="transaction-list" style="max-height: 350px; overflow-y: auto;">
                                    ${currency.transactions.length > 0 ?
                                        currency.transactions.map(t => `
                                            <div class="transaction-item border rounded p-3 mb-2 ${t.profit > 0 ? 'border-success' : t.profit < 0 ? 'border-danger' : 'border-secondary'}" style="background-color: ${t.profit > 0 ? '#f8f9fa' : t.profit < 0 ? '#fff5f5' : '#f8f9fa'};">
                                                <!-- Transaction Header -->
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <div class="transaction-info">
                                                        <div class="fw-bold text-dark">${t.description}</div>
                                                        <small class="text-muted">
                                                            <i class="fas fa-clock me-1"></i>${t.time}
                                                            <span class="ms-2 badge ${t.amount >= 0 ? 'bg-primary' : 'bg-warning'}" style="font-size: 0.7em;">
                                                                ${t.amount >= 0 ? 'خرید' : 'فروش'}
                                                            </span>
                                                        </small>
                                                    </div>
                                                    <div class="profit-indicator">
                                                        <span class="badge ${t.profit > 0 ? 'bg-success' : t.profit < 0 ? 'bg-danger' : 'bg-secondary'}" dir="ltr">
                                                            ${safeFormatCurrency(t.profit, currency.currencyCode)}
                                                        </span>
                                                    </div>
                                                </div>
                                                
                                                <!-- Transaction Details -->
                                                <div class="transaction-details">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <div class="detail-item mb-1">
                                                                <small class="text-muted">مبلغ معامله:</small>
                                                                <div class="fw-bold"><span dir="ltr">${safeFormatCurrency(Math.abs(t.amount), currency.currencyCode)}</span></div>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="detail-item mb-1">
                                                                <small class="text-muted">نرخ معامله:</small>
                                                                <div class="fw-bold"><span dir="ltr">${t.rate !== undefined && t.rate !== null ? safeFormatCurrency(t.rate, currency.currencyCode) : '-'}</span></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="detail-item">
                                                                <small class="text-muted">میانگین نرخ روز:</small>
                                                                <div class="fw-bold text-info"><span dir="ltr">${t.averageRate !== undefined && t.averageRate !== null ? safeFormatCurrency(t.averageRate, currency.currencyCode) : '-'}</span></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        `).join('') :
                                        `<div class="text-center py-4">
                                            <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                                            <p class="text-muted mb-0">هیچ تراکنشی در این روز ثبت نشده</p>
                                         </div>`
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            container.append(cardHtml);
        });
    }

});
</script>
}