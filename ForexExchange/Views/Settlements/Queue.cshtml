@model IEnumerable<ForexExchange.Models.Transaction>

@{
    ViewData["Title"] = "صف تسویه حساب";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">صف تسویه حساب</h1>
                <a asp-action="Index" class="btn btn-secondary">بازگشت به تسویه‌ها</a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock"></i> 
                        تراکنش‌های در انتظار تسویه (@Model.Count())
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>اولویت</th>
                                        <th>شماره</th>
                                        <th>تاریخ ایجاد</th>
                                        <th>خریدار</th>
                                        <th>فروشنده</th>
                                        <th>مبلغ</th>
                                        <th>وضعیت</th>
                                        <th>رسیدها</th>
                                        <th>مدت انتظار</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int priority = 1;
                                    }
                                    @foreach (var item in Model.OrderBy(t => t.CreatedAt))
                                    {
                                        var hoursWaiting = (DateTime.Now - item.CreatedAt).TotalHours;
                                        var priorityClass = hoursWaiting > 24 ? "table-danger" : hoursWaiting > 8 ? "table-warning" : "";
                                        
                                        <tr class="@priorityClass">
                                            <td>
                                                @if (hoursWaiting > 24)
                                                {
                                                    <span class="badge bg-danger">@priority</span>
                                                }
                                                else if (hoursWaiting > 8)
                                                {
                                                    <span class="badge bg-warning text-dark">@priority</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@priority</span>
                                                }
                                            </td>
                                            <td>
                                                <strong>#@item.Id</strong>
                                            </td>
                                            <td>@item.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                            <td>
                                                <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.BuyerCustomerId">
                                                    @item.BuyerCustomer?.FullName
                                                </a>
                                                <br>
                                                <small class="text-muted">@item.BuyerCustomer?.PhoneNumber</small>
                                            </td>
                                            <td>
                                                <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.SellerCustomerId">
                                                    @item.SellerCustomer?.FullName
                                                </a>
                                                <br>
                                                <small class="text-muted">@item.SellerCustomer?.PhoneNumber</small>
                                            </td>
                                            <td>
                                                <strong>@item.Amount.ToString("N0") @item.FromCurrency?.PersianName</strong>
                                                <br>
                                                <small class="text-muted">@item.CurrencyPair</small>
                                                
                                            </td>
                                            <td>
                                                @if (item.Status == ForexExchange.Models.TransactionStatus.Pending)
                                                {
                                                    <span class="badge bg-secondary">در انتظار آغاز</span>
                                                    <br><small>نیاز به آغاز تسویه</small>
                                                }
                                                else if (item.Status == ForexExchange.Models.TransactionStatus.PaymentUploaded)
                                                {
                                                    <span class="badge bg-info">رسید آپلود شده</span>
                                                    <br><small>نیاز به تأیید رسید</small>
                                                }
                                                else if (item.Status == ForexExchange.Models.TransactionStatus.ReceiptConfirmed)
                                                {
                                                    <span class="badge bg-warning">رسید تأیید شده</span>
                                                    <br><small>نیاز به انتقال فروشنده</small>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Receipts?.Any() == true)
                                                {
                                                    <span class="badge bg-primary">@item.Receipts.Count()</span>
                                                    @if (item.Receipts.Any(r => r.IsVerified))
                                                    {
                                                        <span class="badge bg-success">تأیید شده</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">در انتظار تأیید</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">بدون رسید</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var days = (int)hoursWaiting / 24;
                                                    var hours = (int)hoursWaiting % 24;
                                                }
                                                @if (days > 0)
                                                {
                                                    <span class="@(days > 1 ? "text-danger fw-bold" : "text-warning")">
                                                        @days روز @hours ساعت
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="@(hours > 8 ? "text-warning" : "text-muted")">
                                                        @hours ساعت
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group-vertical" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary mb-1">
                                                        مدیریت تسویه
                                                    </a>
                                                    
                                                    @if (item.Status == ForexExchange.Models.TransactionStatus.Pending)
                                                    {
                                                        <form asp-action="Initiate" asp-route-id="@item.Id" method="post">
                                                            <button type="submit" class="btn btn-sm btn-success" 
                                                                    onclick="return confirm('آیا مطمئن هستید؟')">
                                                                آغاز تسویه
                                                            </button>
                                                        </form>
                                                    }
                                                    
                                                    @if (item.Receipts?.Any() == true)
                                                    {
                                                        <a asp-controller="Receipts" asp-action="Index" class="btn btn-sm btn-outline-info mt-1">
                                                            مشاهده رسیدها
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                        priority++;
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Summary Statistics -->
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(t => (DateTime.Now - t.CreatedAt).TotalHours > 24)</h5>
                                        <p class="mb-0">بیش از 24 ساعت</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-dark">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(t => (DateTime.Now - t.CreatedAt).TotalHours > 8 && (DateTime.Now - t.CreatedAt).TotalHours <= 24)</h5>
                                        <p class="mb-0">8-24 ساعت</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(t => t.Status == ForexExchange.Models.TransactionStatus.PaymentUploaded)</h5>
                                        <p class="mb-0">در انتظار تأیید رسید</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-secondary text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(t => t.Status == ForexExchange.Models.TransactionStatus.Pending)</h5>
                                        <p class="mb-0">در انتظار آغاز</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                            <h4 class="text-success">عالی!</h4>
                            <p class="text-muted">هیچ تراکنشی در انتظار تسویه نیست.</p>
                            <a asp-action="Index" class="btn btn-primary">بازگشت به تسویه‌ها</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 30 seconds for real-time updates
        setTimeout(function() {
            location.reload();
        }, 30000);
        
        // Add tooltip to show exact waiting time
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}
