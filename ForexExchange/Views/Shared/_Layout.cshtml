            background: #f1f1f1;
            border-radius: 2px;
        }

        .currency-pool-mobile-scroll .d-flex::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 2px;
        }

        .currency-pool-mobile-scroll .d-flex::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        .currency-pool-mobile-item {
            min-width: 80px;
            margin-right: 10px;
            flex-shrink: 0;
            padding: 8px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            background-color: #f8f9fa;
