        function formatNumber(num) {
            if (num === 0) return '0';
            return num.toLocaleString('en-US', {
                minimumFractionDigits: 0,
                maximumFractionDigits: 2
            });
        }

        // Function to toggle between mobile display modes
        function toggleMobilePoolDisplay() {
            const scrollContainer = $('#currency-pool-mobile-scroll');
            const rowsContainer = $('#currency-pool-mobile-rows');
            
            if (scrollContainer.hasClass('d-none')) {
                // Switch to scroll mode
                scrollContainer.removeClass('d-none');
                rowsContainer.addClass('d-none');
            } else {
                // Switch to rows mode
                scrollContainer.addClass('d-none');
                rowsContainer.removeClass('d-none');
            }
        }

        // Currency Pool Toggle Functionality
        let isPoolMinimized = false;

        function toggleCurrencyPool() {
            const poolSection = $('#currency-pool-section-admin');
            const poolContent = $('#currency-pool-content');
            const toggleBtn = $('.currency-pool-toggle');
            const toggleIcon = $('#currency-pool-toggle-icon');

            if (isPoolMinimized) {
                // Maximize (show) the pool
                poolSection.removeClass('minimizing').addClass('maximizing');
                poolContent.removeClass('collapsed');
                toggleBtn.removeClass('collapsed');
                toggleIcon.removeClass('fa-chevron-up').addClass('fa-chevron-down');
                
                // Update state
                isPoolMinimized = false;
                
                // Store preference
                localStorage.setItem('currencyPoolMinimized', 'false');
                
                // Remove animation class after animation completes
                setTimeout(() => {
                    poolSection.removeClass('maximizing');
                }, 400);
                
            } else {
                // Minimize (hide) the pool
                poolSection.removeClass('maximizing').addClass('minimizing');
                poolContent.addClass('collapsed');
                toggleBtn.addClass('collapsed');
                toggleIcon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
                
                // Update state
                isPoolMinimized = true;
                
                // Store preference
                localStorage.setItem('currencyPoolMinimized', 'true');
                
                // Remove animation class after animation completes
                setTimeout(() => {
                    poolSection.removeClass('minimizing');
                }, 400);
            }
        }

        // Initialize pool state from localStorage
        function initializeCurrencyPoolState() {
            const isMinimized = localStorage.getItem('currencyPoolMinimized') === 'true';
            
            if (isMinimized) {
                const poolContent = $('#currency-pool-content');
                const toggleBtn = $('.currency-pool-toggle');
                const toggleIcon = $('#currency-pool-toggle-icon');
                
                // Set initial minimized state without animation
                poolContent.addClass('collapsed');
                toggleBtn.addClass('collapsed');
                toggleIcon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
                isPoolMinimized = true;
            }
        }
    </script>

