            color: #495057 !important;
            transform: scale(1.1);
        }

        .floating-gear-btn:hover i {
            animation: fastSpin 0.3s linear;
        }

        .floating-gear-btn.active {
            color: #007bff !important;
        }

        @@keyframes fastSpin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* Currency Pool Mobile Styles */
        .currency-pool-mobile-scroll .d-flex {
            overflow-x: auto;
            padding-bottom: 5px;
            /* Webkit scrollbar styling */
            scrollbar-width: thin;
            scrollbar-color: #888 #f1f1f1;
        }

        .currency-pool-mobile-scroll .d-flex::-webkit-scrollbar {
            height: 4px;
        }

