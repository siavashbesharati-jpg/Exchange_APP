        showNotification('Ø®Ø·Ø§ Ø¯Ø± Ø¨Ø±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ø§Ø³ØªØ®Ø± Ø§Ø±Ø²ÛŒ', 'error');
    }).always(function() {
