@model TaskItem

@{
    ViewData["Title"] = "ایجاد وظیفه جدید";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-plus-circle text-primary"></i> ایجاد وظیفه جدید</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["Error"]
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">عنوان وظیفه <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="عنوان وظیفه را وارد کنید" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">توضیحات</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="توضیحات وظیفه را وارد کنید"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label">تاریخ سررسید</label>
                            <input asp-for="DueDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                            <div class="form-text">اختیاری - در صورت عدم انتخاب، بدون سررسید ثبت می‌شود</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AssignedToUserId" class="form-label">تخصیص به کاربر</label>
                            <select asp-for="AssignedToUserId" asp-items="ViewBag.AssignedToUserId" class="form-select">
                                <option value="">-- انتخاب کاربر مسئول --</option>
                            </select>
                            <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
                            <div class="form-text">اختیاری - کاربر مسئول انجام این وظیفه</div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> ایجاد وظیفه
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-right"></i> بازگشت
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}