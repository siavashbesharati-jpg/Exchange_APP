@model TaskItem
@using ForexExchange.Models
@using TaskStatus = ForexExchange.Models.TaskStatus

@{
    ViewData["Title"] = "ویرایش وظیفه - " + Model.Title;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-edit text-warning"></i> ویرایش وظیفه</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["Error"]
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <input asp-for="Id" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">عنوان وظیفه <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="عنوان وظیفه را وارد کنید" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">توضیحات</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="توضیحات وظیفه را وارد کنید"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label">تاریخ سررسید</label>
                            <input asp-for="DueDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                            <div class="form-text">اختیاری - در صورت عدم انتخاب، بدون سررسید ثبت می‌شود</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">وضعیت</label>
                            <select asp-for="Status" class="form-select">
                                <option value="@((int)TaskStatus.Pending)">در انتظار</option>
                                <option value="@((int)TaskStatus.InProgress)">در حال انجام</option>
                                <option value="@((int)TaskStatus.Completed)">تکمیل شده</option>
                                <option value="@((int)TaskStatus.Cancelled)">لغو شده</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AssignedToUserId" class="form-label">تخصیص به کاربر</label>
                            <select asp-for="AssignedToUserId" asp-items="ViewBag.AssignedToUserId" class="form-select">
                                <option value="">-- انتخاب کاربر مسئول --</option>
                            </select>
                            <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
                            <div class="form-text">اختیاری - کاربر مسئول انجام این وظیفه</div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> ذخیره تغییرات
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-eye"></i> مشاهده وظیفه
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-right"></i> بازگشت
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}