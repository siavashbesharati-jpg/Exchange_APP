@{
    ViewData["Title"] = "تست Select2";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>تست عملکرد Select2</h2>
            <p class="text-muted">این صفحه برای تست عملکرد Select2 در تمام dropdown های سیستم طراحی شده است.</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Dropdown ساده</h5>
                </div>
                <div class="card-body">
                    <label class="form-label">انتخاب گزینه:</label>
                    <select class="form-select" id="simpleSelect">
                        <option value="">انتخاب کنید...</option>
                        @foreach (var option in ViewBag.SampleOptions ?? new List<dynamic>())
                        {
                            <option value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Dropdown اجباری</h5>
                </div>
                <div class="card-body">
                    <label class="form-label">انتخاب گزینه (اجباری):</label>
                    <select class="form-select" id="requiredSelect" required>
                        <option value="">انتخاب کنید...</option>
                        @foreach (var option in ViewBag.SampleOptions ?? new List<dynamic>())
                        {
                            <option value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Dropdown چندگانه</h5>
                </div>
                <div class="card-body">
                    <label class="form-label">انتخاب چند گزینه:</label>
                    <select class="form-select" id="multipleSelect" multiple>
                        @foreach (var option in ViewBag.SampleOptions ?? new List<dynamic>())
                        {
                            <option value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Dropdown کوچک</h5>
                </div>
                <div class="card-body">
                    <label class="form-label">انتخاب گزینه (کم آیتم):</label>
                    <select class="form-select" id="smallSelect">
                        <option value="">انتخاب کنید...</option>
                        <option value="1">گزینه اول</option>
                        <option value="2">گزینه دوم</option>
                        <option value="3">گزینه سوم</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>اطلاعات تست</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6>ویژگی‌های Select2 که باید تست شوند:</h6>
                        <ul class="mb-0">
                            <li>جستجو در آیتم‌ها (برای dropdown هایی با بیش از 5 آیتم)</li>
                            <li>پشتیبانی از راست به چپ (RTL)</li>
                            <li>تطبیق با طراحی Bootstrap</li>
                            <li>پشتیبانی از زبان فارسی</li>
                            <li>عملکرد Clear برای dropdown های غیر اجباری</li>
                            <li>انتخاب چندگانه</li>
                        </ul>
                    </div>
                    
                    <button type="button" class="btn btn-primary" onclick="showSelectedValues()">
                        نمایش مقادیر انتخاب شده
                    </button>
                    
                    <button type="button" class="btn btn-secondary" onclick="window.reinitializeSelect2()">
                        راه‌اندازی مجدد Select2
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function showSelectedValues() {
    var values = {
        simple: $('#simpleSelect').val(),
        required: $('#requiredSelect').val(),
        multiple: $('#multipleSelect').val(),
        small: $('#smallSelect').val()
    };
    
    console.log('Selected values:', values);
    
    Swal.fire({
        title: 'مقادیر انتخاب شده',
        html: `
            <div style="text-align: right;">
                <p><strong>Dropdown ساده:</strong> ${values.simple || 'انتخاب نشده'}</p>
                <p><strong>Dropdown اجباری:</strong> ${values.required || 'انتخاب نشده'}</p>
                <p><strong>Dropdown چندگانه:</strong> ${values.multiple ? values.multiple.join(', ') : 'انتخاب نشده'}</p>
                <p><strong>Dropdown کوچک:</strong> ${values.small || 'انتخاب نشده'}</p>
            </div>
        `,
        icon: 'info',
        confirmButtonText: 'باشه'
    });
}
</script>
